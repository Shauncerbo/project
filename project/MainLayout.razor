@code {
    private bool isSidebarOpen = false;
    private bool hideSidebar = false;
    private string currentUserRole = "";
    private bool showLogoutConfirmation = false;

    protected override async Task OnInitializedAsync()
    {
        // Ensure only authenticated users can stay on pages that use this layout.
        // If not authenticated, immediately redirect to the login page.
        if (await AuthService.IsUserAuthenticated())
        {
            currentUserRole = await AuthService.GetCurrentUserRole();
        }
        else
        {
            NavigationManager.NavigateTo("/login", forceLoad: false);
        }
    }


    private bool ShowNavItem(string feature)
    {
        if (string.IsNullOrEmpty(currentUserRole))
        {
            return false;
        }

        var role = currentUserRole.ToLowerInvariant();

        // Admin can see everything
        if (role == "admin")
        {
            return true;
        }

        // Staff: limited navigation
        // Allowed: Dashboard (handled separately), Members, Trainers, Walkins,
        // Member Verification (Attendance), Membership Payments, and Logout (always visible).
        if (role == "staff")
        {
            switch (feature)
            {
                case "Members":
                case "Trainers":
                case "Walkins":
                case "Attendance":
                case "Payments":
                    return true;
                default:
                    return false;
            }
        }

        // Trainers and other roles do not use these admin/staff menus
        return false;
    }

    private bool IsAdmin()
        => string.Equals(currentUserRole, "admin", StringComparison.OrdinalIgnoreCase);

    private bool IsTrainer()
        => string.Equals(currentUserRole, "trainer", StringComparison.OrdinalIgnoreCase);

    private void HandleLogoutClick()
    {
        ShowLogoutConfirmation();
    }

    private void ShowLogoutConfirmation()
    {
        showLogoutConfirmation = true;
        StateHasChanged();
    }

    private void CloseLogoutConfirmation()
    {
        showLogoutConfirmation = false;
        StateHasChanged();
    }

    private async Task ConfirmLogout()
    {
        showLogoutConfirmation = false;
        StateHasChanged();
        
        System.Diagnostics.Debug.WriteLine("DoLogout called!");
        Console.WriteLine("DoLogout called!");
        await AuthService.LogoutAsync();
        currentUserRole = "";
        NavigationManager.NavigateTo("/login", true);
    }

    private async Task DoLogout()
    {
        System.Diagnostics.Debug.WriteLine("DoLogout called!");
        Console.WriteLine("DoLogout called!");
        await AuthService.LogoutAsync();
        currentUserRole = "";
        NavigationManager.NavigateTo("/login", true);
    }

    private void ToggleSidebar() => isSidebarOpen = !isSidebarOpen;
    private void CloseSidebar() => isSidebarOpen = false;

    protected override void OnParametersSet()
    {
        var uri = NavigationManager.Uri.ToLower();
        hideSidebar = uri.Contains("/login") || uri.Contains("/register");
    }
}