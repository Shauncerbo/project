@inherits LayoutComponentBase
@using project.Services
@using project.Components
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.JSInterop
@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@inject IJSRuntime JSRuntime

<div class="dashboard-container">
    <!-- Top bar only visible on small screens -->
    <div class="topbar @(hideSidebar ? "full-width" : "with-sidebar")">
    </div>

    @if (!hideSidebar)
    {
        <!-- Sidebar (responsive) -->
        <div class="sidebar @(isSidebarOpen ? "open" : "")">
            <div class="sidebar-header">
                <img src="/powerhouse_logo.png" class="sidebar-logo" alt="PowerHouse Logo" />
            </div>
            <nav class="sidebar-nav">
                <!-- DASHBOARD GROUP (hide for trainers) -->
                @if (!IsTrainer())
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">DASHBOARD</div>
                        <ul>
                            <li>
                                <NavLink href="/dashboard" class="nav-link" activeClass="active">
                                    <img src="/dashboard_icon.svg" class="sidebar-icon" alt="Dashboard" />
                                    Dashboard
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- TRAINER SCHEDULE (trainer role only) -->
                @if (IsTrainer())
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">SCHEDULE</div>
                        <ul>
                            <li>
                                <NavLink href="/trainer-dashboard" class="nav-link" activeClass="active">
                                    <img src="/calendar_icon.svg" class="sidebar-icon" alt="Schedule" />
                                    Schedule
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- MEMBERS GROUP -->
                @if (ShowNavItem("Members") || ShowNavItem("Trainers") || ShowNavItem("Walkins") || ShowNavItem("Attendance"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">MEMBERS</div>
                        <ul>
                            @if (ShowNavItem("Members"))
                            {
                                <li>
                                    <NavLink href="/members" class="nav-link" activeClass="active">
                                        <img src="/members_icon.svg" class="sidebar-icon" alt="Members" />
                                        Members
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Trainers"))
                            {
                                <li>
                                    <NavLink href="/trainers" class="nav-link" activeClass="active">
                                        <img src="/trainer_icon.svg" class="sidebar-icon" alt="Trainers" />
                                        Trainers
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Walkins"))
                            {
                                <li>
                                    <NavLink href="/walkins" class="nav-link" activeClass="active">
                                        <img src="/walkin_icon.svg" class="sidebar-icon" alt="Walk-ins" />
                                        Walk-ins
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Attendance"))
                            {
                                <li>
                                    <NavLink href="/attendance" class="nav-link" activeClass="active">
                                        <img src="/attendance_icon.svg" class="sidebar-icon" alt="Member Verification" />
                                        Member Verification
                                    </NavLink>
                                </li>
                            }
                        </ul>
                    </div>
                }

                <!-- PAYMENTS GROUP -->
                @if (ShowNavItem("Payments"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">PAYMENTS</div>
                        <ul>
                            <li>
                                <NavLink href="/payment" class="nav-link" activeClass="active">
                                    <img src="/payment_icon.svg" class="sidebar-icon" alt="Membership Payments" />
                                    Membership Payments
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- MARKETING GROUP -->
                @if (ShowNavItem("Promotions"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">MARKETING</div>
                        <ul>
                            <li>
                                <NavLink href="/promotions" class="nav-link" activeClass="active">
                                    <img src="/promotions_icon.svg" class="sidebar-icon" alt="Promotions" />
                                    Promotions
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- MANAGEMENT GROUP -->
                @if (ShowNavItem("MembershipType") || ShowNavItem("Reports"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">MANAGEMENT</div>
                        <ul>
                            @if (ShowNavItem("MembershipType"))
                            {
                                <li>
                                    <NavLink href="/membershiptype" class="nav-link" activeClass="active">
                                        <img src="/Membership_icon.svg" class="sidebar-icon" alt="Membership" />
                                        Membership
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Reports"))
                            {
                                <li>
                                    <NavLink href="/reports" class="nav-link" activeClass="active">
                                        <img src="/report_icon.svg" class="sidebar-icon" alt="Reports" />
                                        Reports
                                    </NavLink>
                                </li>
                            }
                        </ul>
                    </div>
                }

                <!-- SYSTEM GROUP -->
                @if (!string.IsNullOrEmpty(currentUserRole))
                {
                    <div class="sidebar-group sidebar-group-system">
                        <div class="sidebar-group-title">SYSTEM</div>
                        <ul>
                            @if (IsAdmin())
                            {
                                <li>
                                    <NavLink href="/settings" class="nav-link" activeClass="active">
                                        <img src="/settings_icon.svg" class="sidebar-icon" alt="Settings" />
                                        Settings
                                    </NavLink>
                                </li>
                            }
                            <li class="logout-item">
                                <a href="#"
                                   id="logout-btn"
                                   class="nav-link"
                                   @onclick="DoLogout"
                                   @onclick:preventDefault="true">
                                    <img src="/logout_icon.svg" class="sidebar-icon" alt="Logout" />
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </nav>
        </div>

        <!-- Clickable overlay to close sidebar on mobile -->
        <div class="backdrop @(isSidebarOpen ? "show" : "")" @onclick="@CloseSidebar"></div>
    }

    <div class="main-content">
        @Body
    </div>
    
    <!-- Toast Notification - Always rendered -->
    <ToastNotification />
</div>

<style>
    /* === MAIN LAYOUT === */
    .dashboard-container {
        display: flex;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    /* === NAVBAR (HEADER) === */
    .topbar {
        display: flex;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 70px;
        background: #ffffff;
        z-index: 1000;
        align-items: flex-start;
        justify-content: center;
        padding: 12px 15px 0 15px;
        box-shadow: none;
        border-bottom: 1px solid #e6e6e6;
    }

    .topbar.with-sidebar {
        left: 220px;
        right: 0;
        width: calc(100% - 220px);
        justify-content: flex-start;
        padding-left: 0;
    }

    .topbar.full-width {
        left: 0;
        width: 100%;
    }

    .topbar-title {
        color: #1f2b3d;
        font-weight: 700;
        margin-left: 0;
        font-size: 22px;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .menu-button {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 8px;
    }

    /* === SIDEBAR === */
    .sidebar {
        width: 220px;              /* fixed sidebar width */
        background: #234060;
        color: white;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        z-index: 100;
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
        overflow-y: hidden;
        overflow-x: hidden;        /* no horizontal scroll */
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .sidebar-header {
        padding: 12px 10px 12px 10px;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        text-align: center;
        height: 150px;        /* fixed header height */
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;
        overflow: hidden;     /* logo cannot expand header */
    }

    .sidebar-logo {
        max-width: 150px;
        max-height: 150px;
        width: auto;
        height: auto;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }

    .sidebar-nav {
        padding: 4px 0 10px 0;
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: hidden;        /* no scroll; everything fits in viewport */
        overflow-x: hidden;
        min-height: 0;
        box-sizing: border-box;
    }

        .sidebar-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

    .sidebar-group {
        padding: 4px 0 2px 0;
        margin: 2px 0;
        border-top: 1px solid rgba(255,255,255,0.12);
    }

        .sidebar-group:first-of-type {
            border-top: none;
            margin-top: 0;
        }

    .sidebar-group-title {
        padding: 2px 18px 4px 18px;
        font-size: 0.65rem;
        font-weight: 600;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: rgba(255,255,255,0.7);
    }

            .sidebar-nav ul::-webkit-scrollbar {
                width: 8px;
            }

            .sidebar-nav ul::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.1);
            }

            .sidebar-nav ul::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.4);
                border-radius: 4px;
            }

                .sidebar-nav ul::-webkit-scrollbar-thumb:hover {
                    background: rgba(255, 255, 255, 0.6);
                }

        .sidebar-nav li {
            margin: 2px 6px;
            padding: 6px 14px;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: background 0.17s, color 0.17s;
        }

            .sidebar-nav li:not(.logout-item) {
                flex: 0 0 auto;
            }

            .sidebar-nav li.logout-item {
                display: block !important;
            }

            .sidebar-nav li:hover {
                background-color: #3868a7;
                color: #fff;
            }

            .sidebar-nav li:has(.nav-link.active) {
                background-color: #3868a7;
                color: #fff;
            }

    /* === NAVIGATION === */
    .nav-link {
        display: flex;
        align-items: center;
        padding: 0;
        color: #eee;
        text-decoration: none;
        border-left: 4px solid transparent;
        font-size: 0.95rem;
        font-weight: 500;
        transition: background 0.17s, color 0.17s;
        width: 100%;
        height: 100%;
    }

        .nav-link:hover {
            background: transparent;
            color: #eee;
        }

        .nav-link.active {
            background: transparent;
            border-left: 4px solid transparent;
            font-weight: 500;
        }

    .sidebar-icon {
        width: 22px;
        height: 22px;
        margin-right: 14px;
        filter: brightness(0) invert(1);
        flex-shrink: 0;
        display: block;
        vertical-align: middle;
    }

    .nav-link.active .sidebar-icon {
        filter: brightness(0) invert(1) sepia(1) saturate(5) hue-rotate(85deg);
    }

    /* Logout shares the same layout as other nav links; no extra styles needed */

    /* === MAIN CONTENT === */
    .main-content {
        flex: 1;
        margin-left: 220px;
        margin-top: 70px;
        padding: 30px;
        background: #ffffff;
        min-height: calc(100vh - 70px);
        width: calc(100% - 220px);
    }

    /* === BACKDROP === */
    .backdrop {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        z-index: 99;
    }

        .backdrop.show {
            display: block;
        }

    /* === RESPONSIVE === */
    @@media (max-width: 1024px) {
        .topbar.with-sidebar {
            left: 0;
            width: 100%;
            justify-content: center;
            padding-left: 15px;
        }
    }

    @@media (max-width: 768px) {
        .sidebar {
            top: 70px;
            transform: translateX(-100%);
            height: calc(100vh - 70px);
        }

            .sidebar.open {
                transform: translateX(0);
            }

        .main-content {
            margin-left: 0;
            margin-top: 70px;
            width: 100%;
            padding: 20px;
        }
    }
</style>

@code {
    private bool isSidebarOpen = false;
    private bool hideSidebar = false;
    private string currentUserRole = "";

    protected override async Task OnInitializedAsync()
    {
        // Get user role for role-based navigation
        if (await AuthService.IsUserAuthenticated())
        {
            currentUserRole = await AuthService.GetCurrentUserRole();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var objRef = DotNetObjectReference.Create(this);
                await JSRuntime.InvokeVoidAsync("setupLogoutButton", objRef);
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"JS setup error: {ex.Message}");
            }
        }
    }

    [JSInvokable]
    public async Task HandleLogoutFromJS()
    {
        System.Diagnostics.Debug.WriteLine("*** JavaScript click detected! Calling DoLogout ***");
        Console.WriteLine("*** JavaScript click detected! Calling DoLogout ***");
        await DoLogout();
    }

    private bool ShowNavItem(string feature)
    {
        return currentUserRole?.ToLower() == "admin";
    }

    private bool IsAdmin()
        => string.Equals(currentUserRole, "admin", StringComparison.OrdinalIgnoreCase);

    private bool IsTrainer()
        => string.Equals(currentUserRole, "trainer", StringComparison.OrdinalIgnoreCase);

    private async Task DoLogout()
    {
        System.Diagnostics.Debug.WriteLine("DoLogout called!");
        Console.WriteLine("DoLogout called!");
        await AuthService.LogoutAsync();
        currentUserRole = "";
        NavigationManager.NavigateTo("/login", true);
    }

    private void ToggleSidebar() => isSidebarOpen = !isSidebarOpen;
    private void CloseSidebar() => isSidebarOpen = false;

    protected override void OnParametersSet()
    {
        var uri = NavigationManager.Uri.ToLower();
        hideSidebar = uri.Contains("/login") || uri.Contains("/register");
    }
}