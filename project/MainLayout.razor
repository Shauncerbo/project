@inherits LayoutComponentBase
@using project.Services
@using project.Components
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager NavigationManager
@inject IAuthService AuthService

<div class="dashboard-container">
    <!-- Top bar only visible on small screens -->
    <div class="topbar @(hideSidebar ? "full-width" : "with-sidebar")">
    </div>

    @if (!hideSidebar)
    {
        <!-- Sidebar (responsive) -->
        <div class="sidebar @(isSidebarOpen ? "open" : "")">
            <div class="sidebar-header">
                <img src="/powerhouse_logo.png" class="sidebar-logo" alt="PowerHouse Logo" />
            </div>
            <nav class="sidebar-nav">
                <!-- DASHBOARD GROUP (hide for trainers) -->
                @if (!IsTrainer())
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">DASHBOARD</div>
                        <ul>
                            <li>
                                <NavLink href="/dashboard" class="nav-link" activeClass="active">
                                    <img src="/dashboard_icon.svg" class="sidebar-icon" alt="Dashboard" />
                                    Dashboard
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- TRAINER SCHEDULE (trainer role only) -->
                @if (IsTrainer())
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">SCHEDULE</div>
                        <ul>
                            <li>
                                <NavLink href="/trainer-dashboard" class="nav-link" activeClass="active">
                                    <img src="/calendar_icon.svg" class="sidebar-icon" alt="Schedule" />
                                    Schedule
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- MEMBERS GROUP -->
                @if (ShowNavItem("Members") || ShowNavItem("Trainers") || ShowNavItem("Walkins") || ShowNavItem("Attendance"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">MEMBERS</div>
                        <ul>
                            @if (ShowNavItem("Members"))
                            {
                                <li>
                                    <NavLink href="/members" class="nav-link" activeClass="active">
                                        <img src="/members_icon.svg" class="sidebar-icon" alt="Members" />
                                        Members
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Trainers"))
                            {
                                <li>
                                    <NavLink href="/trainers" class="nav-link" activeClass="active">
                                        <img src="/trainer_icon.svg" class="sidebar-icon" alt="Trainers" />
                                        Trainers
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Walkins"))
                            {
                                <li>
                                    <NavLink href="/walkins" class="nav-link" activeClass="active">
                                        <img src="/walkin_icon.svg" class="sidebar-icon" alt="Walk-ins" />
                                        Walk-ins
                                    </NavLink>
                                </li>
                            }
                            @if (ShowNavItem("Attendance"))
                            {
                                <li>
                                    <NavLink href="/attendance" class="nav-link" activeClass="active">
                                        <img src="/attendance_icon.svg" class="sidebar-icon" alt="Member Verification" />
                                        Member Verification
                                    </NavLink>
                                </li>
                            }
                        </ul>
                    </div>
                }

                <!-- PAYMENTS GROUP -->
                @if (ShowNavItem("Payments"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">PAYMENTS</div>
                        <ul>
                            <li>
                                <NavLink href="/payment" class="nav-link" activeClass="active">
                                    <img src="/payment_icon.svg" class="sidebar-icon" alt="Payments" />
                                    Payments
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- MARKETING GROUP -->
                @if (ShowNavItem("Promotions"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">MARKETING</div>
                        <ul>
                            <li>
                                <NavLink href="/promotions" class="nav-link" activeClass="active">
                                    <img src="/promotions_icon.svg" class="sidebar-icon" alt="Promotions" />
                                    Promotions
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- REPORTS GROUP -->
                @if (ShowNavItem("Reports"))
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">REPORTS</div>
                        <ul>
                            <li>
                                <NavLink href="/reports/financial" class="nav-link" activeClass="active">
                                    <img src="/report_icon.svg" class="sidebar-icon" alt="Financial Reports" />
                                    Financial Reports
                                </NavLink>
                            </li>
                            <li>
                                <NavLink href="/reports/membership" class="nav-link" activeClass="active">
                                    <img src="/report_icon.svg" class="sidebar-icon" alt="Members Report" />
                                    Members Report
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- ADMINISTRATION GROUP -->
                @if (IsAdmin())
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">ADMINISTRATION</div>
                        <ul>
                            <li>
                                <NavLink href="/administration" class="nav-link" activeClass="active" Match="NavLinkMatch.All">
                                    <img src="/settings_icon.svg" class="sidebar-icon" alt="User Accounts" />
                                    User Accounts
                                </NavLink>
                            </li>
                            <li>
                                <NavLink href="/administration/archived" class="nav-link" activeClass="active" Match="NavLinkMatch.All">
                                    <img src="/archived_icon.svg" class="sidebar-icon" alt="Archived Users" />
                                    Archived Users
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- CONFIGURATION GROUP -->
                @if (IsAdmin())
                {
                    <div class="sidebar-group">
                        <div class="sidebar-group-title">CONFIGURATION</div>
                        <ul>
                            @if (ShowNavItem("MembershipType"))
                            {
                                <li>
                                    <NavLink href="/membershiptype" class="nav-link" activeClass="active">
                                        <img src="/Membership_icon.svg" class="sidebar-icon" alt="Plans & Pricing" />
                                        Plans & Pricing
                                    </NavLink>
                                </li>
                            }
                            <li>
                                <NavLink href="/system-settings/paymongo" class="nav-link" activeClass="active">
                                    <img src="/payment_icon.svg" class="sidebar-icon" alt="PayMongo Settings" />
                                    PayMongo Settings
                                </NavLink>
                            </li>
                            <li>
                                <NavLink href="/system-settings/email" class="nav-link" activeClass="active">
                                    <img src="/settings_icon.svg" class="sidebar-icon" alt="Email Settings" />
                                    Email Settings
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }

                <!-- SYSTEM GROUP -->
                @if (!string.IsNullOrEmpty(currentUserRole))
                {
                    <div class="sidebar-group sidebar-group-system">
                        <div class="sidebar-group-title">SYSTEM</div>
                        <ul>
                            @if (IsAdmin())
                            {
                                <li>
                                    <NavLink href="/audit-logs" class="nav-link" activeClass="active">
                                        <img src="/Audit_logs.svg" class="sidebar-icon" alt="Audit Logs" />
                                        Audit Logs
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink href="/sync-database" class="nav-link" activeClass="active">
                                        <img src="/database_icon.svg" class="sidebar-icon" alt="Database Sync" />
                                        Database Sync
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink href="/settings" class="nav-link" activeClass="active">
                                        <img src="/settings_icon.svg" class="sidebar-icon" alt="System Archive" />
                                        System Archive
                                    </NavLink>
                                </li>
                            }
                            <li class="logout-item" @onclick="HandleLogoutClick" @onclick:preventDefault>
                                <NavLink href="/logout" class="nav-link">
                                    <img src="/logout_icon.svg" class="sidebar-icon" alt="Logout" />
                                    Logout
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                }
            </nav>
        </div>

        <!-- Clickable overlay to close sidebar on mobile -->
        <div class="backdrop @(isSidebarOpen ? "show" : "")" @onclick="@CloseSidebar"></div>
    }

    <div class="main-content">
        @Body
    </div>
    
    <!-- Toast Notification - Always rendered -->
    <ToastNotification />
</div>

<!-- Logout Confirmation Modal -->
@if (showLogoutConfirmation)
{
    <div class="modal-overlay" @onclick="CloseLogoutConfirmation">
        <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>Logout</h2>
                <button class="close-btn" @onclick="CloseLogoutConfirmation">×</button>
            </div>
            <div class="modal-body">
                <div class="confirmation-content text-only">
                    <h3>Confirm Logout</h3>
                    <p>Are you sure you want to logout?</p>
                    <p class="confirmation-warning">You will need to login again to access the system.</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-cancel" @onclick="CloseLogoutConfirmation">Cancel</button>
                <button class="btn btn-primary" @onclick="ConfirmLogout">
                    Yes, Logout
                </button>
            </div>
        </div>
    </div>
}

<style>
