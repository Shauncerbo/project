@inherits LayoutComponentBase

<div class="dashboard-container">
    <div class="sidebar">
        <div class="sidebar-header">
            <img src="/powerhouse_logo.png" class="sidebar-logo" alt="PowerHouse Logo" />
        </div>
        <nav class="sidebar-nav">
            <ul>
                <li><NavLink href="/dashboard" class="nav-link" activeClass="active"><span class="sidebar-icon">🏠</span> Dashboard</NavLink></li>
                <li><NavLink href="/members" class="nav-link" activeClass="active"><span class="sidebar-icon">👥</span> Members</NavLink></li>
                <li><NavLink href="/trainers" class="nav-link" activeClass="active"><span class="sidebar-icon">🏋️</span> Trainers</NavLink></li>
                <li><NavLink href="/attendance" class="nav-link" activeClass="active"><span class="sidebar-icon">🗓️</span> Attendance</NavLink></li>
                <li><NavLink href="/payment" class="nav-link" activeClass="active"><span class="sidebar-icon">💳</span> Payment</NavLink></li>
                <li><NavLink href="/promotions" class="nav-link" activeClass="active"><span class="sidebar-icon">🏷️</span> Promotions</NavLink></li>
                <li><NavLink href="/reports" class="nav-link" activeClass="active"><span class="sidebar-icon">📄</span> Reports</NavLink></li>
                <li><NavLink href="/settings" class="nav-link" activeClass="active"><span class="sidebar-icon">⚙️</span> Settings</NavLink></li>
            </ul>
        </nav>
        <div class="sidebar-footer">
            <div class="sidebar-logout" @onclick="Logout">
                <span class="sidebar-icon">🚪</span> Logout
            </div>
        </div>
    </div>
    <div class="main-content">
        @Body
    </div>
</div>

<style>
    .dashboard-container {
        display: flex;
        height: 100vh;
        font-family: Arial, sans-serif;
        overflow: hidden;
    }

    .sidebar {
        width: 300px;
        background-color: #234060;
        color: #fff;
        display: flex;
        flex-direction: column;
        padding: 0;
        box-shadow: 2px 0 8px #0001;
        height: 100vh;
        overflow: hidden; /* Changed from auto to hidden */
    }

    /* Compact logo header */
    .sidebar-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px 0;
        min-height: 140px; /* Reduced height */
        max-height: 140px;
        background-color: #1a3450;
        border-bottom: 2px solid #345;
        flex-shrink: 0;
    }

    /* Slightly smaller logo */
    .sidebar-logo {
        display: block;
        width: 200px;
        height: 200px;
        object-fit: contain;
        margin: 0 auto;
    }

    /* Navigation area - no scroll */
    .sidebar-nav {
        flex: 1;
        overflow: hidden; /* No scrolling */
        padding: 5px 0;
    }

        .sidebar-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .sidebar-nav li {
            display: flex;
            align-items: center;
            padding: 10px 28px; /* Reduced padding */
            cursor: pointer;
            border-radius: 8px;
            margin: 3px 10px; /* Reduced margin */
            font-size: 1.05rem; /* Slightly smaller font */
            transition: background 0.17s, color 0.17s;
            flex-shrink: 0;
        }

            .sidebar-nav li:hover,
            .sidebar-nav li.active {
                background-color: #3868a7;
                color: #fff;
            }

    .sidebar-icon {
        margin-right: 16px;
        width: 19px;
        text-align: center;
        font-size: 1.2em; /* Slightly smaller icons */
    }

    /* Footer with logout */
    .sidebar-footer {
        flex-shrink: 0;
        border-top: 1.5px solid #345;
        padding: 10px 0;
    }

    .sidebar-logout {
        display: flex;
        align-items: center;
        padding: 12px 28px; /* Reduced padding */
        cursor: pointer;
        border-radius: 8px;
        margin: 0 10px;
        font-size: 1.05rem; /* Slightly smaller font */
        transition: background 0.15s, color 0.15s;
        color: #eee;
    }

        .sidebar-logout:hover {
            background: #2b3657;
            color: #ff4455;
        }

    .main-content {
        flex: 1;
        padding: 40px;
        background-color: #f0f4f8;
        overflow-y: auto;
    }

    .nav-link {
        color: inherit;
        text-decoration: none;
        width: 100%;
        display: flex;
        align-items: center;
        height: 100%;
    }
</style>

@code {
    [Inject] NavigationManager NavigationManager { get; set; }

    private void Logout()
    {
        NavigationManager.NavigateTo("/login");
    }
}