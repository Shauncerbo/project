@page "/reports/leads"
@layout MainLayout
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Context
@inject IJSRuntime JSRuntime

<div class="leads-report">
    <div class="reports-header">
        <h1>Leads Report</h1>
        <div class="date-filter">
            <label>Period:</label>
            <select @bind="selectedPeriod" @bind:after="OnPeriodChanged" class="period-select">
                <option value="today">Today</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="year">This Year</option>
                <option value="custom">Custom Range</option>
            </select>
            @if (selectedPeriod == "custom")
            {
                <input type="date" @bind="customStartDate" @bind:after="OnPeriodChanged" class="date-input" />
                <span>to</span>
                <input type="date" @bind="customEndDate" @bind:after="OnPeriodChanged" class="date-input" />
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-message">Loading leads reports...</div>
    }
    else
    {
        <!-- Print Header -->
        <div class="print-header leads-print-header">
            <div class="print-header-top">
                <div class="print-gym-name">PowerHouse Gym</div>
                <div class="print-date-time">@DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</div>
            </div>
            <div class="print-footer">Printed by: Admin</div>
        </div>

        <div id="leads-reports-content">
            <!-- Quick Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card leads">
                    <div class="stat-info">
                        <div class="stat-text">
                            <h3>Total Leads</h3>
                            <div class="stat-breakdown">
                                <span>New @GetPeriodLabel(): @newLeads</span>
                            </div>
                        </div>
                        <div class="stat-number">@totalLeads</div>
                    </div>
                </div>

                <div class="stat-card conversion">
                    <div class="stat-info">
                        <div class="stat-text">
                            <h3>Conversion Rate</h3>
                            <div class="stat-breakdown">
                                <span>Converted: @convertedLeads</span>
                                <span class="conversion-goal">Goal: 20%</span>
                            </div>
                            <div class="conversion-progress-bar">
                                <div class="conversion-progress-fill" style="width: @(Math.Min(conversionRate / 20.0 * 100, 100))%"></div>
                            </div>
                        </div>
                        <div class="stat-number">@(conversionRate.ToString("F1"))%</div>
                    </div>
                </div>
            </div>

            <!-- Leads Reports Section -->
            <div class="reports-section" id="leads-reports-section">
                <div class="section-header">
                    <h2>Leads Reports</h2>
                    <div class="export-buttons">
                        <button class="export-btn print-btn" @onclick="PrintLeadsReports" title="Print Leads Reports">
                            <span></span> Print
                        </button>
                    </div>
                </div>

                <div class="reports-grid">
                    <!-- Leads by Status - Donut Chart -->
                    <div class="report-card chart-card">
                        <h3>Leads by Status</h3>
                        <div class="report-content chart-content">
                            @if (!leadsByStatus.Any())
                            {
                                <div class="no-data">No leads data available.</div>
                            }
                            else
                            {
                                <div class="chart-wrapper">
                                    <div class="chart-container-donut">
                                        <canvas id="leadsByStatusChart"></canvas>
                                    </div>
                                    <div class="chart-legend">
                                        @foreach (var status in leadsByStatus)
                                        {
                                            <div class="legend-item">
                                                <span class="legend-color" style="background-color: @GetStatusColor(status.Status)"></span>
                                                <span class="legend-label">@status.Status</span>
                                                <span class="legend-value">@status.Count (@(status.Percentage.ToString("F1"))%)</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Leads by Source - Donut Chart -->
                    <div class="report-card chart-card">
                        <h3>Leads by Source</h3>
                        <div class="report-content chart-content">
                            @if (!leadsBySource.Any())
                            {
                                <div class="no-data">No leads data available.</div>
                            }
                            else
                            {
                                <div class="chart-wrapper">
                                    <div class="chart-container-donut">
                                        <canvas id="leadsBySourceChart"></canvas>
                                    </div>
                                    <div class="chart-legend">
                                        @foreach (var source in leadsBySource)
                                        {
                                            <div class="legend-item">
                                                <span class="legend-color" style="background-color: @GetSourceColor(source.Source)"></span>
                                                <span class="legend-label">@(source.Source ?? "Not Specified")</span>
                                                <span class="legend-value">@source.Count (@(source.Percentage.ToString("F1"))%)</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Lost Leads Reason - Bar Chart -->
                    <div class="report-card chart-card">
                        <h3>Lost Leads Breakdown</h3>
                        <div class="report-content chart-content">
                            @if (!lostLeadsBreakdown.Any())
                            {
                                <div class="no-data">No lost leads data available.</div>
                            }
                            else
                            {
                                <div class="chart-container-bar">
                                    <canvas id="lostLeadsChart"></canvas>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Leads Over Time Chart -->
                    <div class="report-card full-width">
                        <h3>Leads Over Time</h3>
                        <div class="report-content">
                            <div class="chart-container" style="position: relative; height: 350px; margin-bottom: 20px;">
                                <canvas id="leadsOverTimeChart"></canvas>
                            </div>
                            @if (!leadsChartLabels.Any() || !leadsChartData.Any())
                            {
                                <div class="no-data" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">No leads data available for the selected period</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

