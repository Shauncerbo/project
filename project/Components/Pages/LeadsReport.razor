    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(500);
        }

        if (leadsChartLabels.Any() && leadsChartData.Any() && !leadsChartInitialized)
        {
            await InitializeLeadsChart();
        }

        if (leadsByStatus.Any() && !statusChartInitialized)
        {
            await InitializeStatusChart();
        }

        if (leadsBySource.Any() && !sourceChartInitialized)
        {
            await InitializeSourceChart();
        }

        if (lostLeadsBreakdown.Any() && !lostLeadsChartInitialized)
        {
            await InitializeLostLeadsChart();
        }

        await base.OnAfterRenderAsync(firstRender);
    }
