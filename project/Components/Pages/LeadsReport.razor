    private string GetStatusColor(string status)
    {
        var statusLower = status.ToLower();
        return statusLower switch
        {
            var s when s.Contains("new") || s == "active" => "#1976d2",
            var s when s.Contains("contact") => "#f57c00",
            var s when s.Contains("qualif") => "#388e3c",
            var s when s.Contains("convert") => "#2e7d32",
            var s when s.Contains("lost") => "#c62828",
            _ => "#757575"
        };
    }

    private string GetSourceColor(string? source)
    {
        if (string.IsNullOrEmpty(source))
            return "#757575";
            
        var sourceLower = source.ToLower();
        return sourceLower switch
        {
            "facebook" => "#1877f2",
            "instagram" => "#e4405f",
            "google" => "#4285f4",
            "referral" => "#4caf50",
            "walk-in" => "#ff9800",
            "promotion" => "#9c27b0",
            "website" => "#00bcd4",
            _ => "#757575"
        };
    }

    private string GetLeadStatusClass(string status)
    {
        var statusLower = status.ToLower();
        if (statusLower.Contains("new") || statusLower == "active")
            return "new";
        if (statusLower.Contains("contact"))
            return "contacted";
        if (statusLower.Contains("qualif"))
            return "qualified";
        if (statusLower.Contains("convert"))
            return "converted";
        if (statusLower.Contains("lost"))
            return "lost";
        return "new";
    }

