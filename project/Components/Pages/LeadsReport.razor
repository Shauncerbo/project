@code {
    private string selectedPeriod = "month";
    private DateTime? customStartDate = DateTime.Today.AddDays(-30);
    private DateTime? customEndDate = DateTime.Today;
    private bool isLoading = true;

    // Leads report variables
    private int totalLeads = 0;
    private int newLeads = 0;
    private int convertedLeads = 0;
    private double conversionRate = 0;
    private List<LeadStatusCount> leadsByStatus = new();
    private List<LeadSourceCount> leadsBySource = new();
    private List<LostLeadReason> lostLeadsBreakdown = new();
    private List<string> leadsChartLabels = new();
    private List<int> leadsChartData = new();
    private List<int> convertedChartData = new();
    private bool leadsChartInitialized = false;
    private bool statusChartInitialized = false;
    private bool sourceChartInitialized = false;
    private bool lostLeadsChartInitialized = false;

    private class LeadStatusCount
    {
        public string Status { get; set; } = string.Empty;
        public int Count { get; set; }
        public double Percentage { get; set; }
    }

    private class LeadSourceCount
    {
        public string? Source { get; set; }
        public int Count { get; set; }
        public double Percentage { get; set; }
    }

    private class LostLeadReason
    {
        public string Reason { get; set; } = string.Empty;
        public int Count { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadReportData();
    }

    private async Task OnPeriodChanged()
    {
        await LoadReportData();
    }

    private (DateTime start, DateTime end) GetDateRange()
    {
        var today = DateTime.Today;
        return selectedPeriod switch
        {
            "today" => (today, today.AddDays(1).AddSeconds(-1)),
            "week" => (today.AddDays(-(int)today.DayOfWeek), today.AddDays(1).AddSeconds(-1)),
            "month" => (new DateTime(today.Year, today.Month, 1), today.AddDays(1).AddSeconds(-1)),
            "year" => (new DateTime(today.Year, 1, 1), today.AddDays(1).AddSeconds(-1)),
            "custom" => (customStartDate ?? today.AddDays(-30), customEndDate ?? today),
            _ => (today.AddDays(-30), today)
        };
    }

    private string GetPeriodLabel()
    {
        return selectedPeriod switch
        {
            "today" => "Today",
            "week" => "This Week",
            "month" => "This Month",
            "year" => "This Year",
            "custom" => "Custom Period",
            _ => "This Month"
        };
    }

    private async Task LoadReportData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var (startDate, endDate) = GetDateRange();
            await LoadLeadsReportData(startDate, endDate);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading reports: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadLeadsReportData(DateTime startDate, DateTime endDate)
    {
        try
        {
            // Load all leads (not archived)
            var allLeads = await Context.Leads
                .Where(l => !l.IsArchived)
                .ToListAsync();

            totalLeads = allLeads.Count;

            // New leads in period
            newLeads = allLeads.Count(l => l.CreatedDate >= startDate && l.CreatedDate <= endDate);

            // Converted leads (status = "Converted" or similar)
            convertedLeads = allLeads.Count(l => l.Status.ToLower().Contains("convert") || l.Status == "Converted");
            conversionRate = totalLeads > 0 ? (convertedLeads / (double)totalLeads) * 100 : 0;

            // Leads by status
            var statusGroups = allLeads
                .GroupBy(l => l.Status)
                .Select(g => new LeadStatusCount
                {
                    Status = g.Key,
                    Count = g.Count(),
                    Percentage = totalLeads > 0 ? (g.Count() / (double)totalLeads) * 100 : 0
                })
                .OrderByDescending(s => s.Count)
                .ToList();
            leadsByStatus = statusGroups;

            // Leads by source
            var sourceGroups = allLeads
                .GroupBy(l => l.LeadSource)
                .Select(g => new LeadSourceCount
                {
                    Source = g.Key,
                    Count = g.Count(),
                    Percentage = totalLeads > 0 ? (g.Count() / (double)totalLeads) * 100 : 0
                })
                .OrderByDescending(s => s.Count)
                .ToList();
            leadsBySource = sourceGroups;

            // Lost leads breakdown (leads that are not converted)
            var lostLeads = allLeads
                .Where(l => !l.Status.ToLower().Contains("convert") && l.Status.ToLower() != "converted")
                .ToList();
            
            // Group lost leads by status (as proxy for reason)
            lostLeadsBreakdown = lostLeads
                .GroupBy(l => l.Status)
                .Select(g => new LostLeadReason
                {
                    Reason = g.Key,
                    Count = g.Count()
                })
                .OrderByDescending(l => l.Count)
                .ToList();

            // Load all chart data
            await LoadLeadsChartData(startDate, endDate);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading leads report data: {ex.Message}");
        }
    }

    private async Task LoadLeadsChartData(DateTime startDate, DateTime endDate)
    {
        try
        {
            leadsChartLabels.Clear();
            leadsChartData.Clear();

            var totalDays = (endDate - startDate).TotalDays;
            
            if (totalDays < 1)
            {
                totalDays = 1;
            }

            int numberOfPeriods;
            string periodFormat;

            if (totalDays <= 7)
            {
                numberOfPeriods = Math.Max(1, (int)Math.Ceiling(totalDays));
                periodFormat = "MMM dd";
            }
            else if (totalDays <= 90)
            {
                numberOfPeriods = Math.Min(12, Math.Max(1, (int)Math.Ceiling(totalDays / 7)));
                periodFormat = "MMM dd";
            }
            else
            {
                numberOfPeriods = Math.Min(12, Math.Max(1, (int)Math.Ceiling(totalDays / 30)));
                periodFormat = "MMM yyyy";
            }

            for (int i = 0; i < numberOfPeriods; i++)
            {
                DateTime periodStart, periodEnd;
                string periodLabel;

                if (totalDays <= 7)
                {
                    periodStart = startDate.AddDays(i);
                    periodEnd = i < numberOfPeriods - 1 ? periodStart.AddDays(1).AddSeconds(-1) : endDate;
                    periodLabel = periodStart.ToString(periodFormat);
                }
                else if (totalDays <= 90)
                {
                    var weekStart = startDate.AddDays(i * 7);
                    periodStart = weekStart;
                    periodEnd = i < numberOfPeriods - 1 ? weekStart.AddDays(7).AddSeconds(-1) : endDate;
                    if (periodEnd > endDate) periodEnd = endDate;
                    periodLabel = $"{periodStart.ToString(periodFormat)} - {periodEnd.ToString(periodFormat)}";
                }
                else
                {
                    periodStart = startDate.AddMonths(i);
                    periodEnd = i < numberOfPeriods - 1 ? periodStart.AddMonths(1).AddSeconds(-1) : endDate;
                    if (periodEnd > endDate) periodEnd = endDate;
                    periodLabel = periodStart.ToString(periodFormat);
                }

                var count = await Context.Leads
                    .CountAsync(l => !l.IsArchived && l.CreatedDate >= periodStart && l.CreatedDate <= periodEnd);
                
                // Count converted leads (members created from leads in this period)
                var convertedCount = await Context.Members
                    .CountAsync(m => !m.IsArchived && m.JoinDate >= periodStart && m.JoinDate <= periodEnd);

                leadsChartLabels.Add(periodLabel);
                leadsChartData.Add(count);
                convertedChartData.Add(convertedCount);
            }

            if (!leadsChartLabels.Any())
            {
                leadsChartLabels.Add(startDate.ToString("MMM dd, yyyy"));
                leadsChartData.Add(0);
                convertedChartData.Add(0);
            }

            leadsChartInitialized = false;
            StateHasChanged();
            await Task.Delay(500);
            await InitializeLeadsChart();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading leads chart data: {ex.Message}");
            if (!leadsChartLabels.Any())
            {
                leadsChartLabels.Add("No Data");
                leadsChartData.Add(0);
                convertedChartData.Add(0);
            }
        }
    }

