@page "/reports/membership"
@layout MainLayout
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Context
@inject IJSRuntime JSRuntime

<div class="membership-report">
    <div class="reports-header">
        <h1>Members Report</h1>
        <div class="date-filter">
            <label>Period:</label>
            <select @bind="selectedPeriod" @bind:after="OnPeriodChanged" class="period-select">
                <option value="today">Today</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="year">This Year</option>
                <option value="custom">Custom Range</option>
            </select>
            @if (selectedPeriod == "custom")
            {
                <input type="date" @bind="customStartDate" @bind:after="OnPeriodChanged" class="date-input" />
                <span>to</span>
                <input type="date" @bind="customEndDate" @bind:after="OnPeriodChanged" class="date-input" />
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-message">Loading membership reports...</div>
    }
    else
    {
        <!-- Print Header -->
        <div class="print-header membership-print-header">
            <div class="print-header-top">
                <div class="print-gym-name">PowerHouse Gym</div>
                <div class="print-date-time">@DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</div>
            </div>
            <div class="print-footer">Printed by: Admin</div>
        </div>

        <div id="membership-reports-content">
            <!-- Quick Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card members">
                    <div class="stat-info">
                        <div class="stat-text">
                            <h3>Active Members</h3>
                            <div class="stat-breakdown">
                                <span>New @GetPeriodLabel(): @newMembers</span>
                                <span>Upcoming Renewals: @expiringMembers</span>
                            </div>
                        </div>
                        <div class="stat-number">@activeMembers</div>
                    </div>
                </div>

                <div class="stat-card attendance">
                    <div class="stat-info">
                        <div class="stat-text">
                            <h3>Total Check-ins</h3>
                            <div class="stat-breakdown">
                                <span>Peak Day: @peakAttendanceDay (@peakAttendanceCount visits)</span>
                            </div>
                        </div>
                        <div class="stat-number">@totalAttendance</div>
                    </div>
                </div>
            </div>

            <!-- Business Performance Overview - Membership -->
            <div class="reports-section">
                <div class="section-header">
                    <h2>Business Performance Overview</h2>
                </div>
                <div class="performance-overview">
                    <div class="performance-card">
                        <div class="performance-header">
                            <h3>New Members</h3>
                            <span class="performance-indicator @(newMembersDirection == "Growing" ? "success" : newMembersDirection == "Declining" ? "danger" : "warning")">
                                @if (newMembersDirection == "Growing")
                                {
                                    <span>↑</span>
                                }
                                else if (newMembersDirection == "Declining")
                                {
                                    <span>↓</span>
                                }
                                else
                                {
                                    <span>→</span>
                                }
                                @newMembersDirection
                            </span>
                        </div>
                        <div class="performance-content">
                            <div class="performance-metric">
                                <span>Current Period:</span>
                                <span class="amount">@currentPeriodNewMembers</span>
                            </div>
                            <div class="performance-metric">
                                <span>Previous Period:</span>
                                <span>@previousPeriodNewMembers</span>
                            </div>
                            <div class="performance-metric">
                                <span>Change:</span>
                                <span class="@(newMembersChangePercent >= 0 ? "success" : "danger")">
                                    @(newMembersChangePercent >= 0 ? "+" : "")@(newMembersChangePercent.ToString("F1"))%
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="performance-card">
                        <div class="performance-header">
                            <h3>Attendance Trends</h3>
                            <span class="performance-indicator @(attendanceDirection == "Growing" ? "success" : attendanceDirection == "Declining" ? "danger" : "warning")">
                                @if (attendanceDirection == "Growing")
                                {
                                    <span>↑</span>
                                }
                                else if (attendanceDirection == "Declining")
                                {
                                    <span>↓</span>
                                }
                                else
                                {
                                    <span>→</span>
                                }
                                @attendanceDirection
                            </span>
                        </div>
                        <div class="performance-content">
                            <div class="performance-metric">
                                <span>Current Period:</span>
                                <span class="amount">@currentPeriodAttendance</span>
                            </div>
                            <div class="performance-metric">
                                <span>Previous Period:</span>
                                <span>@previousPeriodAttendance</span>
                            </div>
                            <div class="performance-metric">
                                <span>Change:</span>
                                <span class="@(attendanceChangePercent >= 0 ? "success" : "danger")">
                                    @(attendanceChangePercent >= 0 ? "+" : "")@(attendanceChangePercent.ToString("F1"))%
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="performance-card">
                        <div class="performance-header">
                            <h3>Renewal Activity</h3>
                            <span class="performance-indicator @(renewalDirection == "Growing" ? "success" : renewalDirection == "Declining" ? "danger" : "warning")">
                                @if (renewalDirection == "Growing")
                                {
                                    <span>↑</span>
                                }
                                else if (renewalDirection == "Declining")
                                {
                                    <span>↓</span>
                                }
                                else
                                {
                                    <span>→</span>
                                }
                                @renewalDirection
                            </span>
                        </div>
                        <div class="performance-content">
                            <div class="performance-metric">
                                <span>Renewal Rate:</span>
                                <span class="amount">@(renewalRate.ToString("F1"))%</span>
                            </div>
                            <div class="performance-metric">
                                <span>Churn Rate:</span>
                                <span class="@(churnRate < 10 ? "success" : churnRate < 20 ? "warning" : "danger")">@(churnRate.ToString("F1"))%</span>
                            </div>
                            <div class="performance-metric">
                                <span>Overall Status:</span>
                                <span class="@(overallPerformance == "Improving" ? "success" : overallPerformance == "Dropping" ? "danger" : "warning")">@overallPerformance</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Membership Reports Section -->
            <div class="reports-section" id="membership-reports-section">
                <div class="section-header">
                    <h2>Membership Reports</h2>
                    <div class="export-buttons">
                        <button class="export-btn print-btn" @onclick="PrintMembershipReports" title="Print Membership Reports">
                            <span></span> Print
                        </button>
                    </div>
                </div>

                <div class="reports-grid">
                    <!-- Member Retention -->
                    <div class="report-card" id="member-retention">
                        <h3>Member Retention</h3>
                        <div class="report-content">
                            <div class="report-item">
                                <span>Active Members:</span>
                                <span class="success">@activeMembers</span>
                            </div>
                            <div class="report-item">
                                <span>Inactive (30+ days):</span>
                                <span class="warning">@inactiveMembers</span>
                            </div>
                            <div class="report-item">
                                <span>Renewal Rate:</span>
                                <span>@(renewalRate.ToString("F1"))%</span>
                            </div>
                            <div class="report-item">
                                <span>Avg. Membership Duration:</span>
                                <span>@averageMembershipDuration days</span>
                            </div>
                        </div>
                    </div>

                    <!-- Membership Type Popularity -->
                    <div class="report-card">
                        <h3>Membership Type Popularity</h3>
                        <div class="report-content">
                            @foreach (var pop in membershipPopularity)
                            {
                                <div class="report-item">
                                    <span>@pop.TypeName:</span>
                                    <span>@pop.MemberCount members</span>
                                </div>
                                <div class="report-item sub-item">
                                    <span>Revenue:</span>
                                    <span class="amount">₱@(pop.Revenue.ToString("N2"))</span>
                                </div>
                                <div class="report-item sub-item">
                                    <span>Popularity:</span>
                                    <span>@(pop.PopularityPercentage.ToString("F1"))%</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Attendance Patterns -->
                    <div class="report-card" id="attendance-patterns">
                        <h3>Attendance Patterns</h3>
                        <div class="report-content">
                            <div class="report-item">
                                <span>Total Check-ins:</span>
                                <span>@totalAttendance</span>
                            </div>
                            <div class="report-item">
                                <span>Peak Day:</span>
                                <span>@peakAttendanceDay</span>
                            </div>
                            <div class="report-item">
                                <span>Peak Time:</span>
                                <span>@peakAttendanceTime</span>
                            </div>
                            <div class="report-item">
                                <span>Avg. Visits/Member:</span>
                                <span>@(averageVisitsPerMember.ToString("F1"))</span>
                            </div>
                            <div class="report-item">
                                <span>Most Active Day:</span>
                                <span>@mostActiveDay</span>
                            </div>
                        </div>
                    </div>

                    <!-- New Members Report -->
                    <div class="report-card full-width">
                        <h3>New Members Report</h3>
                        <div class="report-content">
                            <div class="reports-table-wrapper">
                                <table class="members-table reports-table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Contact</th>
                                            <th>Join Date</th>
                                            <th>Membership Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!newMembersReport.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="no-data">No new members found for this period.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var member in newMembersReport)
                                            {
                                                <tr>
                                                    <td>@member.Name</td>
                                                    <td>@member.Email</td>
                                                    <td>@member.ContactNumber</td>
                                                    <td>@member.JoinDate.ToString("MM/dd/yyyy")</td>
                                                    <td>@member.MembershipType</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Expired & Expiring Memberships Report -->
                    <div class="report-card full-width">
                        <h3>Expired & Expiring Memberships Report</h3>
                        <div class="report-content">
                            <h4 class="table-subtitle">Expiring Memberships (Next 30 Days)</h4>
                            <div class="reports-table-wrapper">
                                <table class="members-table reports-table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Expiration Date</th>
                                            <th>Days Until Expiration</th>
                                            <th>Membership Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!expiringMembersReport.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="no-data">No members expiring in the next 30 days.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var member in expiringMembersReport)
                                            {
                                                <tr>
                                                    <td>@member.Name</td>
                                                    <td>@member.Email</td>
                                                    <td>@(member.ExpirationDate?.ToString("MM/dd/yyyy") ?? "N/A")</td>
                                                    <td>
                                                        <span class="@(member.DaysUntilExpiration <= 7 ? "danger" : member.DaysUntilExpiration <= 14 ? "warning" : "")">
                                                            @member.DaysUntilExpiration days
                                                        </span>
                                                    </td>
                                                    <td>@member.MembershipType</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <h4 class="table-subtitle" style="margin-top: 30px;">Expired Memberships</h4>
                            <div class="reports-table-wrapper">
                                <table class="members-table reports-table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Expiration Date</th>
                                            <th>Days Since Expiration</th>
                                            <th>Membership Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (expiredMembersTable == null || !expiredMembersTable.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="no-data">No expired members found.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var member in expiredMembersTable.Take(50))
                                            {
                                                <tr>
                                                    <td>@($"{member.FirstName} {member.LastName}")</td>
                                                    <td>@member.Email</td>
                                                    <td>@(member.ExpirationDate?.ToString("MM/dd/yyyy") ?? "N/A")</td>
                                                    <td>
                                                        <span class="danger">
                                                            @(member.ExpirationDate.HasValue ? (DateTime.Today - member.ExpirationDate.Value.Date).Days : 0) days
                                                        </span>
                                                    </td>
                                                    <td>@member.MembershipType?.TypeName</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Inactive Members Report -->
                    <div class="report-card full-width">
                        <h3>Inactive Members Report</h3>
                        <div class="report-content">
                            <div style="margin-bottom: 15px;">
                                <label>Inactive Threshold: </label>
                                <select @bind="inactiveDaysThreshold" @bind:after="OnPeriodChanged" style="padding: 5px; margin-left: 10px;">
                                    <option value="30">30 days</option>
                                    <option value="60">60 days</option>
                                    <option value="90">90 days</option>
                                </select>
                                <span style="margin-left: 10px; color: #666;">Members who haven't checked in for @inactiveDaysThreshold+ days</span>
                            </div>
                            <div class="reports-table-wrapper">
                                <table class="members-table reports-table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Last Check-in</th>
                                            <th>Days Since Last Check-in</th>
                                            <th>Membership Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!inactiveMembersReport.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="no-data">No inactive members found.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var member in inactiveMembersReport)
                                            {
                                                <tr>
                                                    <td>@member.Name</td>
                                                    <td>@member.Email</td>
                                                    <td>@(member.LastCheckIn?.ToString("MM/dd/yyyy") ?? "Never")</td>
                                                    <td>
                                                        <span class="@(member.DaysSinceLastCheckIn >= 90 ? "danger" : member.DaysSinceLastCheckIn >= 60 ? "warning" : "")">
                                                            @member.DaysSinceLastCheckIn days
                                                        </span>
                                                    </td>
                                                    <td>@member.MembershipType</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Retention Rate Report -->
                    <div class="report-card">
                        <h3>Retention Rate Report</h3>
                        <div class="report-content">
                            <div class="report-item">
                                <span>Renewal Rate:</span>
                                <span class="@(renewalRate >= 70 ? "success" : renewalRate >= 50 ? "warning" : "danger")">
                                    @(renewalRate.ToString("F1"))%
                                </span>
                            </div>
                            <div class="report-item">
                                <span>Active Members:</span>
                                <span class="success">@activeMembers</span>
                            </div>
                            <div class="report-item">
                                <span>Avg. Membership Duration:</span>
                                <span>@averageMembershipDuration days</span>
                            </div>
                        </div>
                    </div>

                    <!-- Churn Rate Report -->
                    <div class="report-card full-width">
                        <h3>Churn Rate Report</h3>
                        <div class="report-content">
                            <div style="margin-bottom: 15px;">
                                <div class="report-item">
                                    <span>Churn Rate:</span>
                                    <span class="@(churnRate < 10 ? "success" : churnRate < 20 ? "warning" : "danger")">
                                        @(churnRate.ToString("F1"))%
                                    </span>
                                </div>
                                <div class="report-item">
                                    <span>Churned Members (Last 6 Months):</span>
                                    <span class="danger">@churnMembersReport.Count</span>
                                </div>
                            </div>
                            <h4 class="table-subtitle">Churned Members (Did Not Renew)</h4>
                            <div class="reports-table-wrapper">
                                <table class="members-table reports-table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Expiration Date</th>
                                            <th>Days Since Expiration</th>
                                            <th>Membership Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!churnMembersReport.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="no-data">No churned members found.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var member in churnMembersReport)
                                            {
                                                <tr>
                                                    <td>@member.Name</td>
                                                    <td>@member.Email</td>
                                                    <td>@(member.ExpirationDate?.ToString("MM/dd/yyyy") ?? "N/A")</td>
                                                    <td>@member.DaysSinceExpiration days</td>
                                                    <td>@member.MembershipType</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

