    private async Task LoadNewMembersChartData(DateTime startDate, DateTime endDate)
    {
        try
        {
            newMembersChartLabels.Clear();
            newMembersChartData.Clear();

            var totalDays = (endDate - startDate).TotalDays;
            
            // Ensure we have at least one period
            if (totalDays < 1)
            {
                totalDays = 1;
            }

            int numberOfPeriods;
            string periodFormat;

            if (totalDays <= 7)
            {
                numberOfPeriods = Math.Max(1, (int)Math.Ceiling(totalDays));
                periodFormat = "MMM dd";
            }
            else if (totalDays <= 90)
            {
                numberOfPeriods = Math.Min(12, Math.Max(1, (int)Math.Ceiling(totalDays / 7)));
                periodFormat = "MMM dd";
            }
            else
            {
                numberOfPeriods = Math.Min(12, Math.Max(1, (int)Math.Ceiling(totalDays / 30)));
                periodFormat = "MMM yyyy";
            }

            for (int i = 0; i < numberOfPeriods; i++)
            {
                DateTime periodStart, periodEnd;
                string periodLabel;

                if (totalDays <= 7)
                {
                    periodStart = startDate.AddDays(i);
                    periodEnd = i < numberOfPeriods - 1 ? periodStart.AddDays(1).AddSeconds(-1) : endDate;
                    periodLabel = periodStart.ToString(periodFormat);
                }
                else if (totalDays <= 90)
                {
                    var weekStart = startDate.AddDays(i * 7);
                    periodStart = weekStart;
                    periodEnd = i < numberOfPeriods - 1 ? weekStart.AddDays(7).AddSeconds(-1) : endDate;
                    if (periodEnd > endDate) periodEnd = endDate;
                    periodLabel = $"{periodStart.ToString(periodFormat)} - {periodEnd.ToString(periodFormat)}";
                }
                else
                {
                    periodStart = startDate.AddMonths(i);
                    periodEnd = i < numberOfPeriods - 1 ? periodStart.AddMonths(1).AddSeconds(-1) : endDate;
                    if (periodEnd > endDate) periodEnd = endDate;
                    periodLabel = periodStart.ToString(periodFormat);
                }

                var count = await Context.Members
                    .CountAsync(m => !m.IsArchived && m.JoinDate >= periodStart && m.JoinDate <= periodEnd);

                newMembersChartLabels.Add(periodLabel);
                newMembersChartData.Add(count);
            }

            // Ensure we have at least one data point (even if 0)
            if (!newMembersChartLabels.Any())
            {
                newMembersChartLabels.Add(startDate.ToString("MMM dd, yyyy"));
                newMembersChartData.Add(0);
            }

            newMembersChartInitialized = false;
            StateHasChanged();
            await Task.Delay(500);
            await InitializeNewMembersChart();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading new members chart data: {ex.Message}");
            // Add fallback data
            if (!newMembersChartLabels.Any())
            {
                newMembersChartLabels.Add("No Data");
                newMembersChartData.Add(0);
            }
        }
    }

