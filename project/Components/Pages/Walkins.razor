@code {
    private string searchQuery = "";
    private bool showWalkinModal = false;
    private bool isEditMode = false;
    private WalkIn currentWalkin = new WalkIn();
    private List<WalkIn> walkins = new List<WalkIn>();
    private List<WalkIn> filteredWalkins = new List<WalkIn>();
    private List<Trainer> availableTrainers = new List<Trainer>();
    private List<TrainerScheduleModel> trainerSchedules = new();
    private List<TrainerScheduleModel> visibleSchedules = new();
    private int selectedTrainerScheduleId = 0;
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();
    private bool isLoading = false;
    private bool isInitializingTrainerSelection = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTrainersFromDatabase();
        await LoadTrainerSchedules();
        await LoadWalkinsFromDatabase();
    }

    private async Task LoadWalkinsFromDatabase()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            walkins = await Context.WalkIns
                .Where(w => w.IsArchived == false)
                .Include(w => w.Trainer)
                .Include(w => w.TrainerSchedule)
                .ToListAsync();
            filteredWalkins = walkins;
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading walk-ins: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadTrainersFromDatabase(int? includeTrainerId = null)
    {
        try
        {
            // Load all trainers (same as Payment page) - trainers can be assigned to multiple members/walk-ins
            availableTrainers = await Context.Trainers
                .AsNoTracking()
                .OrderBy(t => t.LastName)
                .ThenBy(t => t.FirstName)
                .ToListAsync();

            // If editing and trainer is already selected, ensure it's in the list
            if (includeTrainerId.HasValue && !availableTrainers.Any(t => t.TrainerID == includeTrainerId.Value))
            {
                var currentTrainer = await Context.Trainers
                    .AsNoTracking()
                    .FirstOrDefaultAsync(t => t.TrainerID == includeTrainerId.Value);
                if (currentTrainer != null)
                {
                    availableTrainers.Add(currentTrainer);
                    availableTrainers = availableTrainers
                        .OrderBy(t => t.LastName)
                        .ThenBy(t => t.FirstName)
                        .ToList();
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading trainers: {ex.Message}");
        }
    }

    private async Task LoadTrainerSchedules(int? includeScheduleId = null)
    {
        IQueryable<TrainerSchedule> query = Context.TrainerSchedules
            .AsNoTracking()
            .Include(ts => ts.Trainer);

        if (includeScheduleId.HasValue)
        {
            query = query.Where(ts => ts.IsAvailable || ts.TrainerScheduleID == includeScheduleId.Value);
        }
        else
        {
            query = query.Where(ts => ts.IsAvailable);
        }

        trainerSchedules = await query
            .OrderBy(ts => ts.DayOfWeek)
            .ThenBy(ts => ts.StartTime)
            .ToListAsync();
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredWalkins = walkins;
        }
        else
        {
            filteredWalkins = walkins.Where(w =>
                (w.FirstName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (w.MiddleName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (w.LastName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                GetFullName(w).Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                (w.Trainer != null && w.Trainer.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) ||
                (w.PaymentMethod?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false)
            ).ToList();
        }
    }

    private string GetFullName(WalkIn walkin)
    {
        if (walkin == null) return "";
        
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(walkin.FirstName)) parts.Add(walkin.FirstName);
        if (!string.IsNullOrWhiteSpace(walkin.MiddleName)) parts.Add(walkin.MiddleName);
        if (!string.IsNullOrWhiteSpace(walkin.LastName)) parts.Add(walkin.LastName);
        
        return string.Join(" ", parts);
    }

    private void OnTrainerChanged()
    {
        if (currentWalkin.TrainerID.HasValue)
        {
            visibleSchedules = trainerSchedules
                .Where(ts => ts.TrainerID == currentWalkin.TrainerID.Value)
                .ToList();
            if (isInitializingTrainerSelection && currentWalkin.TrainerScheduleID.HasValue &&
                visibleSchedules.Any(ts => ts.TrainerScheduleID == currentWalkin.TrainerScheduleID.Value))
            {
                selectedTrainerScheduleId = currentWalkin.TrainerScheduleID.Value;
            }
            else
            {
                selectedTrainerScheduleId = 0;
                currentWalkin.TrainerScheduleID = null;
            }
        }
        else
        {
            visibleSchedules = new();
            selectedTrainerScheduleId = 0;
            currentWalkin.TrainerScheduleID = null;
        }
        OnScheduleChanged();
    }

    private void OnScheduleChanged()
    {
        currentWalkin.TrainerScheduleID = selectedTrainerScheduleId > 0
            ? selectedTrainerScheduleId
            : null;
    }

    private async Task OpenAddWalkinModal()
    {
        isEditMode = false;
        currentWalkin = new WalkIn
        {
            VisitDate = DateTime.Now,
            PaymentMethod = "Cash",
            TrainerID = null,
            TrainerScheduleID = null
        };
        selectedTrainerScheduleId = 0;
        visibleSchedules = new();
        validationErrors.Clear();
        showWalkinModal = true;
        await LoadTrainersFromDatabase(null);
        await LoadTrainerSchedules();
        OnTrainerChanged();
        StateHasChanged();
    }

    private async Task EditWalkin(WalkIn walkin)
    {
        isEditMode = true;
        currentWalkin = new WalkIn
        {
            WalkInID = walkin.WalkInID,
            FirstName = walkin.FirstName,
            MiddleName = walkin.MiddleName,
            LastName = walkin.LastName,
            VisitDate = walkin.VisitDate,
            PaymentAmount = walkin.PaymentAmount,
            PaymentMethod = walkin.PaymentMethod ?? "Cash",
            TrainerID = walkin.TrainerID,
            TrainerScheduleID = walkin.TrainerScheduleID
        };
        selectedTrainerScheduleId = walkin.TrainerScheduleID ?? 0;
        validationErrors.Clear();
        showWalkinModal = true;
        await LoadTrainersFromDatabase(currentWalkin.TrainerID);
        await LoadTrainerSchedules(selectedTrainerScheduleId == 0 ? null : selectedTrainerScheduleId);
        isInitializingTrainerSelection = true;
        OnTrainerChanged();
        isInitializingTrainerSelection = false;
        StateHasChanged();
    }

    private WalkIn? selectedWalkin;
    private bool showWalkinArchiveConfirmation = false;

    private void ConfirmWalkinArchive(WalkIn walkin)
    {
        selectedWalkin = walkin;
        showWalkinArchiveConfirmation = true;
        StateHasChanged();
    }

    private void CloseWalkinArchiveConfirmation()
    {
        showWalkinArchiveConfirmation = false;
        selectedWalkin = null;
        StateHasChanged();
    }

    private async Task ArchiveWalkin()
    {
        if (selectedWalkin == null)
            return;

        try
        {
            var walkinToArchive = await Context.WalkIns.FindAsync(selectedWalkin.WalkInID);
            if (walkinToArchive != null)
            {
                walkinToArchive.IsArchived = true;
                Context.WalkIns.Update(walkinToArchive);
                await Context.SaveChangesAsync();
                await LoadWalkinsFromDatabase();
                await LoadTrainersFromDatabase();
                CloseWalkinArchiveConfirmation();
                await JSRuntime.InvokeVoidAsync("alert", "Walk-in archived successfully!");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error archiving walk-in: {ex.Message}");
        }
    }

    private void ValidateWalkin()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentWalkin.FirstName))
        {
            validationErrors["FirstName"] = "First name is required";
        }

        if (string.IsNullOrWhiteSpace(currentWalkin.LastName))
        {
            validationErrors["LastName"] = "Last name is required";
        }

        if (currentWalkin.PaymentAmount <= 0)
        {
            validationErrors["PaymentAmount"] = "Payment amount must be greater than 0";
        }

        if (currentWalkin.VisitDate > DateTime.Now)
        {
            validationErrors["VisitDate"] = "Visit date cannot be in the future";
        }

        if (string.IsNullOrWhiteSpace(currentWalkin.PaymentMethod))
        {
            validationErrors["PaymentMethod"] = "Payment method is required";
        }

        if (currentWalkin.TrainerID.HasValue)
        {
            if (selectedTrainerScheduleId <= 0)
            {
                validationErrors["TrainerScheduleID"] = "Please select a schedule for the trainer";
            }
        }
        else
        {
            currentWalkin.TrainerScheduleID = null;
            selectedTrainerScheduleId = 0;
        }

        if (validationErrors.Count > 0)
        {
            validationErrors["General"] = "Please fill in all required fields correctly";
        }
    }

    private async Task SaveWalkin()
    {
        ValidateWalkin();

        if (validationErrors.Count > 0)
        {
            StateHasChanged();
            return;
        }

        try
        {
        if (isEditMode)
        {
                var existingWalkin = await Context.WalkIns.FindAsync(currentWalkin.WalkInID);
            if (existingWalkin != null)
            {
                    existingWalkin.FirstName = currentWalkin.FirstName;
                    existingWalkin.MiddleName = currentWalkin.MiddleName;
                    existingWalkin.LastName = currentWalkin.LastName;
                existingWalkin.VisitDate = currentWalkin.VisitDate;
                existingWalkin.PaymentAmount = currentWalkin.PaymentAmount;
                existingWalkin.PaymentMethod = currentWalkin.PaymentMethod;
                existingWalkin.TrainerID = currentWalkin.TrainerID;
                existingWalkin.TrainerScheduleID = currentWalkin.TrainerScheduleID;
                existingWalkin.TrainerScheduleID = currentWalkin.TrainerScheduleID;
                    Context.WalkIns.Update(existingWalkin);
            }
        }
        else
        {
                Context.WalkIns.Add(currentWalkin);
        }

            await Context.SaveChangesAsync();
            await LoadWalkinsFromDatabase();
            await LoadTrainersFromDatabase();
            await LoadTrainerSchedules();
        CloseModal();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error saving walk-in: {ex.Message}");
            validationErrors["General"] = $"Error saving walk-in: {ex.Message}";
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        showWalkinModal = false;
        currentWalkin = new WalkIn();
        validationErrors.Clear();
        selectedTrainerScheduleId = 0;
        visibleSchedules = new();
        StateHasChanged();
    }
}

@if (showWalkinArchiveConfirmation)
{
    <div class="modal-overlay" @onclick="CloseWalkinArchiveConfirmation">
        <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>Archive Walk-in</h2>
                <button class="close-btn" @onclick="CloseWalkinArchiveConfirmation">×</button>
            </div>

            <div class="modal-body">
                <div class="confirmation-content text-only">
                    <h3>Archive Walk-in</h3>
                    <p>You are about to archive <strong>@GetFullName(selectedWalkin)</strong>.</p>
                    <div class="confirmation-warning-box">
                        This will remove the walk-in from the active list. Continue?
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-cancel" @onclick="CloseWalkinArchiveConfirmation">Cancel</button>
                <button class="btn btn-danger" @onclick="ArchiveWalkin">Yes, Archive Walk-in</button>
            </div>
        </div>
    </div>
}