@page "/walkins"
@layout MainLayout
@using System.Diagnostics
@using System.Linq
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@inject IDbContextFactory<AppDbContext> DbContextFactory
@inject IToastService ToastService
@inject IPayMongoService PayMongoService
@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@using project.Models
@using project.Data
@using Microsoft.EntityFrameworkCore
@using project.Services
@using TrainerScheduleModel = project.Models.TrainerSchedule

<div class="members-container">
    <!-- Loading Indicator -->
    @if (isLoading)
    {
        <div class="loading-overlay">
            <div class="loading-spinner">Loading walk-ins...</div>
        </div>
    }

    <!-- Page Header - title only (search/add moved below like Members table) -->
    <div class="page-header">
        <h1 class="page-title">Walk-in Customers</h1>
    </div>

    <!-- Walk-ins Data Table -->
    <div class="table-container">
        <div class="table-toolbar">
            <span class="table-title">Walk-in Customers</span>
            <input type="text"
                   class="search-bar"
                   placeholder="Search walk-ins..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddWalkinModal">+ Add Walk-in</button>
        </div>
        <table class="members-table">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>VISIT DATE</th>
                    <th>PAYMENT AMOUNT</th>
                    <th>PAYMENT METHOD</th>
                    <th>TRAINER</th>
                    <th class="actions-header">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredWalkins == null || !filteredWalkins.Any())
                {
                    <tr>
                        <td colspan="6" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">🚶‍♂️</span>
                                <p>No walk-in customers found</p>
                                <p class="no-data-sub">Add your first walk-in customer</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var walkin in PaginatedWalkins)
                    {
                        <tr>
                            <td>
                                <div class="member-info">
                                    @{
                                        var fullName = GetFullName(walkin);
                                        var initial = !string.IsNullOrEmpty(fullName) ? fullName.Substring(0, 1).ToUpper() : "?";
                                    }
                                    <div class="member-avatar">@initial</div>
                                    <span>@fullName</span>
                                </div>
                            </td>
                            <td>@walkin.VisitDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td class="amount-cell">
                                <span class="payment-amount">₱@walkin.PaymentAmount.ToString("N2")</span>
                            </td>
                            <td>
                                <span class="payment-method-tag">@walkin.PaymentMethod</span>
                            </td>
                            <td>
                                <div class="trainer-info">
                                    @if (walkin.TrainerID.HasValue && walkin.Trainer != null)
                                    {
                                        <div class="trainer-name">@walkin.Trainer.FullName</div>
                                        <div class="trainer-specialty">@walkin.Trainer.Specialty</div>
                                        @if (walkin.TrainerSchedule != null)
                                        {
                                            <div class="trainer-schedule">@walkin.TrainerSchedule.DisplayText</div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="no-trainer">No trainer assigned</span>
                                    }
                                </div>
                            </td>
                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <button class="action-btn convert-btn" @onclick="() => ConvertToMember(walkin)" title="Convert to Member">
                                        <img src="/convert_icon.svg" class="action-icon" alt="Convert to Member" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        
        <!-- Pagination Controls for Walk-ins -->
        @if (filteredWalkins != null && filteredWalkins.Any() && TotalPages > 1)
        {
            <div class="pagination-container">
                <div class="pagination-info">
                    Showing @((currentPage - 1) * itemsPerPage + 1) - @(Math.Min(currentPage * itemsPerPage, filteredWalkins.Count)) of @filteredWalkins.Count
                </div>
                <div class="pagination-controls">
                    <button class="pagination-btn" 
                            @onclick="PreviousPage" 
                            disabled="@(currentPage == 1)">
                        Previous
                    </button>
                    @foreach (var pageNum in GetPageNumbers(currentPage, TotalPages))
                    {
                        @if (pageNum == -1)
                        {
                            <span class="pagination-ellipsis">...</span>
                        }
                        else
                        {
                            <button class="pagination-btn @(pageNum == currentPage ? "active" : "")" 
                                    @onclick="() => GoToPage(pageNum)">
                                @pageNum
                            </button>
                        }
                    }
                    <button class="pagination-btn" 
                            @onclick="NextPage" 
                            disabled="@(currentPage == TotalPages)">
                        Next
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Add/Edit Walk-in Modal -->
    @if (showWalkinModal)
    {
        <div class="modal-overlay" @onclick="CloseModal" @onfocusin="OnModalFocus">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Walk-in" : "Add Walk-in Customer")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">
                    <!-- Name Fields - 3 columns like Member modal -->
                    <div class="form-row">
                        <div class="form-group">
                            <label class="required">First Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("FirstName") ? "error" : "")"
                                   @bind="currentWalkin.FirstName"
                                   placeholder="Enter first name" />
                            @if (validationErrors.ContainsKey("FirstName"))
                            {
                                <div class="error-message">@validationErrors["FirstName"]</div>
                            }
                        </div>

                        <div class="form-group">
                            <label>Middle Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("MiddleName") ? "error" : "")"
                                   @bind="currentWalkin.MiddleName"
                                   placeholder="Enter middle name (optional)" />
                            @if (validationErrors.ContainsKey("MiddleName"))
                            {
                                <div class="error-message">@validationErrors["MiddleName"]</div>
                            }
                        </div>

                        <div class="form-group">
                            <label class="required">Last Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("LastName") ? "error" : "")"
                                   @bind="currentWalkin.LastName"
                                   placeholder="Enter last name" />
                            @if (validationErrors.ContainsKey("LastName"))
                            {
                                <div class="error-message">@validationErrors["LastName"]</div>
                            }
                        </div>
                    </div>

                    <!-- Visit Date -->
                    <div class="form-group">
                        <label class="required">Visit Date & Time</label>
                        <input type="datetime-local"
                               class="form-control @(validationErrors.ContainsKey("VisitDate") ? "error" : "")"
                               @bind="currentWalkin.VisitDate"
                               @bind:format="yyyy-MM-ddTHH:mm"
                               readonly />
                        @if (validationErrors.ContainsKey("VisitDate"))
                        {
                            <div class="error-message">@validationErrors["VisitDate"]</div>
                        }
                    </div>

                    <!-- Payment Amount -->
                    <div class="form-group">
                        <label class="required">Payment Amount (₱)</label>
                        @if (!isEditMode)
                        {
                            <input type="number"
                                   step="0.01"
                                   class="form-control @(validationErrors.ContainsKey("PaymentAmount") ? "error" : "")"
                                   @bind="currentWalkin.PaymentAmount"
                                   placeholder="Enter payment amount"
                                   readonly />
                            <small style="color: #666; font-size: 12px; margin-top: 5px; display: block;">
                                Price is automatically set from Plans & Pricing configuration.
                            </small>
                        }
                        else
                        {
                            <input type="number"
                                   step="0.01"
                                   class="form-control @(validationErrors.ContainsKey("PaymentAmount") ? "error" : "")"
                                   @bind="currentWalkin.PaymentAmount"
                                   placeholder="Enter payment amount" />
                        }
                        @if (validationErrors.ContainsKey("PaymentAmount"))
                        {
                            <div class="error-message">@validationErrors["PaymentAmount"]</div>
                        }
                    </div>

                    <!-- Payment Method -->
                    <div class="form-group">
                        <label class="required">Payment Method</label>
                        <div class="select-wrapper">
                            <select class="form-control select-dropdown @(validationErrors.ContainsKey("PaymentMethod") ? "error" : "")" @bind="currentWalkin.PaymentMethod" @bind:after="OnPaymentMethodChanged">
                                <option value="Cash">Cash</option>
                                <option value="PayMongo">PayMongo</option>
                            </select>
                            <span class="dropdown-arrow">▼</span>
                        </div>
                        @if (validationErrors.ContainsKey("PaymentMethod"))
                        {
                            <div class="error-message">@validationErrors["PaymentMethod"]</div>
                        }
                        @if (currentWalkin.PaymentMethod == "PayMongo")
                        {
                            <div class="paymongo-info">
                                <p><strong>Online Payment:</strong> Customer will be redirected to PayMongo to complete payment via GCash, PayMaya, Credit Card, or other methods.</p>
                            </div>
                        }
                    </div>

                    
                    <!-- Trainer Assignment -->
                    <div class="form-group">
                        <label>Assign Trainer (Optional)</label>
                        <div class="select-wrapper">
                            <select class="form-control select-dropdown" @bind="currentWalkin.TrainerID" @bind:after="OnTrainerChanged">
                                <option value="">Select a trainer (optional)</option>
                                @foreach (var trainer in availableTrainers)
                                {
                                    <option value="@trainer.TrainerID">@trainer.FullName - @trainer.Specialty</option>
                                }
                            </select>
                            <span class="dropdown-arrow">▼</span>
                        </div>
                    </div>

                    @if (currentWalkin.TrainerID.HasValue)
                    {
                        <div class="form-group">
                            <label class="required">Preferred Schedule</label>
                            @if (visibleSchedules.Any())
                            {
                                <div class="select-wrapper">
                                    <select class="form-control select-dropdown @(validationErrors.ContainsKey("TrainerScheduleID") ? "error" : "")"
                                            @bind="selectedTrainerScheduleId"
                                            @bind:after="OnScheduleChanged">
                                        <option value="0">Select schedule</option>
                                        @foreach (var schedule in visibleSchedules)
                                        {
                                            <option value="@schedule.TrainerScheduleID">@schedule.DisplayText</option>
                                        }
                                    </select>
                                    <span class="dropdown-arrow">▼</span>
                                </div>
                                @if (validationErrors.ContainsKey("TrainerScheduleID"))
                                {
                                    <div class="error-message">@validationErrors["TrainerScheduleID"]</div>
                                }
                            }
                            else
                            {
                                <div class="info-box">
                                    <span class="info-icon">ℹ️</span>
                                    <div class="info-content">
                                        <strong>No schedule available</strong>
                                        <p>This trainer has no schedule configured yet.</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- General error message -->
                    @if (validationErrors.ContainsKey("General"))
                    {
                        <div class="general-error-message">
                            @validationErrors["General"]
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal" disabled="@(isProcessingPayment || isVerifyingPayment)">Cancel</button>
                    @if (showVerifyPaymentButton && !string.IsNullOrEmpty(pendingPaymentIntentId))
                    {
                        <button class="btn btn-verify" @onclick="VerifyAndSavePayment" disabled="@(isProcessingPayment || isVerifyingPayment)">
                            @if (isVerifyingPayment)
                            {
                                <span>Verifying Payment...</span>
                            }
                            else
                            {
                                <span>Verify Payment</span>
                            }
                        </button>
                    }
                    <button class="btn btn-save" @onclick="SaveWalkin" @onclick:preventDefault="true" disabled="@(isProcessingPayment || isVerifyingPayment || showVerifyPaymentButton)">
                        @if (isProcessingPayment)
                        {
                            <span>Processing Payment...</span>
                        }
                        else if (currentWalkin.PaymentMethod == "PayMongo" && !isEditMode && !showVerifyPaymentButton)
                        {
                            <span>Proceed to Payment</span>
                        }
                        else
                        {
                            <span>@(isEditMode ? "Update" : "Add") Walk-in</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    }
</div>

