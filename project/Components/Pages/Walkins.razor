    private async Task VerifyAndSavePayment()
    {
        if (string.IsNullOrEmpty(pendingPaymentIntentId))
        {
            ToastService.ShowError("No payment to verify.");
            return;
        }

        isVerifyingPayment = true;
        StateHasChanged();

        try
        {
            // Check payment status with PayMongo - try link ID first, then intent ID
            var paymentIdToCheck = !string.IsNullOrEmpty(pendingPaymentLinkId) ? pendingPaymentLinkId : pendingPaymentIntentId;
            var paymentStatus = await PayMongoService.CheckPaymentStatusAsync(paymentIdToCheck ?? "");

            // Check if payment is completed (PayMongo uses various status values)
            var statusLower = paymentStatus.Status?.ToLower() ?? "";
            var isPaid = statusLower == "succeeded" || 
                        statusLower == "paid" ||
                        statusLower == "paid_off" ||
                        statusLower == "paidoff";
            
            System.Diagnostics.Debug.WriteLine($"Manual verify - Payment status: {paymentStatus.Status}, IsPaid: {isPaid}");

            if (isPaid)
            {
                // Payment confirmed - now save to database
                currentWalkin.PayMongoStatus = "paid";
                currentWalkin.PayMongoPaymentId = pendingPaymentIntentId;
                currentWalkin.IsOnlinePayment = true;

                // Capitalize names before saving
                currentWalkin.FirstName = CapitalizeName(currentWalkin.FirstName);
                if (!string.IsNullOrWhiteSpace(currentWalkin.MiddleName))
                {
                    currentWalkin.MiddleName = CapitalizeName(currentWalkin.MiddleName);
                }
                currentWalkin.LastName = CapitalizeName(currentWalkin.LastName);

                // Save walk-in to database
                Context.WalkIns.Add(currentWalkin);
                await UpdateTrainerScheduleAvailability(null, currentWalkin.TrainerScheduleID);
                await Context.SaveChangesAsync();

                ToastService.ShowSuccess("Payment verified! Walk-in saved successfully.");
                
                // Stop auto-verification timer
                paymentCheckTimer?.Dispose();
                paymentCheckTimer = null;
                
                // Reset payment verification state
                showVerifyPaymentButton = false;
                pendingPaymentIntentId = null;
                payMongoCheckoutUrl = null;

                // Close modal and reload
                CloseModal();
                await LoadWalkinsFromDatabase();
            }
            else
            {
                // Payment not completed
                var statusMessage = paymentStatus.Status?.ToLower() ?? "unknown";
                if (statusMessage == "pending" || statusMessage == "awaiting_payment_method")
                {
                    ToastService.ShowWarning("Payment is still pending. Please complete the payment first, then verify again.");
                }
                else
                {
                    ToastService.ShowError($"Payment not completed. Status: {paymentStatus.Status ?? "Unknown"}. Please complete the payment or cancel.");
                }
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error verifying payment: {ex.Message}");
            ToastService.ShowError($"Error verifying payment: {ex.Message}");
        }
        finally
        {
            isVerifyingPayment = false;
            StateHasChanged();
        }
    }

    private void StartAutoPaymentVerification()
    {
        // Stop any existing timer
        paymentCheckTimer?.Dispose();
        
        // Start checking payment status every 2 seconds for faster detection
        paymentCheckTimer = new System.Threading.Timer(async _ =>
        {
            await CheckPaymentStatusAutomatically();
        }, null, TimeSpan.FromSeconds(2), TimeSpan.FromSeconds(2));
    }

    private async Task CheckPaymentStatusAutomatically()
    {
        if (string.IsNullOrEmpty(pendingPaymentIntentId) || !showVerifyPaymentButton || isVerifyingPayment || !showWalkinModal)
            return;

        try
        {
            // Check payment status - try link ID first, then intent ID
            var paymentIdToCheck = !string.IsNullOrEmpty(pendingPaymentLinkId) ? pendingPaymentLinkId : pendingPaymentIntentId;
            var paymentStatus = await PayMongoService.CheckPaymentStatusAsync(paymentIdToCheck ?? "");
            System.Diagnostics.Debug.WriteLine($"Auto-check payment status (ID: {paymentIdToCheck}): {paymentStatus.Status}");
            
            // PayMongo uses various status values - check for all possible "paid" statuses
            var statusLower = paymentStatus.Status?.ToLower() ?? "";
            var isPaid = statusLower == "succeeded" || 
                        statusLower == "paid" ||
                        statusLower == "paid_off" ||
                        statusLower == "paidoff";

            if (isPaid)
            {
                System.Diagnostics.Debug.WriteLine("Payment detected as paid, auto-verifying...");
                // Automatically verify and save
                await InvokeAsync(async () =>
                {
                    await VerifyAndSavePayment();
                });
            }
            else
            {
                System.Diagnostics.Debug.WriteLine($"Payment status: {paymentStatus.Status} - not yet paid");
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Auto-check payment error: {ex.Message}");
        }
    }

    private async Task SetupFocusCheck()
    {
        // Set up JavaScript to check payment when window regains focus
        await JSRuntime.InvokeVoidAsync("eval", @"
            (function() {
                // Remove existing listener if any
                if (window.paymongoFocusHandler) {
                    window.removeEventListener('focus', window.paymongoFocusHandler);
                    window.removeEventListener('visibilitychange', window.paymongoVisibilityHandler);
                }
                
                // Create new handler
                window.paymongoFocusHandler = function() {
                    // Small delay to ensure page is ready
                    setTimeout(function() {
                        // Trigger payment check by dispatching a custom event
                        window.dispatchEvent(new Event('checkPaymentStatus'));
                    }, 500);
                };
                
                window.paymongoVisibilityHandler = function() {
                    if (!document.hidden) {
                        window.paymongoFocusHandler();
                    }
                };
                
                window.addEventListener('focus', window.paymongoFocusHandler);
                window.addEventListener('visibilitychange', window.paymongoVisibilityHandler);
            })();
        ");
        
        // Also check immediately when setting up
        await Task.Delay(1000);
        await CheckPaymentStatusAutomatically();
    }

    private async Task OnModalFocus()
    {
        // When modal regains focus, check payment status immediately
        if (showVerifyPaymentButton && !string.IsNullOrEmpty(pendingPaymentIntentId))
        {
            await CheckPaymentStatusAutomatically();
        }
    }

    private void CloseModal()
    {
        showWalkinModal = false;
        currentWalkin = new WalkIn();
        validationErrors.Clear();
        selectedTrainerScheduleId = 0;
        visibleSchedules = new();
        // Reset payment verification state
        showVerifyPaymentButton = false;
        pendingPaymentIntentId = null;
        pendingPaymentLinkId = null;
        payMongoCheckoutUrl = null;
        isProcessingPayment = false;
        isVerifyingPayment = false;
        // Stop auto-verification timer
        paymentCheckTimer?.Dispose();
        paymentCheckTimer = null;
        StateHasChanged();
    }

    private async Task LogAuditAction(string action, string entityType, int? entityID, string entityName, string description, string status = "Success", string errorMessage = "")
    {
