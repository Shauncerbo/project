@page "/walkins"
@layout MainLayout
@using System.Diagnostics

<div class="members-container">
    <!-- Page Header - No gaps with sidebar and top -->
    <div class="page-header">
        <h1 class="page-title">Walk-in Customers</h1>
        <div class="header-actions">
            <input type="text"
                   class="search-bar"
                   placeholder="Search walk-ins..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddWalkinModal">+ Add Walk-in</button>
        </div>
    </div>

    <!-- Walk-ins Data Table -->
    <div class="table-container">
        <table class="members-table">
            <thead>
                <tr>
                    <th>WALK-IN ID</th>
                    <th>FULL NAME</th>
                    <th>VISIT DATE</th>
                    <th>PAYMENT AMOUNT</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredWalkins == null || !filteredWalkins.Any())
                {
                    <tr>
                        <td colspan="5" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">🚶‍♂️</span>
                                <p>No walk-in customers found</p>
                                <p class="no-data-sub">Add your first walk-in customer</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var walkin in filteredWalkins)
                    {
                        <tr>
                            <td>@walkin.WalkinID</td>
                            <td>
                                <div class="member-info">
                                    <div class="member-avatar">@walkin.FullName?.Substring(0, 1).ToUpper()</div>
                                    <span>@walkin.FullName</span>
                                </div>
                            </td>
                            <td>@walkin.VisitDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td class="amount-cell">
                                <span class="payment-amount">₱@walkin.PaymentAmount.ToString("N2")</span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" @onclick="() => EditWalkin(walkin)" title="Edit">
                                        <img src="/edit_icon.svg" class="action-icon" alt="Edit" />
                                    </button>
                                    <button class="action-btn archive-btn" @onclick="() => ArchiveWalkin(walkin)" title="Archive">
                                        <img src="/archived_icon.svg" class="action-icon" alt="Archive" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Walk-in Modal -->
    @if (showWalkinModal)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Walk-in" : "Add Walk-in Customer")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">
                    <!-- Full Name -->
                    <div class="form-group">
                        <label class="required">Full Name</label>
                        <input type="text"
                               class="form-control @(validationErrors.ContainsKey("FullName") ? "error" : "")"
                               @bind="currentWalkin.FullName"
                               placeholder="Enter customer's full name" />
                        @if (validationErrors.ContainsKey("FullName"))
                        {
                            <div class="error-message">@validationErrors["FullName"]</div>
                        }
                    </div>

                    <!-- Visit Date -->
                    <div class="form-group">
                        <label class="required">Visit Date & Time</label>
                        <input type="datetime-local"
                               class="form-control @(validationErrors.ContainsKey("VisitDate") ? "error" : "")"
                               @bind="currentWalkin.VisitDate"
                               format="yyyy-MM-ddTHH:mm" />
                        @if (validationErrors.ContainsKey("VisitDate"))
                        {
                            <div class="error-message">@validationErrors["VisitDate"]</div>
                        }
                    </div>

                    <!-- Payment Amount -->
                    <div class="form-group">
                        <label class="required">Payment Amount (₱)</label>
                        <input type="number"
                               step="0.01"
                               class="form-control @(validationErrors.ContainsKey("PaymentAmount") ? "error" : "")"
                               @bind="currentWalkin.PaymentAmount"
                               placeholder="Enter payment amount" />
                        @if (validationErrors.ContainsKey("PaymentAmount"))
                        {
                            <div class="error-message">@validationErrors["PaymentAmount"]</div>
                        }
                    </div>

                    

                    <!-- General error message -->
                    @if (validationErrors.ContainsKey("General"))
                    {
                        <div class="general-error-message">
                            @validationErrors["General"]
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="SaveWalkin">
                        @(isEditMode ? "Update" : "Add") Walk-in
                    </button>
                </div>
            </div>
        </div>
    }
</div>

