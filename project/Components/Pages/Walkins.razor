@code {
    private string searchQuery = "";
    private bool showWalkinModal = false;
    private bool isEditMode = false;
    private Walkin currentWalkin = new Walkin();
    private List<Walkin> walkins = new List<Walkin>();
    private List<Walkin> filteredWalkins = new List<Walkin>();
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();

    protected override void OnInitialized()
    {
        LoadSampleData();
        filteredWalkins = walkins;
    }

    private void LoadSampleData()
    {
        walkins = new List<Walkin>
        {
            new Walkin {
                WalkinID = "WK001",
                FullName = "Juan Dela Cruz",
                VisitDate = DateTime.Now.AddDays(-2).AddHours(10),
                PaymentAmount = 300.00m
            },
            new Walkin {
                WalkinID = "WK002",
                FullName = "Maria Santos",
                VisitDate = DateTime.Now.AddDays(-1).AddHours(15),
                PaymentAmount = 300.00m
            },
            new Walkin {
                WalkinID = "WK003",
                FullName = "Pedro Reyes",
                VisitDate = DateTime.Now.AddHours(9),
                PaymentAmount = 300.00m
            }
        };
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredWalkins = walkins;
        }
        else
        {
            filteredWalkins = walkins.Where(w =>
                w.WalkinID.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                w.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void OpenAddWalkinModal()
    {
        isEditMode = false;
        currentWalkin = new Walkin
        {
            WalkinID = $"WK{(walkins.Count + 1):D3}",
            VisitDate = DateTime.Now
        };
        validationErrors.Clear();
        showWalkinModal = true;
        StateHasChanged();
    }

    private void EditWalkin(Walkin walkin)
    {
        isEditMode = true;
        currentWalkin = new Walkin
        {
            WalkinID = walkin.WalkinID,
            FullName = walkin.FullName,
            VisitDate = walkin.VisitDate,
            PaymentAmount = walkin.PaymentAmount
        };
        validationErrors.Clear();
        showWalkinModal = true;
        StateHasChanged();
    }

    private void ArchiveWalkin(Walkin walkin)
    {
        // TODO: Add archive confirmation dialog or logic
        walkins.Remove(walkin);
        HandleSearch();
        StateHasChanged();
    }

    private void ValidateWalkin()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentWalkin.FullName))
        {
            validationErrors["FullName"] = "Full name is required";
        }

        if (currentWalkin.PaymentAmount <= 0)
        {
            validationErrors["PaymentAmount"] = "Payment amount must be greater than 0";
        }

        if (currentWalkin.VisitDate > DateTime.Now)
        {
            validationErrors["VisitDate"] = "Visit date cannot be in the future";
        }

        if (validationErrors.Count > 0)
        {
            validationErrors["General"] = "Please fill in all required fields correctly";
        }
    }

    private void SaveWalkin()
    {
        ValidateWalkin();

        if (validationErrors.Count > 0)
        {
            StateHasChanged();
            return;
        }

        if (isEditMode)
        {
            var existingWalkin = walkins.FirstOrDefault(w => w.WalkinID == currentWalkin.WalkinID);
            if (existingWalkin != null)
            {
                existingWalkin.FullName = currentWalkin.FullName;
                existingWalkin.VisitDate = currentWalkin.VisitDate;
                existingWalkin.PaymentAmount = currentWalkin.PaymentAmount;
            }
        }
        else
        {
            walkins.Add(currentWalkin);
        }

        HandleSearch();
        CloseModal();
    }

    private void CloseModal()
    {
        showWalkinModal = false;
        currentWalkin = new Walkin();
        validationErrors.Clear();
        StateHasChanged();
    }

    public class Walkin
    {
        public string WalkinID { get; set; } = "";
        public string FullName { get; set; } = "";
        public DateTime VisitDate { get; set; } = DateTime.Now;
        public decimal PaymentAmount { get; set; }
    }
}