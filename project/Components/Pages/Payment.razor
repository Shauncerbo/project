    private string searchQuery = "";
    private bool showPaymentModal = false;
    private bool isEditMode = false;
    private PaymentRecord currentPayment = new PaymentRecord();
    private List<PaymentRecord> payments = new List<PaymentRecord>();
    private List<PaymentRecord> filteredPayments = new List<PaymentRecord>();
    private List<MemberRecord> availableMembers = new List<MemberRecord>();
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();

    protected override void OnInitialized()
    {
        LoadSampleData();
        filteredPayments = payments;
    }

    private void LoadSampleData()
    {
