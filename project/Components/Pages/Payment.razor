    private async Task HandleStudentIDUpload(InputFileChangeEventArgs e)
    {
        try
        {
            if (e.File == null)
                return;

            // Validate file size (max 5MB)
            const long maxFileSize = 5 * 1024 * 1024; // 5MB
            if (e.File.Size > maxFileSize)
            {
                fieldErrors["StudentIDImage"] = "File size must be less than 5MB.";
                StateHasChanged();
                return;
            }

            // Validate file type
            var allowedExtensions = new[] { ".jpg", ".jpeg", ".png", ".pdf" };
            var fileName = e.File.Name.ToLowerInvariant();
            var hasValidExtension = allowedExtensions.Any(ext => fileName.EndsWith(ext));
            
            if (!hasValidExtension)
            {
                fieldErrors["StudentIDImage"] = "Only JPG, PNG, or PDF files are allowed.";
                StateHasChanged();
                return;
            }

            // Read file into byte array
            using var memoryStream = new MemoryStream();
            await e.File.OpenReadStream(maxFileSize).CopyToAsync(memoryStream);
            studentIDImageBytes = memoryStream.ToArray();
            studentIDFileName = e.File.Name;

            // Clear any previous errors
            if (fieldErrors.ContainsKey("StudentIDImage"))
            {
                fieldErrors.Remove("StudentIDImage");
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            fieldErrors["StudentIDImage"] = $"Error uploading file: {ex.Message}";
            StateHasChanged();
        }
    }

    private void RemoveStudentIDImage()
    {
        studentIDImageBytes = null;
        studentIDFileName = null;
        if (fieldErrors.ContainsKey("StudentIDImage"))
        {
            fieldErrors.Remove("StudentIDImage");
