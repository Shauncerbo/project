@page "/payment"
@layout MainLayout
@using System.Diagnostics

<div class="members-container">
    <!-- Page Header - No gaps with sidebar and top -->
    <div class="page-header">
        <h1 class="page-title">Payment Management</h1>
        <div class="header-actions">
            <input type="text"
                   class="search-bar"
                   placeholder="Search payments..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddPaymentModal">+ Process Payment</button>
        </div>
    </div>

    <!-- Payments Data Table -->
    <div class="table-container">
        <table class="members-table">
            <thead>
                <tr>
                    <th>PAYMENT ID</th>
                    <th>MEMBER</th>
                    <th>AMOUNT</th>
                    <th>PAYMENT DATE</th>
                    <th>PAYMENT TYPE</th>
                    <th>WALK-IN ID</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredPayments == null || !filteredPayments.Any())
                {
                    <tr>
                        <td colspan="7" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">💳</span>
                                <p>No payments found</p>
                                <p class="no-data-sub">Process your first payment to get started</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var payment in filteredPayments)
                    {
                        <tr>
                            <td>@payment.PaymentID</td>
                            <td>
                                <div class="member-info">
                                    <div class="member-avatar">@payment.MemberName?.Substring(0, 1).ToUpper()</div>
                                    <div>
                                        <div class="member-name">@payment.MemberName</div>
                                        <div class="member-id">@payment.MemberID</div>
                                    </div>
                                </div>
                            </td>
                            <td class="amount-cell">
                                <span class="payment-amount">₱@payment.Amount.ToString("N2")</span>
                            </td>
                            <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="payment-badge @GetPaymentTypeClass(payment.PaymentType)">
                                    @payment.PaymentType
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(payment.WalkinID))
                                {
                                    <span class="walkin-id">@payment.WalkinID</span>
                                }
                                else
                                {
                                    <span class="no-walkin">-</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" @onclick="() => EditPayment(payment)" title="Edit">
                                        <img src="/edit_icon.svg" class="action-icon" alt="Edit" />
                                    </button>
                                    <button class="action-btn archive-btn" @onclick="() => ArchivePayment(payment)" title="Archive">
                                        <img src="/archived_icon.svg" class="action-icon" alt="Archive" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Process Payment Modal -->
    @if (showPaymentModal)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Payment" : "Process New Payment")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">
                    <!-- Member Selection -->
                    <div class="form-group">
                        <label class="required">Select Member</label>
                        <div class="select-wrapper">
                            <select class="form-control select-dropdown @(validationErrors.ContainsKey("MemberID") ? "error" : "")"
                                    @bind="currentPayment.MemberID">
                                <option value="">Select a member</option>
                                @foreach (var member in availableMembers)
                                {
                                    <option value="@member.MemberID">@member.FullName (@member.MemberID)</option>
                                }
                            </select>
                            <span class="dropdown-arrow">▼</span>
                        </div>
                        @if (validationErrors.ContainsKey("MemberID"))
                        {
                            <div class="error-message">@validationErrors["MemberID"]</div>
                        }
                    </div>

                    <!-- Amount Field -->
                    <div class="form-group">
                        <label class="required">Amount (₱)</label>
                        <input type="number"
                               step="0.01"
                               class="form-control @(validationErrors.ContainsKey("Amount") ? "error" : "")"
                               @bind="currentPayment.Amount"
                               placeholder="Enter amount" />
                        @if (validationErrors.ContainsKey("Amount"))
                        {
                            <div class="error-message">@validationErrors["Amount"]</div>
                        }
                    </div>

                    <!-- Payment Type -->
                    <div class="form-group">
                        <label class="required">Payment Type</label>
                        <div class="select-wrapper">
                            <select class="form-control select-dropdown @(validationErrors.ContainsKey("PaymentType") ? "error" : "")"
                                    @bind="currentPayment.PaymentType">
                                <option value="">Select payment type</option>
                                <option value="Cash">Cash</option>
                                <option value="GCash">GCash</option>
                                <option value="Credit Card">Credit Card</option>
                                <option value="Debit Card">Debit Card</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                            </select>
                            <span class="dropdown-arrow">▼</span>
                        </div>
                        @if (validationErrors.ContainsKey("PaymentType"))
                        {
                            <div class="error-message">@validationErrors["PaymentType"]</div>
                        }
                    </div>

                    <!-- Walk-in ID (Optional) -->
                    <div class="form-group">
                        <label>Walk-in ID (Optional)</label>
                        <input type="text"
                               class="form-control"
                               @bind="currentPayment.WalkinID"
                               placeholder="Enter walk-in ID if applicable" />
                    </div>

                    <!-- Payment Date -->
                    <div class="form-group">
                        <label class="required">Payment Date</label>
                        <input type="date"
                               class="form-control @(validationErrors.ContainsKey("PaymentDate") ? "error" : "")"
                               @bind="currentPayment.PaymentDate"
                               format="yyyy-MM-dd" />
                        @if (validationErrors.ContainsKey("PaymentDate"))
                        {
                            <div class="error-message">@validationErrors["PaymentDate"]</div>
                        }
                    </div>

                    <!-- General error message -->
                    @if (validationErrors.ContainsKey("General"))
                    {
                        <div class="general-error-message">
                            @validationErrors["General"]
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="ProcessPayment">
                        @(isEditMode ? "Update" : "Process") Payment
                    </button>
                </div>
            </div>
        </div>
    }
</div>

