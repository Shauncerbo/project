                PaymentID = "PAY001",
                MemberID = "MEM001",
                MemberName = "John Smith",
                Amount = 1500.00m,
                PaymentDate = DateTime.Now.AddDays(-5),
                PaymentType = "GCash",
                WalkinID = ""
            },
            new PaymentRecord {
                PaymentID = "PAY002",
                MemberID = "MEM002",
                MemberName = "Maria Garcia",
                Amount = 2000.00m,
                PaymentDate = DateTime.Now.AddDays(-3),
                PaymentType = "Cash",
                WalkinID = "WK001"
            },
            new PaymentRecord {
                PaymentID = "PAY003",
                MemberID = "MEM003",
                MemberName = "David Johnson",
                Amount = 1800.00m,
                PaymentDate = DateTime.Now.AddDays(-1),
                PaymentType = "Credit Card",
                WalkinID = ""
            }
        };
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredPayments = payments;
        }
        else
        {
            filteredPayments = payments.Where(p =>
                p.PaymentID.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                p.MemberName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                p.MemberID.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                p.PaymentType.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                (p.WalkinID != null && p.WalkinID.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
            ).ToList();
        }
    }

    private void OpenAddPaymentModal()
    {
        isEditMode = false;
        currentPayment = new PaymentRecord
        {
            PaymentID = $"PAY{(payments.Count + 1):D3}",
            PaymentDate = DateTime.Now
        };
        validationErrors.Clear();
        showPaymentModal = true;
        StateHasChanged();
    }

    private void EditPayment(PaymentRecord payment)
    {
        isEditMode = true;
        currentPayment = new PaymentRecord
        {
            PaymentID = payment.PaymentID,
            MemberID = payment.MemberID,
            Amount = payment.Amount,
            PaymentDate = payment.PaymentDate,
            PaymentType = payment.PaymentType,
            WalkinID = payment.WalkinID
        };
        validationErrors.Clear();
        showPaymentModal = true;
        StateHasChanged();
    }

    private void ArchivePayment(PaymentRecord payment)
    {
        // TODO: Add archive confirmation dialog or logic
        payments.Remove(payment);
        HandleSearch();
        StateHasChanged();
    }

    private void ValidatePayment()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentPayment.MemberID))
        {
            validationErrors["MemberID"] = "Please select a member";
        }

        if (currentPayment.Amount <= 0)
        {
            validationErrors["Amount"] = "Amount must be greater than 0";
        }

        if (string.IsNullOrWhiteSpace(currentPayment.PaymentType))
        {
            validationErrors["PaymentType"] = "Please select payment type";
        }

        if (currentPayment.PaymentDate > DateTime.Now)
        {
            validationErrors["PaymentDate"] = "Payment date cannot be in the future";
        }

        if (validationErrors.Count > 0)
        {
            validationErrors["General"] = "Please fill in all required fields correctly";
        }
    }

    private void ProcessPayment()
    {
        ValidatePayment();

        if (validationErrors.Count > 0)
        {
            StateHasChanged();
            return;
        }

        // Get member name for display
        var member = availableMembers.FirstOrDefault(m => m.MemberID == currentPayment.MemberID);
        currentPayment.MemberName = member?.FullName ?? "Unknown Member";

        if (isEditMode)
        {
            var existingPayment = payments.FirstOrDefault(p => p.PaymentID == currentPayment.PaymentID);
            if (existingPayment != null)
            {
                existingPayment.MemberID = currentPayment.MemberID;
                existingPayment.MemberName = currentPayment.MemberName;
                existingPayment.Amount = currentPayment.Amount;
                existingPayment.PaymentDate = currentPayment.PaymentDate;
                existingPayment.PaymentType = currentPayment.PaymentType;
                existingPayment.WalkinID = currentPayment.WalkinID;
            }
        }
        else
        {
            payments.Add(currentPayment);
        }

        HandleSearch();
        CloseModal();
    }

    private void CloseModal()
    {
        showPaymentModal = false;
        currentPayment = new PaymentRecord();
        validationErrors.Clear();
        StateHasChanged();
    }

    private string GetPaymentTypeClass(string paymentType)
    {
        return $"payment-{paymentType.ToLower().Replace(" ", "-")}";
    }

    public class PaymentRecord
    {
        public string PaymentID { get; set; } = "";
        public string MemberID { get; set; } = "";
        public string MemberName { get; set; } = "";
        public decimal Amount { get; set; }
        public DateTime PaymentDate { get; set; } = DateTime.Now;
        public string PaymentType { get; set; } = "";
        public string WalkinID { get; set; } = "";
    }

    public class MemberRecord
    {
        public string MemberID { get; set; } = "";
        public string FullName { get; set; } = "";
    }
