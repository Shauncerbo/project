@code {
    private string currentDbType = "local";
    private bool isSyncing = false;
    private DateTime? lastSyncTime;
    private Dictionary<string, int> localCounts = new Dictionary<string, int>();
    private Dictionary<string, int> onlineCounts = new Dictionary<string, int>();
    private project.Services.SyncResult? syncResult;

    // Auto sync timer variables
    private System.Timers.Timer? autoSyncTimer;
    private System.Timers.Timer? countdownTimer;
    private DateTime nextSyncTime;
    private TimeSpan timeRemaining;
    private bool isAutoSyncEnabled = true;
    private const int AUTO_SYNC_INTERVAL_MINUTES = 30;

    // Sync confirmation modal
    private bool showSyncConfirmation = false;
    private string syncDirection = ""; // "online-to-local" or "local-to-online"

    private int localTotalCount => localCounts.Values.Sum();
    private int onlineTotalCount => onlineCounts.Values.Sum();

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentDatabaseType();
        await LoadCounts();
        await LoadLastSyncTime();
        InitializeAutoSync();
    }

    private void InitializeAutoSync()
    {
        // Calculate next sync time (30 minutes from now, or from last sync if available)
        if (lastSyncTime.HasValue)
        {
            nextSyncTime = lastSyncTime.Value.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);
            // If next sync time is in the past, set it to 30 minutes from now
            if (nextSyncTime < DateTime.Now)
            {
                nextSyncTime = DateTime.Now.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);
            }
        }
        else
        {
            nextSyncTime = DateTime.Now.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);
        }

        UpdateTimeRemaining();

        // Timer for auto sync (fires every 30 minutes)
        autoSyncTimer = new System.Timers.Timer(AUTO_SYNC_INTERVAL_MINUTES * 60 * 1000);
        autoSyncTimer.Elapsed += async (sender, e) => await OnAutoSyncTimerElapsed();
        autoSyncTimer.AutoReset = true;
        autoSyncTimer.Start();

        // Timer for countdown display (updates every second)
        countdownTimer = new System.Timers.Timer(1000);
        countdownTimer.Elapsed += (sender, e) => UpdateCountdown();
        countdownTimer.AutoReset = true;
        countdownTimer.Start();
    }

    private void UpdateCountdown()
    {
        UpdateTimeRemaining();
        InvokeAsync(StateHasChanged);
    }

    private void UpdateTimeRemaining()
    {
        timeRemaining = nextSyncTime - DateTime.Now;
        if (timeRemaining.TotalSeconds < 0)
        {
            timeRemaining = TimeSpan.Zero;
        }
    }

    private string FormatTimeRemaining(TimeSpan remaining)
    {
        if (remaining.TotalSeconds <= 0)
            return "00:00:00";

        return $"{(int)remaining.TotalHours:D2}:{remaining.Minutes:D2}:{remaining.Seconds:D2}";
    }

    private async Task OnAutoSyncTimerElapsed()
    {
        if (!isAutoSyncEnabled || isSyncing)
            return;

        // Update next sync time
        nextSyncTime = DateTime.Now.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);

        // Perform automatic sync
        await InvokeAsync(async () =>
        {
            isSyncing = true;
            syncResult = null;
            StateHasChanged();

            try
            {
                syncResult = await DatabaseSyncService.SyncBidirectionalAsync();
                
                if (syncResult.Success)
                {
                    await LoadCounts();
                    await LoadLastSyncTime();
                    ToastService.ShowSuccess("Auto sync completed successfully!");
                }
                else
                {
                    ToastService.ShowError($"Auto sync failed: {syncResult.Message}");
                }
            }
            catch (Exception ex)
            {
                syncResult = new project.Services.SyncResult
                {
                    Success = false,
                    Message = $"Auto sync failed: {ex.Message}"
                };
                ToastService.ShowError($"Auto sync failed: {ex.Message}");
            }
            finally
            {
                isSyncing = false;
                StateHasChanged();
            }
        });
    }

    private async Task LoadCurrentDatabaseType()
    {
        currentDbType = await DatabaseSyncService.GetCurrentDatabaseTypeAsync();
        StateHasChanged();
    }

    private async Task LoadCounts()
    {
        localCounts = await DatabaseSyncService.GetLocalCountsAsync();
        onlineCounts = await DatabaseSyncService.GetOnlineCountsAsync();
        StateHasChanged();
    }

    private async Task LoadLastSyncTime()
    {
        lastSyncTime = await DatabaseSyncService.GetLastSyncTimeAsync();
        // Update next sync time if last sync time changed
        if (lastSyncTime.HasValue && isAutoSyncEnabled)
        {
            nextSyncTime = lastSyncTime.Value.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);
            if (nextSyncTime < DateTime.Now)
            {
                nextSyncTime = DateTime.Now.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);
            }
