        StateHasChanged();
    }

    private async Task ConfirmSync()
    {
        if (isSyncing)
            return;

        showSyncConfirmation = false;
        isSyncing = true;
        syncDirection = "local-to-online";
        syncResult = null;
        StateHasChanged();

        try
        {
            syncResult = await DatabaseSyncService.SyncBidirectionalAsync();
            
            if (syncResult.Success)
            {
                await LoadCounts();
                await LoadLastSyncTime();
                // Reset next sync time after manual sync
                nextSyncTime = DateTime.Now.AddMinutes(AUTO_SYNC_INTERVAL_MINUTES);
                ToastService.ShowSuccess("Database sync completed successfully!");
            }
            else
            {
                ToastService.ShowError($"Sync failed: {syncResult.Message}");
            }
        }
        catch (Exception ex)
        {
            syncResult = new project.Services.SyncResult
            {
                Success = false,
                Message = $"Sync failed: {ex.Message}"
            };
            ToastService.ShowError($"Sync failed: {ex.Message}");
        }
        finally
        {
            isSyncing = false;
            syncDirection = "";
            StateHasChanged();
        }
    }

