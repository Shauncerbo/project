@page "/sync-database"
@layout MainLayout
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.Maui.Storage
@using System.Timers
@implements IDisposable
@inject IJSRuntime JSRuntime
@inject project.Services.IDatabaseSyncService DatabaseSyncService
@inject project.Services.IToastService ToastService

<div class="sync-database-page">
    <div class="page-header">
        <h1 class="page-title">Sync Database</h1>
        <p class="page-subtitle">Synchronize data between local and online databases</p>
    </div>

    <!-- Auto Sync Timer Display -->
    <div class="auto-sync-timer-card">
        <div class="timer-content">
            <div class="timer-info">
                <div class="timer-label">Next Auto Sync</div>
                <div class="timer-value">@FormatTimeRemaining(timeRemaining)</div>
            </div>
            <div class="timer-status">
                @if (isAutoSyncEnabled)
                {
                    <span class="status-badge status-active">Auto Sync: ON</span>
                }
                else
                {
                    <span class="status-badge status-inactive">Auto Sync: OFF</span>
                }
            </div>
        </div>
    </div>

    <div class="sync-database-container">
        <!-- Info Cards -->
        <div class="info-cards">
            <div class="info-card">
                <div class="info-content">
                    <div class="info-label">Last Sync</div>
                    <div class="info-value">@(lastSyncTime?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</div>
                </div>
            </div>
            <div class="info-card">
                <div class="info-content">
                    <div class="info-label">Local Records</div>
                    <div class="info-value">@localTotalCount</div>
                </div>
            </div>
            <div class="info-card">
                <div class="info-content">
                    <div class="info-label">Online Records</div>
                    <div class="info-value">@onlineTotalCount</div>
                </div>
            </div>
        </div>

        <!-- Main Sync Card -->
        <div class="sync-main-card">
            <h3>Database Synchronization</h3>
            <p class="sync-description">
                Click the button below to synchronize data between your local and online databases.
                The system will automatically:
            </p>
            <ul class="sync-features">
                <li>✅ Upload missing local data to online</li>
                <li>✅ Download missing online data to local</li>
                <li>✅ Update older records using timestamps</li>
                <li>✅ Resolve conflicts intelligently</li>
            </ul>
            <p class="auto-sync-note">
                <strong>Auto Sync:</strong> The database will automatically sync every 30 minutes.
            </p>

            <div class="sync-buttons-container">
                <button class="btn-sync btn-sync-left" @onclick="PerformOnlineToLocalSync" disabled="@isSyncing">
                    @if (isSyncing && syncDirection == "online-to-local")
                    {
                        <span class="sync-spinner"></span>
                        <span>Syncing...</span>
                    }
                    else
                    {
                        <span>Online → Local</span>
                    }
                </button>
                <button class="btn-sync btn-sync-right" @onclick="PerformSync" disabled="@isSyncing">
                    @if (isSyncing && syncDirection == "local-to-online")
                    {
                        <span class="sync-spinner"></span>
                        <span>Syncing...</span>
                    }
                    else
                    {
                        <span>Local → Online</span>
                    }
                </button>
            </div>
        </div>

        <!-- Sync Summary -->
        @if (syncResult != null)
        {
            <div class="sync-summary-card @(syncResult.Success ? "summary-success" : "summary-error")">
                <h3>@(syncResult.Success ? "✅ Sync Completed" : "❌ Sync Failed")</h3>
                <p class="summary-message">@syncResult.Message</p>
                
                @if (syncResult.Success && syncResult.TableSummaries.Any())
                {
                    <div class="summary-details">
                        <h4>Sync Details:</h4>
                        <div class="summary-stats">
                            <div class="stat-item">
                                <span class="stat-label">Uploaded:</span>
                                <span class="stat-value stat-upload">@syncResult.TotalUploaded</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Downloaded:</span>
                                <span class="stat-value stat-download">@syncResult.TotalDownloaded</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Updated:</span>
                                <span class="stat-value stat-update">@syncResult.TotalUpdated</span>
                            </div>
                            @if (syncResult.TotalConflicts > 0)
                            {
                                <div class="stat-item">
                                    <span class="stat-label">Conflicts:</span>
                                    <span class="stat-value stat-conflict">@syncResult.TotalConflicts</span>
                                </div>
                            }
                        </div>

                        <div class="table-summaries">
                            @foreach (var summary in syncResult.TableSummaries.Values.Where(s => s.Uploaded > 0 || s.Downloaded > 0 || s.Updated > 0 || s.Conflicts > 0))
                            {
                                <div class="table-summary-item">
                                    <strong>@summary.TableName:</strong>
                                    @if (summary.Uploaded > 0) { <span class="badge badge-upload">↑@summary.Uploaded</span> }
                                    @if (summary.Downloaded > 0) { <span class="badge badge-download">↓@summary.Downloaded</span> }
                                    @if (summary.Updated > 0) { <span class="badge badge-update">↻@summary.Updated</span> }
                                    @if (summary.Conflicts > 0) { <span class="badge badge-conflict">⚠@summary.Conflicts</span> }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Loading Overlay -->
        @if (isSyncing)
        {
            <div class="sync-loading-overlay">
                <div class="loading-content">
                    <div class="loading-spinner-large"></div>
                    <p>Synchronizing databases...</p>
                    <p class="loading-subtitle">This may take a few minutes</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Sync Confirmation Modal -->
@if (showSyncConfirmation)
{
    <div class="modal-overlay" @onclick="CloseSyncConfirmation">
        <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>Sync Database</h2>
                <button class="close-btn" @onclick="CloseSyncConfirmation">×</button>
            </div>
            <div class="modal-body">
                <div class="confirmation-content text-only">
                    <h3>Database Synchronization</h3>
                    <p>This will synchronize data between local and online databases.</p>
                    <p class="confirmation-warning">This process may take a few minutes. Continue?</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-cancel" @onclick="CloseSyncConfirmation">Cancel</button>
                <button class="btn btn-primary" @onclick="ConfirmSync" disabled="@isSyncing">
                    @(isSyncing ? "Syncing..." : "Yes, Sync Now")
                </button>
            </div>
        </div>
    </div>
}

