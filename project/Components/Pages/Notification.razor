@page "/notifications"
@layout MainLayout

<div class="notifications-page">
    <div class="page-header">
        <h1>🔔 Notifications</h1>
        <button class="btn-mark-all" @onclick="MarkAllAsRead">Mark All as Read</button>
    </div>

    <div class="notifications-list">
        @if (!notifications.Any())
        {
            <div class="no-notifications">
                <p>No notifications found</p>
            </div>
        }
        else
        {
            <table class="notifications-table">
                <thead>
                    <tr>
                        <th>NotificationID</th>
                        <th>MemberID</th>
                        <th>Message</th>
                        <th>DateSent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var notification in notifications)
                    {
                        <tr class="@(notification.IsRead ? "read" : "unread")">
                            <td>@notification.NotificationID</td>
                            <td>@notification.MemberID</td>
                            <td>@notification.Message</td>
                            <td>@notification.DateSent.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <button class="btn-action" @onclick="() => MarkAsRead(notification.NotificationID)">
                                    @if (notification.IsRead)
                                    {
                                        <text>✅ Read</text>
                                    }
                                    else
                                    {
                                        <text>📬 Mark Read</text>
                                    }
                                </button>
                                <button class="btn-delete" @onclick="() => DeleteNotification(notification.NotificationID)">🗑️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<style>
    .notifications-page {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
