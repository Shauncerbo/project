@page "/membershiptype"
@layout MainLayout
@using System.Diagnostics
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@inject project.Services.IToastService ToastService
@inject project.Services.IAuthService AuthService
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore

<div class="members-container">
    <!-- Page Header - title only (search/add moved below like other tables) -->
    <div class="page-header">
        <h1 class="page-title">Membership Type Management</h1>
    </div>

    <!-- Membership Types Data Table -->
    <div class="table-container">
        <div class="table-toolbar">
            <span class="table-title">Membership Types</span>
            <input type="text"
                   class="search-bar"
                   placeholder="Search membership types..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddModal">+ Create Membership Type</button>
        </div>
        <table class="members-table">
            <thead>
                <tr>
                    <th>TYPE NAME</th>
                    <th>PRICE</th>
                    <th>DURATION (DAYS)</th>
                    <th>DESCRIPTION</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="4" class="no-data">
                            <div class="no-data-content">
                                <p>Loading...</p>
                            </div>
                        </td>
                    </tr>
                }
                else if (filteredMembershipTypes == null || !filteredMembershipTypes.Any())
                {
                    <tr>
                        <td colspan="5" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">ðŸ’³</span>
                                <p>No membership types found</p>
                                <p class="no-data-sub">Create your first membership type to get started</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var membershipType in filteredMembershipTypes)
                    {
                        <tr>
                            <td>
                                <div class="type-name">@membershipType.TypeName</div>
                            </td>
                            <td class="price-cell">
                                <span class="price">â‚±@membershipType.Price.ToString("N2")</span>
                            </td>
                            <td>@membershipType.DurationInDays days</td>
                            <td>
                                <div class="description-cell">
                                    @if (string.IsNullOrWhiteSpace(membershipType.Description))
                                    {
                                        <span class="no-description">-</span>
                                    }
                                    else
                                    {
                                        <span class="description-text" title="@membershipType.Description">@membershipType.Description</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" @onclick="() => EditMembershipType(membershipType)" title="Edit">
                                        <img src="/Newedit_icon.svg" class="action-icon" alt="Edit" />
                                    </button>
                                    <button class="action-btn archive-btn" @onclick="() => ConfirmArchiveMembershipType(membershipType)" title="Archive">
                                        <img src="/archived_icon.svg" class="action-icon" alt="Delete" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Walk-in Price Configuration Section -->
    <div class="table-container" style="margin-top: 30px;">
        <div class="table-toolbar">
            <span class="table-title">Walk-in Price Configuration</span>
        </div>
        <div style="padding: 20px;">
            <div class="form-group" style="max-width: 400px;">
                <label class="required">Walk-in Price (â‚±)</label>
                <input type="number"
                       step="0.01"
                       min="0"
                       class="form-control @(walkInPriceError ? "error" : "")"
                       @bind="walkInPrice"
                       placeholder="Enter walk-in price" />
                <small style="color: #666; font-size: 12px; margin-top: 5px; display: block; margin-bottom: 15px;">
                    This price will be automatically applied when adding new walk-in customers.
                </small>
                @if (walkInPriceError)
                {
                    <div class="error-message">Walk-in price must be greater than 0</div>
                }
                <button class="btn btn-save" @onclick="SaveWalkInPrice" style="margin-top: 10px;">
                    Save Walk-in Price
                </button>
            </div>
        </div>
    </div>

    <!-- Add/Edit Membership Type Modal -->
    @if (showModal)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Membership Type" : "Create New Membership Type")</h2>
                    <button class="close-btn" @onclick="CloseModal">Ã—</button>
                </div>

                <div class="modal-body">
                    <!-- Type Name -->
                    <div class="form-group">
                        <label class="required">Type Name</label>
                        <input type="text"
                               class="form-control @(validationErrors.ContainsKey("TypeName") ? "error" : "")"
                               @bind="currentMembershipType.TypeName"
                               placeholder="Enter membership type name (e.g., Basic, Premium)" />
                        @if (validationErrors.ContainsKey("TypeName"))
                        {
                            <div class="error-message">@validationErrors["TypeName"]</div>
                        }
                    </div>

                    <!-- Price -->
                    <div class="form-group">
                        <label class="required">Price</label>
                        <input type="number"
                               step="0.01"
                               min="0"
                               class="form-control @(validationErrors.ContainsKey("Price") ? "error" : "")"
                               @bind="currentMembershipType.Price"
                               placeholder="Enter price" />
                        @if (validationErrors.ContainsKey("Price"))
                        {
                            <div class="error-message">@validationErrors["Price"]</div>
                        }
                    </div>

                    <!-- Duration In Days -->
                    <div class="form-group">
                        <label class="required">Duration (Days)</label>
                        <input type="number"
                               min="1"
                               class="form-control @(validationErrors.ContainsKey("DurationInDays") ? "error" : "")"
                               @bind="currentMembershipType.DurationInDays"
                               placeholder="Enter duration in days" />
                        @if (validationErrors.ContainsKey("DurationInDays"))
                        {
                            <div class="error-message">@validationErrors["DurationInDays"]</div>
                        }
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control @(validationErrors.ContainsKey("Description") ? "error" : "")"
                                  @bind="currentMembershipType.Description"
                                  placeholder="Enter description (optional)"
                                  rows="3"></textarea>
                        @if (validationErrors.ContainsKey("Description"))
                        {
                            <div class="error-message">@validationErrors["Description"]</div>
                        }
                        <small style="color: #666; font-size: 12px; margin-top: 5px; display: block;">
                            Optional: Add a description to help identify this membership type
                        </small>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="SaveMembershipType">
                        @(isEditMode ? "Update" : "Create") Membership Type
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@if (showArchiveConfirmation)
{
    <div class="modal-overlay" @onclick="CloseArchiveConfirmation">
        <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>Archive Membership Type</h2>
                <button class="close-btn" @onclick="CloseArchiveConfirmation">Ã—</button>
            </div>

            <div class="modal-body">
                <div class="confirmation-content text-only">
                    <h3>Archive Membership Type</h3>
                    <p>You are about to archive <strong>@selectedMembershipType?.TypeName</strong>.</p>
                    <div class="confirmation-warning-box">
                        This will remove the membership type from the active list. Continue?
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-cancel" @onclick="CloseArchiveConfirmation">Cancel</button>
                <button class="btn btn-danger" @onclick="DeleteMembershipType">Yes, Archive</button>
            </div>
        </div>
    </div>
}

