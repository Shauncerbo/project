@code {
    private string searchQuery = "";
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isLoading = false;
    private bool showArchiveConfirmation = false;
    private project.Models.MembershipType currentMembershipType = new project.Models.MembershipType();
    private project.Models.MembershipType? selectedMembershipType;
    private List<project.Models.MembershipType> membershipTypes = new List<project.Models.MembershipType>();
    private List<project.Models.MembershipType> filteredMembershipTypes = new List<project.Models.MembershipType>();
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();
    private decimal walkInPrice = 0;
    private bool walkInPriceError = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadMembershipTypesFromDatabase();
        await LoadWalkInPrice();
    }

    private async Task LoadMembershipTypesFromDatabase()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            membershipTypes = await Context.MembershipTypes
                .AsNoTracking()
                .Where(mt => mt.IsArchived == false)
                .ToListAsync();
            filteredMembershipTypes = membershipTypes;
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading membership types: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredMembershipTypes = membershipTypes;
        }
        else
        {
            var query = searchQuery.ToLower();
            filteredMembershipTypes = membershipTypes
                .Where(mt => mt.TypeName.ToLower().Contains(query) ||
                            mt.Price.ToString().Contains(query) ||
                            mt.DurationInDays.ToString().Contains(query) ||
                            (!string.IsNullOrEmpty(mt.Description) && mt.Description.ToLower().Contains(query)))
                .ToList();
        }
        StateHasChanged();
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        currentMembershipType = new project.Models.MembershipType();
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void EditMembershipType(project.Models.MembershipType membershipType)
    {
        isEditMode = true;
        currentMembershipType = new project.Models.MembershipType
        {
            MembershipTypeID = membershipType.MembershipTypeID,
            TypeName = membershipType.TypeName,
            Price = membershipType.Price,
            DurationInDays = membershipType.DurationInDays,
            Description = membershipType.Description
        };
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private bool ValidateMembershipType()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentMembershipType.TypeName))
        {
            validationErrors["TypeName"] = "Type name is required";
        }

        if (currentMembershipType.Price <= 0)
        {
            validationErrors["Price"] = "Price must be greater than 0";
        }

        if (currentMembershipType.DurationInDays <= 0)
        {
            validationErrors["DurationInDays"] = "Duration must be greater than 0";
        }

        return validationErrors.Count == 0;
    }

    private async Task SaveMembershipType()
    {
        if (!ValidateMembershipType())
        {
            StateHasChanged();
            return;
        }

        try
        {
            if (isEditMode)
            {
                // Load the existing entity so we only have ONE tracked instance
                var existing = await Context.MembershipTypes
                    .FirstOrDefaultAsync(mt => mt.MembershipTypeID == currentMembershipType.MembershipTypeID);

                if (existing == null)
                {
                    ToastService.ShowError("Membership type not found. Please refresh the page and try again.");
                    return;
                }

                existing.TypeName = currentMembershipType.TypeName;
                existing.Price = currentMembershipType.Price;
                existing.DurationInDays = currentMembershipType.DurationInDays;
                existing.Description = currentMembershipType.Description;
                
                // Log audit action
                await LogAuditAction("Membership Type Updated", "MembershipType", existing.MembershipTypeID, existing.TypeName, $"Updated membership type: {existing.TypeName} - â‚±{existing.Price:N2}");
            }
            else
            {
                Context.MembershipTypes.Add(currentMembershipType);
            }

            await Context.SaveChangesAsync();
            
            // Log audit action for new membership type
            if (!isEditMode)
            {
                await LogAuditAction("Membership Type Created", "MembershipType", currentMembershipType.MembershipTypeID, currentMembershipType.TypeName, $"Created membership type: {currentMembershipType.TypeName} - â‚±{currentMembershipType.Price:N2}");
            }
            
            await LoadMembershipTypesFromDatabase();
            CloseModal();
            ToastService.ShowSuccess(isEditMode ? "Updated successfully" : "Added successfully");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error saving membership type: {ex.Message}");
        }
    }

    private void ConfirmArchiveMembershipType(project.Models.MembershipType membershipType)
    {
        selectedMembershipType = membershipType;
        showArchiveConfirmation = true;
        StateHasChanged();
    }

    private void CloseArchiveConfirmation()
    {
        showArchiveConfirmation = false;
        selectedMembershipType = null;
        StateHasChanged();
    }

    private async Task DeleteMembershipType()
    {
        if (selectedMembershipType == null)
            return;

        try
        {
            // Always operate on an entity loaded from the current context
            var existing = await Context.MembershipTypes
                .FirstOrDefaultAsync(mt => mt.MembershipTypeID == selectedMembershipType.MembershipTypeID);

            if (existing == null)
            {
                ToastService.ShowError("Membership type not found. Please refresh the page and try again.");
                return;
            }

            existing.IsArchived = true;
            existing.ArchivedDate = DateTime.Now;
            await Context.SaveChangesAsync();
            
            // Log audit action
            await LogAuditAction("Membership Type Archived", "MembershipType", existing.MembershipTypeID, existing.TypeName, $"Archived membership type: {existing.TypeName}");
            
            await LoadMembershipTypesFromDatabase();
            CloseArchiveConfirmation();
            ToastService.ShowSuccess("Archived successfully");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error archiving membership type: {ex.Message}");
        }
    }

    private void CloseModal()
    {
        showModal = false;
        currentMembershipType = new project.Models.MembershipType();
        validationErrors.Clear();
        StateHasChanged();
    }

    private async Task LoadWalkInPrice()
    {
        try
        {
            var setting = await Context.SystemSettings
                .FirstOrDefaultAsync(s => s.SettingKey == "WalkInPrice");
            
            if (setting != null && decimal.TryParse(setting.SettingValue, out decimal price))
            {
                walkInPrice = price;
            }
            else
            {
                walkInPrice = 0;
            }
        }
        catch (Exception ex)
        {
            // Silently handle errors - table might not exist yet
            // Don't show error toast on page load, just set default value
            if (ex.Message.Contains("Invalid object name 'SystemSettings'") || 
                ex.Message.Contains("does not exist"))
            {
                // Table doesn't exist yet - this is expected if script hasn't been run
                System.Diagnostics.Debug.WriteLine("SystemSettings table does not exist yet. Please run CreateSystemSettingsTable.sql");
            }
            else
            {
                System.Diagnostics.Debug.WriteLine($"Error loading walk-in price: {ex.Message}");
            }
            walkInPrice = 0;
        }
    }

    private async Task SaveWalkInPrice()
    {
        walkInPriceError = false;
        
        if (walkInPrice < 0)
        {
            walkInPriceError = true;
            ToastService.ShowError("Walk-in price must be greater than 0");
            StateHasChanged();
            return;
        }

        try
        {
            var setting = await Context.SystemSettings
                .FirstOrDefaultAsync(s => s.SettingKey == "WalkInPrice");

            if (setting == null)
            {
                setting = new project.Models.SystemSetting
                {
                    SettingKey = "WalkInPrice",
                    SettingValue = walkInPrice.ToString("F2"),
                    UpdatedAt = DateTime.Now
                };
                Context.SystemSettings.Add(setting);
            }
            else
            {
                setting.SettingValue = walkInPrice.ToString("F2");
                setting.UpdatedAt = DateTime.Now;
                Context.SystemSettings.Update(setting);
            }

            await Context.SaveChangesAsync();
            ToastService.ShowSuccess("Walk-in price saved successfully");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("Invalid object name 'SystemSettings'") || 
                ex.Message.Contains("does not exist") ||
                ex.InnerException?.Message.Contains("SystemSettings") == true)
            {
                ToastService.ShowError("SystemSettings table does not exist. Please run the CreateSystemSettingsTable.sql script in your database first. The script is located in the Database folder.");
            }
            else
            {
                ToastService.ShowError($"Error saving walk-in price: {ex.Message}");
            }
            StateHasChanged();
        }
    }

    private async Task LogAuditAction(string action, string entityType, int? entityID, string entityName, string description, string status = "Success", string errorMessage = "")
    {
        try
        {
            var username = await AuthService.GetCurrentUsername();
            var userId = await AuthService.GetCurrentUserId();

            var auditLog = new AuditLog
            {
                Action = action,
                EntityType = entityType,
                EntityID = entityID,
                EntityName = entityName,
                PerformedBy = username,
                PerformedByUserID = userId,
                Description = description,
                Timestamp = DateTime.Now,
                Status = status,
                ErrorMessage = errorMessage
            };

            Context.AuditLogs.Add(auditLog);
            await Context.SaveChangesAsync();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error logging audit action: {ex.Message}");
        }
    }
