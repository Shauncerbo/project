@page "/reports"
@layout MainLayout
@inherits ComponentBase

<div class="reports-page">
    <div class="reports-header">
        <h1>Reports Dashboard</h1>
        <div class="date-filter">
            <select @bind="selectedPeriod" class="period-select">
                <option value="today">Today</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="custom">Custom Range</option>
            </select>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card income">
            <div class="stat-icon">💰</div>
            <div class="stat-info">
                <h3>Total Income</h3>
                <div class="stat-amount">₱@(totalIncome?.ToString("N2") ?? "0.00")</div>
                <div class="stat-breakdown">
                    <span>Members: ₱@(memberIncome?.ToString("N2") ?? "0.00")</span>
                    <span>Walk-ins: ₱@(walkinIncome?.ToString("N2") ?? "0.00")</span>
                </div>
            </div>
        </div>

        <div class="stat-card members">
            <div class="stat-icon">👥</div>
            <div class="stat-info">
                <h3>Members</h3>
                <div class="stat-number">@(activeMembers ?? 0)</div>
                <div class="stat-breakdown">
                    <span>New: @(newMembers ?? 0)</span>
                    <span>Expiring: @(expiringMembers ?? 0)</span>
                </div>
            </div>
        </div>

        <div class="stat-card attendance">
            <div class="stat-icon">✅</div>
            <div class="stat-info">
                <h3>Attendance</h3>
                <div class="stat-number">@(todayAttendance ?? 0)</div>
                <div class="stat-breakdown">
                    <span>Members: @(memberAttendance ?? 0)</span>
                    <span>Walk-ins: @(walkinAttendance ?? 0)</span>
                </div>
            </div>
        </div>

        <div class="stat-card alerts">
            <div class="stat-icon">⏰</div>
            <div class="stat-info">
                <h3>Payment Alerts</h3>
                <div class="stat-number">@(overduePayments ?? 0)</div>
                <div class="stat-breakdown">
                    <span>Due Soon: @(dueSoonPayments ?? 0)</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Reports Section -->
    <div class="reports-section">
        <div class="section-header">
            <h2>Detailed Reports</h2>
            <button class="export-btn" @onclick="ExportReports">📊 Export to Excel</button>
        </div>

        <div class="reports-grid">
            <!-- Income Report -->
            <div class="report-card">
                <h3>💰 Income Details</h3>
                <div class="report-content">
                    <div class="report-item">
                        <span>PayMongo Payments:</span>
                        <span>₱@(paymongoIncome?.ToString("N2") ?? "0.00")</span>
                    </div>
                    <div class="report-item">
                        <span>Cash Payments:</span>
                        <span>₱@(cashIncome?.ToString("N2") ?? "0.00")</span>
                    </div>
                    <div class="report-item">
                        <span>Pending Payments:</span>
                        <span>₱@(pendingIncome?.ToString("N2") ?? "0.00")</span>
                    </div>
                </div>
            </div>

            <!-- Membership Report -->
            <div class="report-card">
                <h3>👥 Membership Status</h3>
                <div class="report-content">
                    <div class="report-item">
                        <span>Active Members:</span>
                        <span>@(activeMembers ?? 0)</span>
                    </div>
                    <div class="report-item">
                        <span>Inactive (30+ days):</span>
                        <span>@(inactiveMembers ?? 0)</span>
                    </div>
                    <div class="report-item">
                        <span>Expiring This Week:</span>
                        <span class="warning">@(expiringMembers ?? 0)</span>
                    </div>
                </div>
            </div>

            <!-- Attendance Report -->
            <div class="report-card">
                <h3>✅ Attendance Today</h3>
                <div class="report-content">
                    <div class="report-item">
                        <span>Total Check-ins:</span>
                        <span>@(todayAttendance ?? 0)</span>
                    </div>
                    <div class="report-item">
                        <span>QR Scans:</span>
                        <span>@(memberAttendance ?? 0)</span>
                    </div>
                    <div class="report-item">
                        <span>Walk-in Entries:</span>
                        <span>@(walkinAttendance ?? 0)</span>
                    </div>
                </div>
            </div>

            <!-- Payment Alerts -->
            <div class="report-card">
                <h3>⏰ Payment Alerts</h3>
                <div class="report-content">
                    <div class="report-item">
                        <span>Overdue Payments:</span>
                        <span class="danger">@(overduePayments ?? 0)</span>
                    </div>
                    <div class="report-item">
                        <span>Due This Week:</span>
                        <span class="warning">@(dueSoonPayments ?? 0)</span>
                    </div>
                    <div class="report-item">
                        <span>Reminders Sent:</span>
                        <span>@(remindersSent ?? 0)/@(dueSoonPayments ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

