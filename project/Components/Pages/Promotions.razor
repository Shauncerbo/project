@page "/promotions"
@layout MainLayout
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@using project.Services
@inject IToastService ToastService

<div class="members-container">
    <!-- Page Header - title only (search/add moved below like Members table) -->
    <div class="page-header">
        <h1 class="page-title">Promotions Management</h1>
    </div>

    <!-- Promotions Data Table -->
    <div class="table-container">
        <div class="table-toolbar">
            <span class="table-title">Promotions</span>
            <input type="text"
                   class="search-bar"
                   placeholder="Search promotions..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddPromoModal">+ Create Promotion</button>
        </div>
        <table class="members-table">
            <thead>
                <tr>
                    <th>PROMO NAME</th>
                    <th>DESCRIPTION</th>
                    <th>DISCOUNT RATE</th>
                    <th>START DATE</th>
                    <th>END DATE</th>
                    <th>STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredPromotions == null || !filteredPromotions.Any())
                {
                    <tr>
                        <td colspan="7" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">🎯</span>
                                <p>No promotions found</p>
                                <p class="no-data-sub">Create your first promotion to get started</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var promo in filteredPromotions)
                    {
                        <tr>
                            <td>
                                <div class="promo-name">@promo.PromoName</div>
                            </td>
                            <td>
                                <div class="promo-description">@promo.Description</div>
                            </td>
                            <td class="discount-cell">
                                <span class="discount-rate">@promo.DiscountRate.ToString("F0")%</span>
                            </td>
                            <td>@promo.StartDate.ToString("MMM dd, yyyy")</td>
                            <td>@promo.EndDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="status-badge @GetStatusClass(promo)">
                                    @GetStatusText(promo)
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" @onclick="() => EditPromotion(promo)" title="Edit">
                                        <img src="/Newedit_icon.svg" class="action-icon" alt="Edit" />
                                    </button>
                                    <button class="action-btn archive-btn" @onclick="() => ShowArchiveConfirmation(promo)" title="Archive">
                                        <img src="/archived_icon.svg" class="action-icon" alt="Archive" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Promotion Modal -->
    @if (showPromoModal)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Promotion" : "Create New Promotion")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">
                    <!-- Promo Name -->
                    <div class="form-group">
                        <label class="required">Promotion Name</label>
                        <input type="text"
                               class="form-control @(validationErrors.ContainsKey("PromoName") ? "error" : "")"
                               @bind="currentPromo.PromoName"
                               placeholder="Enter promotion name" />
                        @if (validationErrors.ContainsKey("PromoName"))
                        {
                            <div class="error-message">@validationErrors["PromoName"]</div>
                        }
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label class="required">Description</label>
                        <textarea class="form-control @(validationErrors.ContainsKey("Description") ? "error" : "")"
                                  @bind="currentPromo.Description"
                                  placeholder="Enter promotion description"
                                  rows="3"></textarea>
                        @if (validationErrors.ContainsKey("Description"))
                        {
                            <div class="error-message">@validationErrors["Description"]</div>
                        }
                    </div>

                    <!-- Discount Rate -->
                    <div class="form-group">
                        <label class="required">Discount Rate (%)</label>
                        <input type="number"
                               step="1"
                               min="1"
                               max="100"
                               class="form-control @(validationErrors.ContainsKey("DiscountRate") ? "error" : "")"
                               @bind="currentPromo.DiscountRate"
                               placeholder="Enter discount percentage" />
                        @if (validationErrors.ContainsKey("DiscountRate"))
                        {
                            <div class="error-message">@validationErrors["DiscountRate"]</div>
                        }
                    </div>

                    <!-- Date Range -->
                    <div class="form-row">
                        <div class="form-group">
                            <label class="required">Start Date</label>
                            <input type="date"
                                   class="form-control @(validationErrors.ContainsKey("StartDate") ? "error" : "")"
                                   @bind="currentPromo.StartDate"
                                   format="yyyy-MM-dd" />
                            @if (validationErrors.ContainsKey("StartDate"))
                            {
                                <div class="error-message">@validationErrors["StartDate"]</div>
                            }
                        </div>
                        <div class="form-group">
                            <label class="required">End Date</label>
                            <input type="date"
                                   class="form-control @(validationErrors.ContainsKey("EndDate") ? "error" : "")"
                                   @bind="currentPromo.EndDate"
                                   format="yyyy-MM-dd" />
                            @if (validationErrors.ContainsKey("EndDate"))
                            {
                                <div class="error-message">@validationErrors["EndDate"]</div>
                            }
                        </div>
                    </div>

                 

                    <!-- General error message -->
                    @if (validationErrors.ContainsKey("General"))
                    {
                        <div class="general-error-message">
                            @validationErrors["General"]
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="SavePromotion">
                        @(isEditMode ? "Update" : "Create") Promotion
                    </button>
                </div>
            </div>
        </div>
    }

    @if (showArchiveConfirmation)
    {
        <div class="modal-overlay" @onclick="CloseArchiveConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Archive Promotion</h2>
                    <button class="close-btn" @onclick="CloseArchiveConfirmation">×</button>
                </div>

                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Archive Promotion</h3>
                        <p>You are about to archive <strong>@selectedPromotion?.PromoName</strong>.</p>
                        <div class="confirmation-warning-box">
                            This will remove the promotion from the active list but keep it in history.
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseArchiveConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmArchivePromotion">Yes, Archive</button>
                </div>
            </div>
        </div>
    }
</div>

