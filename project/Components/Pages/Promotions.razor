@code {
    private string searchQuery = "";
    private bool showPromoModal = false;
    private bool isEditMode = false;
    private Promotion currentPromo = new Promotion();
    private List<Promotion> promotions = new List<Promotion>();
    private List<Promotion> filteredPromotions = new List<Promotion>();
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();

    protected override void OnInitialized()
    {
        LoadSampleData();
        filteredPromotions = promotions;
    }

    private void LoadSampleData()
    {
        promotions = new List<Promotion>
        {
            new Promotion {
                PromoID = "PROMO001",
                PromoName = "Summer Fitness Special",
                Description = "Get fit this summer with our exclusive member-only discount",
                DiscountRate = 20,
                StartDate = DateTime.Now.AddDays(-10),
                EndDate = DateTime.Now.AddDays(20)
            },
            new Promotion {
                PromoID = "PROMO002",
                PromoName = "New Year Resolution",
                Description = "Start your fitness journey with this special new year offer for members",
                DiscountRate = 15,
                StartDate = DateTime.Now.AddDays(5),
                EndDate = DateTime.Now.AddDays(35)
            },
            new Promotion {
                PromoID = "PROMO003",
                PromoName = "Loyalty Reward",
                Description = "Special discount for our loyal gym members",
                DiscountRate = 25,
                StartDate = DateTime.Now.AddDays(-30),
                EndDate = DateTime.Now.AddDays(-1)
            }
        };
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredPromotions = promotions;
        }
        else
        {
            filteredPromotions = promotions.Where(p =>
                p.PromoID.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                p.PromoName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                p.Description.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void OpenAddPromoModal()
    {
        isEditMode = false;
        currentPromo = new Promotion
        {
            PromoID = $"PROMO{(promotions.Count + 1):D3}",
            StartDate = DateTime.Now,
            EndDate = DateTime.Now.AddDays(30)
        };
        validationErrors.Clear();
        showPromoModal = true;
        StateHasChanged();
    }

    private void EditPromotion(Promotion promo)
    {
        isEditMode = true;
        currentPromo = new Promotion
        {
            PromoID = promo.PromoID,
            PromoName = promo.PromoName,
            Description = promo.Description,
            DiscountRate = promo.DiscountRate,
            StartDate = promo.StartDate,
            EndDate = promo.EndDate
        };
        validationErrors.Clear();
        showPromoModal = true;
        StateHasChanged();
    }

    private void ArchivePromotion(Promotion promo)
    {
        // TODO: Add archive confirmation dialog or logic
        promotions.Remove(promo);
        HandleSearch();
        StateHasChanged();
    }

    private void ValidatePromotion()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentPromo.PromoName))
        {
            validationErrors["PromoName"] = "Promotion name is required";
        }

        if (string.IsNullOrWhiteSpace(currentPromo.Description))
        {
            validationErrors["Description"] = "Description is required";
        }

        if (currentPromo.DiscountRate <= 0 || currentPromo.DiscountRate > 100)
        {
            validationErrors["DiscountRate"] = "Discount rate must be between 1% and 100%";
        }

        if (currentPromo.StartDate >= currentPromo.EndDate)
        {
            validationErrors["EndDate"] = "End date must be after start date";
        }

        if (currentPromo.StartDate < DateTime.Now.Date && !isEditMode)
        {
            validationErrors["StartDate"] = "Start date cannot be in the past";
        }

        if (validationErrors.Count > 0)
        {
            validationErrors["General"] = "Please fill in all required fields correctly";
        }
    }

    private void SavePromotion()
    {
        ValidatePromotion();

        if (validationErrors.Count > 0)
        {
            StateHasChanged();
            return;
        }

        if (isEditMode)
        {
            var existingPromo = promotions.FirstOrDefault(p => p.PromoID == currentPromo.PromoID);
            if (existingPromo != null)
            {
                existingPromo.PromoName = currentPromo.PromoName;
                existingPromo.Description = currentPromo.Description;
                existingPromo.DiscountRate = currentPromo.DiscountRate;
                existingPromo.StartDate = currentPromo.StartDate;
                existingPromo.EndDate = currentPromo.EndDate;
            }
        }
        else
        {
            promotions.Add(currentPromo);
        }

        HandleSearch();
        CloseModal();
    }

    private void CloseModal()
    {
        showPromoModal = false;
        currentPromo = new Promotion();
        validationErrors.Clear();
        StateHasChanged();
    }

    private string GetStatusClass(Promotion promo)
    {
        var today = DateTime.Today;
        if (today < promo.StartDate.Date)
            return "status-upcoming";
        else if (today > promo.EndDate.Date)
            return "status-expired";
        else
            return "status-active";
    }

    private string GetStatusText(Promotion promo)
    {
        var today = DateTime.Today;
        if (today < promo.StartDate.Date)
            return "Upcoming";
        else if (today > promo.EndDate.Date)
            return "Expired";
        else
            return "Active";
    }

    public class Promotion
    {
        public string PromoID { get; set; } = "";
        public string PromoName { get; set; } = "";
        public string Description { get; set; } = "";
        public decimal DiscountRate { get; set; }
        public DateTime StartDate { get; set; } = DateTime.Now;
        public DateTime EndDate { get; set; } = DateTime.Now.AddDays(30);
    }
}