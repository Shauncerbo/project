@page "/settings"
@layout MainLayout
@using System.Diagnostics
@using System.Linq
@using System.Collections.Generic
@using System.Threading.Tasks
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@inject project.Services.IAuthService AuthService
@inject project.Services.IToastService ToastService
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.Maui.Storage

<div class="settings-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Archived Items</h1>
        <p class="page-subtitle">Manage archived items and restore them if needed</p>
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs-container">
        <button class="tab-btn @(activeTab == "members" ? "active" : "")" @onclick='() => SwitchTab("members")'>
            <span class="tab-icon"></span>
            Archived Members
            @if (archivedMembersCount > 0)
            {
                <span class="badge">@archivedMembersCount</span>
            }
        </button>
        <button class="tab-btn @(activeTab == "promotions" ? "active" : "")" @onclick='() => SwitchTab("promotions")'>
            <span class="tab-icon"></span>
            Archived Promotions
            @if (archivedPromotionsCount > 0)
            {
                <span class="badge">@archivedPromotionsCount</span>
            }
        </button>
        <button class="tab-btn @(activeTab == "membershiptypes" ? "active" : "")" @onclick='() => SwitchTab("membershiptypes")'>
            <span class="tab-icon"></span>
            Archived Membership Types
            @if (archivedMembershipTypesCount > 0)
            {
                <span class="badge">@archivedMembershipTypesCount</span>
            }
        </button>
        </div>

    <!-- Tab Content -->
    <div class="tab-content">
        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="loading-spinner">Loading archived items...</div>
            </div>
        }
        else
        {
            <!-- Archived Members Tab -->
            @if (activeTab == "members")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Members</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived members..."
                               @bind="memberSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedMembers" />
                    </div>

                    @if (filteredArchivedMembers == null || !filteredArchivedMembers.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Members</h3>
                            <p>There are no archived members to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>NAME</th>
                                        <th>CONTACT</th>
                                        <th>EMAIL</th>
                                        <th>MEMBERSHIP TYPE</th>
                                        <th>ARCHIVED DATE</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in filteredArchivedMembers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="member-info">
                                                    <div class="member-avatar">@GetInitials(member.FirstName, member.LastName)</div>
                                                    <span>@GetDisplayName(member.FirstName, member.MiddleInitial, member.LastName)</span>
                                                </div>
                                            </td>
                                            <td>@member.ContactNumber</td>
                                            <td>@member.Email</td>
                                            <td>@(member.MembershipType?.TypeName ?? "N/A")</td>
                                            <td>-</td>
                                            <td>
                                                <button class="btn-restore" @onclick="() => RestoreMember(member)">
                                                    <span class="restore-icon"></span> Restore
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }

            <!-- Archived Promotions Tab -->
            @if (activeTab == "promotions")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Promotions</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived promotions..."
                               @bind="promotionSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedPromotions" />
                    </div>

                    @if (filteredArchivedPromotions == null || !filteredArchivedPromotions.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Promotions</h3>
                            <p>There are no archived promotions to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>PROMOTION NAME</th>
                                        <th>DISCOUNT RATE</th>
                                        <th>START DATE</th>
                                        <th>END DATE</th>
                                        <th>ARCHIVED DATE</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var promotion in filteredArchivedPromotions)
                                    {
                                        <tr>
                                            <td>@promotion.PromoName</td>
                                            <td>@promotion.DiscountRate%</td>
                                            <td>@promotion.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@promotion.EndDate.ToString("MMM dd, yyyy")</td>
                                            <td>-</td>
                                            <td>
                                                <button class="btn-restore" @onclick="() => RestorePromotion(promotion)">
                                                    <span class="restore-icon"></span> Restore
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }

            <!-- Archived Membership Types Tab -->
            @if (activeTab == "membershiptypes")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Membership Types</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived membership types..."
                               @bind="membershipTypeSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedMembershipTypes" />
                    </div>

                    @if (filteredArchivedMembershipTypes == null || !filteredArchivedMembershipTypes.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Membership Types</h3>
                            <p>There are no archived membership types to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>TYPE NAME</th>
                                        <th>PRICE</th>
                                        <th>DURATION</th>
                                        <th>ARCHIVED DATE</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var membershipType in filteredArchivedMembershipTypes)
                                    {
                                        <tr>
                                            <td>@membershipType.TypeName</td>
                                            <td>₱@membershipType.Price.ToString("N2")</td>
                                            <td>@membershipType.DurationInDays days</td>
                                            <td>-</td>
                                            <td>
                                                <button class="btn-restore" @onclick="() => RestoreMembershipType(membershipType)">
                                                    <span class="restore-icon"></span> Restore
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <!-- Restore Member Confirmation Modal -->
    @if (showRestoreMemberConfirmation && selectedRestoreMember != null)
    {
        <div class="modal-overlay" @onclick="CloseRestoreMemberConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Member</h2>
                    <button class="close-btn" @onclick="CloseRestoreMemberConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Member</h3>
                        <p>You are about to restore <strong>@GetDisplayName(selectedRestoreMember.FirstName, selectedRestoreMember.MiddleInitial, selectedRestoreMember.LastName)</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the member and make them available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestoreMemberConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmRestoreMember" disabled="@isRestoringMember">
                        @(isRestoringMember ? "Restoring..." : "Yes, Restore Member")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Restore Promotion Confirmation Modal -->
    @if (showRestorePromotionConfirmation && selectedRestorePromotion != null)
    {
        <div class="modal-overlay" @onclick="CloseRestorePromotionConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Promotion</h2>
                    <button class="close-btn" @onclick="CloseRestorePromotionConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Promotion</h3>
                        <p>You are about to restore <strong>@selectedRestorePromotion.PromoName</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the promotion and make it available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestorePromotionConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmRestorePromotion" disabled="@isRestoringPromotion">
                        @(isRestoringPromotion ? "Restoring..." : "Yes, Restore Promotion")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Restore Membership Type Confirmation Modal -->
    @if (showRestoreMembershipTypeConfirmation && selectedRestoreMembershipType != null)
    {
        <div class="modal-overlay" @onclick="CloseRestoreMembershipTypeConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Membership Type</h2>
                    <button class="close-btn" @onclick="CloseRestoreMembershipTypeConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Membership Type</h3>
                        <p>You are about to restore <strong>@selectedRestoreMembershipType.TypeName</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the membership type and make it available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestoreMembershipTypeConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmRestoreMembershipType" disabled="@isRestoringMembershipType">
                        @(isRestoringMembershipType ? "Restoring..." : "Yes, Restore Membership Type")
                    </button>
                </div>
            </div>
        </div>
    }
</div>

