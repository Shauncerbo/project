<div class="settings-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Archived Items</h1>
        <p class="page-subtitle">Manage archived items and restore them if needed</p>
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs-container">
        <button class="tab-btn @(activeTab == "promotions" ? "active" : "")" @onclick='() => SwitchTab("promotions")'>
            <span class="tab-icon"></span>
            Archived Promotions
            @if (archivedPromotionsCount > 0)
            {
                <span class="badge">@archivedPromotionsCount</span>
            }
        </button>
        <button class="tab-btn @(activeTab == "membershiptypes" ? "active" : "")" @onclick='() => SwitchTab("membershiptypes")'>
            <span class="tab-icon"></span>
            Archived Membership Types
            @if (archivedMembershipTypesCount > 0)
            {
                <span class="badge">@archivedMembershipTypesCount</span>
            }
        </button>
        </div>

    <!-- Tab Content -->
    <div class="tab-content">
        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="loading-spinner">Loading archived items...</div>
            </div>
        }
        else
        {
            <!-- Archived Promotions Tab -->
            @if (activeTab == "promotions")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Promotions</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived promotions..."
                               @bind="promotionSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedPromotions" />
                    </div>

                    @if (filteredArchivedPromotions == null || !filteredArchivedPromotions.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Promotions</h3>
                            <p>There are no archived promotions to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>PROMOTION NAME</th>
                                        <th>DISCOUNT RATE</th>
                                        <th>START DATE</th>
                                        <th>END DATE</th>
                                        <th>ARCHIVED DATE</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var promotion in filteredArchivedPromotions)
                                    {
                                        <tr>
                                            <td>@promotion.PromoName</td>
                                            <td>@promotion.DiscountRate%</td>
                                            <td>@promotion.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@promotion.EndDate.ToString("MMM dd, yyyy")</td>
                                            <td>@(promotion.ArchivedDate.HasValue ? promotion.ArchivedDate.Value.ToString("MMM dd, yyyy") : "-")</td>
                                            <td class="account-actions">
                                                <button class="btn-restore" @onclick="() => RestorePromotion(promotion)" title="Restore">
                                                    <img src="/restore_icon.svg" alt="Restore" class="restore-icon-svg" />
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }

            <!-- Archived Membership Types Tab -->
            @if (activeTab == "membershiptypes")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Membership Types</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived membership types..."
                               @bind="membershipTypeSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedMembershipTypes" />
                    </div>

                    @if (filteredArchivedMembershipTypes == null || !filteredArchivedMembershipTypes.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Membership Types</h3>
                            <p>There are no archived membership types to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>TYPE NAME</th>
                                        <th>PRICE</th>
                                        <th>DURATION</th>
                                        <th>ARCHIVED DATE</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var membershipType in filteredArchivedMembershipTypes)
                                    {
                                        <tr>
                                            <td>@membershipType.TypeName</td>
                                            <td>₱@membershipType.Price.ToString("N2")</td>
                                            <td>@membershipType.DurationInDays days</td>
                                            <td>@(membershipType.ArchivedDate.HasValue ? membershipType.ArchivedDate.Value.ToString("MMM dd, yyyy") : "-")</td>
                                            <td class="account-actions">
                                                <button class="btn-restore" @onclick="() => RestoreMembershipType(membershipType)" title="Restore">
                                                    <img src="/restore_icon.svg" alt="Restore" class="restore-icon-svg" />
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <!-- Restore Promotion Confirmation Modal -->
    @if (showRestorePromotionConfirmation && selectedRestorePromotion != null)
    {
        <div class="modal-overlay" @onclick="CloseRestorePromotionConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Promotion</h2>
                    <button class="close-btn" @onclick="CloseRestorePromotionConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Promotion</h3>
                        <p>You are about to restore <strong>@selectedRestorePromotion.PromoName</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the promotion and make it available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestorePromotionConfirmation">Cancel</button>
                    <button class="btn btn-primary" @onclick="ConfirmRestorePromotion" disabled="@isRestoringPromotion">
                        @(isRestoringPromotion ? "Restoring..." : "Yes, Restore Promotion")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Restore Membership Type Confirmation Modal -->
    @if (showRestoreMembershipTypeConfirmation && selectedRestoreMembershipType != null)
    {
        <div class="modal-overlay" @onclick="CloseRestoreMembershipTypeConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Membership Type</h2>
                    <button class="close-btn" @onclick="CloseRestoreMembershipTypeConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Membership Type</h3>
                        <p>You are about to restore <strong>@selectedRestoreMembershipType.TypeName</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the membership type and make it available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestoreMembershipTypeConfirmation">Cancel</button>
                    <button class="btn btn-primary" @onclick="ConfirmRestoreMembershipType" disabled="@isRestoringMembershipType">
                        @(isRestoringMembershipType ? "Restoring..." : "Yes, Restore Membership Type")
                    </button>
                </div>
            </div>
        </div>
    }
</div>

