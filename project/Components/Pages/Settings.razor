        padding: 30px;
        background: #ffffff;
        min-height: calc(100vh - 80px);
    }

    .page-header {
        background: white;
        padding: 25px 30px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        margin: 0 0 8px 0;
        color: #234060;
    }

    .page-subtitle {
        font-size: 14px;
        color: #666;
        margin: 0;
    }

    .tabs-container {
        display: flex;
        gap: 10px;
        background: white;
        padding: 10px;
