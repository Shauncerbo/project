@page "/settings"
@layout MainLayout
@using System.Diagnostics
@using System.Linq
@using System.Collections.Generic
@using System.Threading.Tasks
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore

<div class="settings-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Settings</h1>
        <p class="page-subtitle">Manage archived items and restore them if needed</p>
    </div>

    <!-- Account Management -->
    <div class="account-management-card">
        <div class="account-header">
            <div>
                <h2>Account Management</h2>
                <p>Create and manage staff/trainer logins.</p>
            </div>
            <button class="btn-primary" @onclick="OpenAccountModal">
                + Add Account
            </button>
        </div>

        @if (accountLoadError != null)
        {
            <div class="account-error">@accountLoadError</div>
        }
        else if (accountIsLoading)
        {
            <div class="account-loading">Loading accounts...</div>
        }
        else if (activeUsers == null || !activeUsers.Any())
        {
            <div class="empty-state small">
                <div class="empty-icon">🔐</div>
                <h3>No Staff/Trainer Accounts</h3>
                <p>Create the first account to allow staff or trainers to log in.</p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="archived-table">
                    <thead>
                        <tr>
                            <th>USERNAME</th>
                            <th>ROLE</th>
                            <th>STATUS</th>
                            <th>CREATED</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in activeUsers)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Role?.RoleName</td>
                                <td>
                                    <span class="status-badge @(user.IsActive == true ? "status-active" : "status-inactive")">
                                        @(user.IsActive == true ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@(user.CreatedAt?.ToString("MMM dd, yyyy") ?? "-")</td>
                                <td class="account-actions">
                                    <button class="btn-secondary" @onclick="() => OpenPasswordModal(user)">Change Password</button>
                                    <button class="btn-link red" @onclick="() => ArchiveAccount(user)">
                                        Archive
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @if (archivedUsers != null && archivedUsers.Any())
        {
            <div class="archived-accounts">
                <h3>Archived Accounts</h3>
                <div class="table-container">
                    <table class="archived-table">
                        <thead>
                            <tr>
                                <th>USERNAME</th>
                                <th>ROLE</th>
                                <th>ARCHIVED ON</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in archivedUsers)
                            {
                                <tr>
                                    <td>@user.Username</td>
                                    <td>@user.Role?.RoleName</td>
                                    <td>@(user.UpdatedAt?.ToString("MMM dd, yyyy") ?? "-")</td>
                                    <td class="account-actions">
                                        <button class="btn-secondary" @onclick="() => RestoreAccount(user)">Restore</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs-container">
        <button class="tab-btn @(activeTab == "members" ? "active" : "")" @onclick='() => SwitchTab("members")'>
            <span class="tab-icon">👥</span>
            Archived Members
            @if (archivedMembersCount > 0)
            {
                <span class="badge">@archivedMembersCount</span>
            }
        </button>
        <button class="tab-btn @(activeTab == "walkins" ? "active" : "")" @onclick='() => SwitchTab("walkins")'>
            <span class="tab-icon">🚶‍♂️</span>
            Archived Walk-ins
            @if (archivedWalkinsCount > 0)
            {
                <span class="badge">@archivedWalkinsCount</span>
            }
        </button>
        <button class="tab-btn @(activeTab == "membershiptypes" ? "active" : "")" @onclick='() => SwitchTab("membershiptypes")'>
            <span class="tab-icon">💳</span>
            Archived Membership Types
            @if (archivedMembershipTypesCount > 0)
            {
                <span class="badge">@archivedMembershipTypesCount</span>
            }
        </button>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="loading-spinner">Loading archived items...</div>
            </div>
        }
        else
        {
            <!-- Archived Members Tab -->
            @if (activeTab == "members")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Members</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived members..."
                               @bind="memberSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedMembers" />
                    </div>

                    @if (filteredArchivedMembers == null || !filteredArchivedMembers.Any())
                    {
                        <div class="empty-state">
                            <div class="empty-icon">📦</div>
                            <h3>No Archived Members</h3>
                            <p>There are no archived members to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>NAME</th>
                                        <th>EMAIL</th>
                                        <th>CONTACT NUMBER</th>
                                        <th>JOIN DATE</th>
                                        <th>STATUS</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in filteredArchivedMembers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="member-info">
                                                    <div class="member-avatar">@GetInitials(member.FirstName, member.LastName)</div>
                                                    <span>@member.FirstName @member.LastName</span>
                                                </div>
                                            </td>
                                            <td>@member.Email</td>
                                            <td>@member.ContactNumber</td>
                                            <td>@member.JoinDate.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <span class="status-badge status-archived">@member.Status</span>
                                            </td>
                                            <td>
                                                <button class="btn-restore" @onclick="() => UnarchiveMember(member)" title="Restore">
                                                    <span class="restore-icon">↩️</span>
                                                    Restore
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }

            <!-- Archived Walk-ins Tab -->
            @if (activeTab == "walkins")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Walk-ins</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived walk-ins..."
                               @bind="walkinSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedWalkins" />
                    </div>

                    @if (filteredArchivedWalkins == null || !filteredArchivedWalkins.Any())
                    {
                        <div class="empty-state">
                            <div class="empty-icon">📦</div>
                            <h3>No Archived Walk-ins</h3>
                            <p>There are no archived walk-ins to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>NAME</th>
                                        <th>VISIT DATE</th>
                                        <th>PAYMENT AMOUNT</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var walkin in filteredArchivedWalkins)
                                    {
                                        <tr>
                                            <td>
                                                <div class="member-info">
                                                    <div class="member-avatar">@GetInitials(walkin.FirstName, walkin.LastName)</div>
                                                    <span>@GetFullName(walkin)</span>
                                                </div>
                                            </td>
                                            <td>@walkin.VisitDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                                            <td class="amount-cell">
                                                <span class="payment-amount">₱@walkin.PaymentAmount.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <button class="btn-restore" @onclick="() => UnarchiveWalkin(walkin)" title="Restore">
                                                    <span class="restore-icon">↩️</span>
                                                    Restore
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }

            <!-- Archived Membership Types Tab -->
            @if (activeTab == "membershiptypes")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Membership Types</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived membership types..."
                               @bind="membershipTypeSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedMembershipTypes" />
                    </div>

                    @if (filteredArchivedMembershipTypes == null || !filteredArchivedMembershipTypes.Any())
                    {
                        <div class="empty-state">
                            <div class="empty-icon">📦</div>
                            <h3>No Archived Membership Types</h3>
                            <p>There are no archived membership types to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>TYPE NAME</th>
                                        <th>PRICE</th>
                                        <th>DURATION (DAYS)</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var membershipType in filteredArchivedMembershipTypes)
                                    {
                                        <tr>
                                            <td>
                                                <div class="type-name">@membershipType.TypeName</div>
                                            </td>
                                            <td class="price-cell">
                                                <span class="price">₱@membershipType.Price.ToString("N2")</span>
                                            </td>
                                            <td>@membershipType.DurationInDays days</td>
                                            <td>
                                                <button class="btn-restore" @onclick="() => UnarchiveMembershipType(membershipType)" title="Restore">
                                                    <span class="restore-icon">↩️</span>
                                                    Restore
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>

@if (showAccountModal)
{
    <div class="modal-overlay">
        <div class="modal-card">
            <div class="modal-header">
                <h3>Create Account</h3>
                <button class="close-btn" @onclick="CloseAccountModal">×</button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(accountModalError))
                {
                    <div class="modal-error">@accountModalError</div>
                }
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" @bind="newAccountUsername" @bind:event="oninput" placeholder="Enter username" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" @bind="newAccountPassword" @bind:event="oninput" placeholder="Enter password" />
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select @bind="selectedRoleId">
                        @foreach (var role in availableRoles)
                        {
                            <option value="@role.RoleID">@role.RoleName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseAccountModal">Cancel</button>
                <button class="btn-primary" @onclick="SaveAccount" disabled="@isSavingAccount">
                    @(isSavingAccount ? "Saving..." : "Save Account")
                </button>
            </div>
        </div>
    </div>
}

@if (showPasswordModal && selectedPasswordUser != null)
{
    <div class="modal-overlay">
        <div class="modal-card">
            <div class="modal-header">
                <h3>Change Password</h3>
                <button class="close-btn" @onclick="ClosePasswordModal">×</button>
            </div>
            <div class="modal-body">
                <p class="modal-subtitle">Updating password for <strong>@selectedPasswordUser.Username</strong></p>
                @if (!string.IsNullOrEmpty(passwordModalError))
                {
                    <div class="modal-error">@passwordModalError</div>
                }
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" @bind="passwordInput" @bind:event="oninput" placeholder="Enter new password" />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" @bind="passwordConfirm" @bind:event="oninput" placeholder="Confirm new password" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="ClosePasswordModal">Cancel</button>
                <button class="btn-primary" @onclick="SavePasswordChange" disabled="@isSavingPassword">
                    @(isSavingPassword ? "Saving..." : "Update Password")
                </button>
            </div>
        </div>
    </div>
}

