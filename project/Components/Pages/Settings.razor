@code {
    private string activeTab = "promotions";
    private bool isLoading = false;
    
    // Search queries
    private string promotionSearchQuery = "";
    private string membershipTypeSearchQuery = "";

    // Archived data
    private List<Promotion> archivedPromotions = new List<Promotion>();
    private List<Promotion> filteredArchivedPromotions = new List<Promotion>();
    private List<project.Models.MembershipType> archivedMembershipTypes = new List<project.Models.MembershipType>();
    private List<project.Models.MembershipType> filteredArchivedMembershipTypes = new List<project.Models.MembershipType>();

    // Counts
    private int archivedPromotionsCount = 0;
    private int archivedMembershipTypesCount = 0;

    // Cleanup
    private bool isCleaningUp = false;

    // Restore confirmation modals
    private bool showRestorePromotionConfirmation = false;
    private Promotion? selectedRestorePromotion;
    private bool isRestoringPromotion = false;

    private bool showRestoreMembershipTypeConfirmation = false;
    private project.Models.MembershipType? selectedRestoreMembershipType;
    private bool isRestoringMembershipType = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedData();
    }

    private async Task LoadArchivedData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Try to load archived data with ArchivedDate support
            // If the column doesn't exist yet, this will fall back to basic loading
            try
            {
                var oneMonthAgo = DateTime.Now.AddMonths(-1);

                // Auto-delete promotions archived for 1+ months
                var oldPromotions = await Context.Promotions
                    .Where(p => p.IsArchived == true && 
                               p.ArchivedDate.HasValue && 
                               p.ArchivedDate.Value <= oneMonthAgo)
                    .ToListAsync();

                if (oldPromotions.Any())
                {
                    var deletedPromoNames = string.Join(", ", oldPromotions.Select(p => p.PromoName));
                    Context.Promotions.RemoveRange(oldPromotions);
                    await Context.SaveChangesAsync();
                    await LogAuditAction("Auto-Deleted Old Archived Promotions", "Promotion", null, deletedPromoNames, $"Automatically deleted {oldPromotions.Count} promotion(s) archived for 1+ months: {deletedPromoNames}");
                }

                // Auto-delete membership types archived for 1+ months
                var oldMembershipTypes = await Context.MembershipTypes
                    .Where(mt => mt.IsArchived == true && 
                                mt.ArchivedDate.HasValue && 
                                mt.ArchivedDate.Value <= oneMonthAgo)
                    .ToListAsync();

                if (oldMembershipTypes.Any())
                {
                    var deletedTypeNames = string.Join(", ", oldMembershipTypes.Select(mt => mt.TypeName));
                    Context.MembershipTypes.RemoveRange(oldMembershipTypes);
                    await Context.SaveChangesAsync();
                    await LogAuditAction("Auto-Deleted Old Archived Membership Types", "MembershipType", null, deletedTypeNames, $"Automatically deleted {oldMembershipTypes.Count} membership type(s) archived for 1+ months: {deletedTypeNames}");
                }

                // Load remaining archived promotions with ArchivedDate ordering
                // Group by unique key to remove duplicates (same name, dates, discount rate)
                var allArchivedPromotions = await Context.Promotions
                    .Where(p => p.IsArchived == true)
                    .OrderByDescending(p => p.ArchivedDate ?? DateTime.MinValue)
                    .ToListAsync();

                // Remove duplicates by grouping on PromoName, StartDate, EndDate, and DiscountRate
                archivedPromotions = allArchivedPromotions
                    .GroupBy(p => new
                    {
                        PromoName = (p.PromoName ?? "").Trim().ToLower(),
                        StartDate = p.StartDate.Date,
                        EndDate = p.EndDate.Date,
                        DiscountRate = p.DiscountRate
                    })
                    .Select(g => g.OrderByDescending(p => p.ArchivedDate ?? DateTime.MinValue).First())
                    .OrderByDescending(p => p.ArchivedDate ?? DateTime.MinValue)
                    .ToList();
            }
            catch (Exception dateEx)
            {
                // If ArchivedDate column doesn't exist yet, load without it
                System.Diagnostics.Debug.WriteLine($"ArchivedDate column may not exist yet: {dateEx.Message}");
                
                // Load archived promotions without ArchivedDate
                var allArchivedPromotionsFallback = await Context.Promotions
                    .Where(p => p.IsArchived == true)
                    .ToListAsync();

                // Remove duplicates by grouping on PromoName, StartDate, EndDate, and DiscountRate
                archivedPromotions = allArchivedPromotionsFallback
                    .GroupBy(p => new
                    {
                        PromoName = (p.PromoName ?? "").Trim().ToLower(),
                        StartDate = p.StartDate.Date,
                        EndDate = p.EndDate.Date,
                        DiscountRate = p.DiscountRate
                    })
                    .Select(g => g.OrderBy(p => p.PromoID).First())
                    .ToList();
            }

            filteredArchivedPromotions = archivedPromotions;
            archivedPromotionsCount = archivedPromotions.Count;

            // Load archived membership types
            try
            {
                archivedMembershipTypes = await Context.MembershipTypes
                    .Where(mt => mt.IsArchived == true)
                    .OrderByDescending(mt => mt.ArchivedDate ?? DateTime.MinValue)
                    .ToListAsync();
            }
            catch (Exception dateEx)
            {
                // If ArchivedDate column doesn't exist yet, load without it
                System.Diagnostics.Debug.WriteLine($"ArchivedDate column may not exist yet: {dateEx.Message}");
                
                archivedMembershipTypes = await Context.MembershipTypes
                    .Where(mt => mt.IsArchived == true)
                    .ToListAsync();
            }

            filteredArchivedMembershipTypes = archivedMembershipTypes;
            archivedMembershipTypesCount = archivedMembershipTypes.Count;
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading archived data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SwitchTab(string tab)
    {
        activeTab = tab;
        StateHasChanged();
    }

    private void FilterArchivedPromotions()
    {
        if (string.IsNullOrWhiteSpace(promotionSearchQuery))
        {
            filteredArchivedPromotions = archivedPromotions;
        }
        else
        {
            var query = promotionSearchQuery.ToLower();
            filteredArchivedPromotions = archivedPromotions
                .Where(p => p.PromoName.ToLower().Contains(query) ||
                           p.Description.ToLower().Contains(query) ||
                           p.DiscountRate.ToString().Contains(query))
                .ToList();
        }
        StateHasChanged();
    }

    private async Task CleanupDuplicatePromotions()
    {
        if (isCleaningUp)
            return;

        isCleaningUp = true;
        StateHasChanged();

        try
        {
            // Load all promotions
            var allPromotions = await Context.Promotions.ToListAsync();
            var initialCount = allPromotions.Count;

            // Group by unique key (name, dates, discount)
            var duplicateGroups = allPromotions
                .GroupBy(p => new
                {
                    PromoName = (p.PromoName ?? "").Trim().ToLower(),
                    StartDate = p.StartDate.Date,
                    EndDate = p.EndDate.Date,
                    DiscountRate = p.DiscountRate
                })
                .Where(g => g.Count() > 1)
                .ToList();

            int duplicatesRemoved = 0;

            foreach (var group in duplicateGroups)
            {
                var duplicates = group.OrderBy(p => p.PromoID).ToList();
                var keepPromotion = duplicates.First(); // Keep the one with lowest ID
                var removePromotions = duplicates.Skip(1).ToList();

                foreach (var duplicate in removePromotions)
                {
                    try
                    {
                        // Update MemberPromos references
                        var memberPromos = await Context.MemberPromos
                            .Where(mp => mp.PromotionID == duplicate.PromoID)
                            .ToListAsync();

                        foreach (var memberPromo in memberPromos)
                        {
                            var existing = await Context.MemberPromos
                                .FirstOrDefaultAsync(mp => mp.MemberID == memberPromo.MemberID && mp.PromotionID == keepPromotion.PromoID);

                            if (existing == null)
                            {
                                memberPromo.PromotionID = keepPromotion.PromoID;
                            }
                            else
                            {
                                Context.MemberPromos.Remove(memberPromo);
                            }
                        }

                        // Delete the duplicate promotion
                        Context.Promotions.Remove(duplicate);
                        duplicatesRemoved++;
                    }
                    catch (Exception ex)
                    {
                        System.Diagnostics.Debug.WriteLine($"Error removing duplicate promotion {duplicate.PromoID}: {ex.Message}");
                    }
                }
            }

            if (duplicatesRemoved > 0)
            {
                await Context.SaveChangesAsync();
                await LogAuditAction("Manual Duplicate Cleanup", "Promotion", null, "Multiple", $"Removed {duplicatesRemoved} duplicate promotions");
                ToastService.ShowSuccess($"Successfully removed {duplicatesRemoved} duplicate promotions!");
                
                // Reload data
                await LoadArchivedData();
            }
            else
            {
                ToastService.ShowInfo("No duplicate promotions found.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error cleaning up duplicates: {ex.Message}");
            await LogAuditAction("Duplicate Cleanup Failed", "Promotion", null, "Multiple", $"Failed to cleanup duplicates: {ex.Message}", "Failed", ex.Message);
        }
        finally
        {
            isCleaningUp = false;
            StateHasChanged();
        }
    }

    private void FilterArchivedMembershipTypes()
    {
        if (string.IsNullOrWhiteSpace(membershipTypeSearchQuery))
        {
            filteredArchivedMembershipTypes = archivedMembershipTypes;
        }
        else
        {
            var query = membershipTypeSearchQuery.ToLower();
            filteredArchivedMembershipTypes = archivedMembershipTypes
                .Where(mt => mt.TypeName.ToLower().Contains(query) ||
                           mt.Price.ToString().Contains(query) ||
                           mt.DurationInDays.ToString().Contains(query))
                .ToList();
        }
        StateHasChanged();
    }

