        color: white;
    }

    .tab-icon {
        font-size: 18px;
    }

    .badge {
        background: #e74c3c;
        color: white;
        border-radius: 12px;
        padding: 2px 8px;
        font-size: 11px;
        font-weight: 700;
        margin-left: 4px;
    }

    .tab-btn.active .badge {
        background: rgba(255,255,255,0.3);
    }

