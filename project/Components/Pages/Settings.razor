@code {
    private string activeTab = "members";
    private bool isLoading = false;
    
    // Account management
    private List<User> activeUsers = new();
    private List<User> archivedUsers = new();
    private List<Role> availableRoles = new();
    private bool accountIsLoading = false;
    private bool showAccountModal = false;
    private bool isSavingAccount = false;
    private string? accountLoadError;
    private string accountModalError = "";
    private string newAccountUsername = "";
    private string newAccountPassword = "";
    private int selectedRoleId = 0;
    private bool showPasswordModal = false;
    private User? selectedPasswordUser;
    private string passwordInput = "";
    private string passwordConfirm = "";
    private string passwordModalError = "";
    private bool isSavingPassword = false;
    
    // Search queries
    private string memberSearchQuery = "";
    private string walkinSearchQuery = "";
    private string membershipTypeSearchQuery = "";

    // Archived data
    private List<Member> archivedMembers = new List<Member>();
    private List<Member> filteredArchivedMembers = new List<Member>();
    private List<WalkIn> archivedWalkins = new List<WalkIn>();
    private List<WalkIn> filteredArchivedWalkins = new List<WalkIn>();
    private List<project.Models.MembershipType> archivedMembershipTypes = new List<project.Models.MembershipType>();
    private List<project.Models.MembershipType> filteredArchivedMembershipTypes = new List<project.Models.MembershipType>();

    // Counts
    private int archivedMembersCount = 0;
    private int archivedWalkinsCount = 0;
    private int archivedMembershipTypesCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedData();
        await LoadAccountData();
    }

    private async Task LoadArchivedData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Load archived members
            archivedMembers = await Context.Members
                .Where(m => m.IsArchived == true)
                .Include(m => m.MembershipType)
                .ToListAsync();
            filteredArchivedMembers = archivedMembers;
            archivedMembersCount = archivedMembers.Count;

            // Load archived walk-ins
            archivedWalkins = await Context.WalkIns
                .Where(w => w.IsArchived == true)
                .ToListAsync();
            filteredArchivedWalkins = archivedWalkins;
            archivedWalkinsCount = archivedWalkins.Count;

            // Load archived membership types
            archivedMembershipTypes = await Context.MembershipTypes
                .Where(mt => mt.IsArchived == true)
                .ToListAsync();
            filteredArchivedMembershipTypes = archivedMembershipTypes;
            archivedMembershipTypesCount = archivedMembershipTypes.Count;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading archived data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadAccountData()
    {
        accountIsLoading = true;
        accountLoadError = null;
        StateHasChanged();

        try
        {
            availableRoles = await Context.Roles
                .Where(r => r.RoleName == "Staff" || r.RoleName == "Trainer")
                .OrderBy(r => r.RoleName)
                .ToListAsync();

            if (selectedRoleId == 0 && availableRoles.Any())
            {
                selectedRoleId = availableRoles.First().RoleID;
            }

            var managedRoleIds = availableRoles.Select(r => r.RoleID).ToList();

            var managedUsers = await Context.Users
                .Include(u => u.Role)
                .Where(u => managedRoleIds.Contains(u.RoleID))
                .OrderBy(u => u.Username)
                .ToListAsync();

            activeUsers = managedUsers.Where(u => u.IsActive == true).ToList();
            archivedUsers = managedUsers.Where(u => u.IsActive == false).ToList();
        }
        catch (Exception ex)
        {
            accountLoadError = $"Error loading accounts: {ex.Message}";
        }
        finally
        {
            accountIsLoading = false;
            StateHasChanged();
        }
    }

    private void SwitchTab(string tab)
    {
        activeTab = tab;
        StateHasChanged();
    }

    private void FilterArchivedMembers()
    {
        if (string.IsNullOrWhiteSpace(memberSearchQuery))
        {
            filteredArchivedMembers = archivedMembers;
        }
        else
        {
            var query = memberSearchQuery.ToLower();
            filteredArchivedMembers = archivedMembers
                .Where(m => m.FirstName.ToLower().Contains(query) ||
                           m.LastName.ToLower().Contains(query) ||
                           m.Email.ToLower().Contains(query) ||
                           m.ContactNumber.Contains(query))
                .ToList();
        }
        StateHasChanged();
    }

    private void FilterArchivedWalkins()
    {
        if (string.IsNullOrWhiteSpace(walkinSearchQuery))
        {
            filteredArchivedWalkins = archivedWalkins;
        }
        else
        {
            var query = walkinSearchQuery.ToLower();
            filteredArchivedWalkins = archivedWalkins
                .Where(w => w.FirstName.ToLower().Contains(query) ||
                           w.LastName.ToLower().Contains(query) ||
                           w.MiddleName.ToLower().Contains(query))
                .ToList();
        }
        StateHasChanged();
    }

    private void FilterArchivedMembershipTypes()
    {
        if (string.IsNullOrWhiteSpace(membershipTypeSearchQuery))
        {
            filteredArchivedMembershipTypes = archivedMembershipTypes;
        }
        else
        {
            var query = membershipTypeSearchQuery.ToLower();
            filteredArchivedMembershipTypes = archivedMembershipTypes
                .Where(mt => mt.TypeName.ToLower().Contains(query) ||
                           mt.Price.ToString().Contains(query) ||
                           mt.DurationInDays.ToString().Contains(query))
                .ToList();
        }
        StateHasChanged();
    }

    private async Task UnarchiveMember(Member member)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore member '{member.FirstName} {member.LastName}'?");
        if (!confirm)
            return;

        try
        {
            member.IsArchived = false;
            Context.Members.Update(member);
            await Context.SaveChangesAsync();
            await LoadArchivedData();
            await JSRuntime.InvokeVoidAsync("alert", "Member restored successfully!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error restoring member: {ex.Message}");
        }
    }

    private async Task UnarchiveWalkin(WalkIn walkin)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore walk-in '{GetFullName(walkin)}'?");
        if (!confirm)
            return;

        try
        {
            walkin.IsArchived = false;
            Context.WalkIns.Update(walkin);
            await Context.SaveChangesAsync();
            await LoadArchivedData();
            await JSRuntime.InvokeVoidAsync("alert", "Walk-in restored successfully!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error restoring walk-in: {ex.Message}");
        }
    }

    private async Task UnarchiveMembershipType(project.Models.MembershipType membershipType)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore membership type '{membershipType.TypeName}'?");
        if (!confirm)
            return;

        try
        {
            membershipType.IsArchived = false;
            Context.MembershipTypes.Update(membershipType);
            await Context.SaveChangesAsync();
            await LoadArchivedData();
            await JSRuntime.InvokeVoidAsync("alert", "Membership type restored successfully!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error restoring membership type: {ex.Message}");
        }
    }

    private string GetInitials(string firstName, string lastName)
    {
        var firstInitial = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString().ToUpper() : "";
        var lastInitial = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString().ToUpper() : "";
        return $"{firstInitial}{lastInitial}";
    }

    private string GetFullName(WalkIn walkin)
    {
        if (walkin == null) return "";
        
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(walkin.FirstName)) parts.Add(walkin.FirstName);
        if (!string.IsNullOrWhiteSpace(walkin.MiddleName)) parts.Add(walkin.MiddleName);
        if (!string.IsNullOrWhiteSpace(walkin.LastName)) parts.Add(walkin.LastName);
        
        return string.Join(" ", parts);
    }

    private void OpenAccountModal()
    {
        accountModalError = "";
        newAccountUsername = "";
        newAccountPassword = "";
        if (availableRoles.Any())
        {
            selectedRoleId = availableRoles.First().RoleID;
        }
        showAccountModal = true;
    }

    private void CloseAccountModal()
    {
        showAccountModal = false;
        accountModalError = "";
        isSavingAccount = false;
    }

    private async Task SaveAccount()
    {
        if (isSavingAccount)
            return;

        accountModalError = "";

        if (string.IsNullOrWhiteSpace(newAccountUsername) || string.IsNullOrWhiteSpace(newAccountPassword))
        {
            accountModalError = "Username and password are required.";
            return;
        }

        if (!availableRoles.Any())
        {
            accountModalError = "No roles available. Please add Staff or Trainer roles first.";
            return;
        }

        isSavingAccount = true;

        try
        {
            var username = newAccountUsername.Trim();

            var exists = await Context.Users
                .AnyAsync(u => u.Username.ToLower() == username.ToLower());

            if (exists)
            {
                accountModalError = "Username already exists.";
                return;
            }

            var user = new User
            {
                Username = username,
                Password = newAccountPassword.Trim(),
                RoleID = selectedRoleId,
                IsActive = true,
                CreatedAt = DateTime.Now
            };

            Context.Users.Add(user);
            await Context.SaveChangesAsync();

            await LoadAccountData();
            CloseAccountModal();
            await JSRuntime.InvokeVoidAsync("alert", "Account created successfully.");
        }
        catch (Exception ex)
        {
            accountModalError = $"Error creating account: {ex.Message}";
        }
        finally
        {
            isSavingAccount = false;
            StateHasChanged();
        }
    }

    private void OpenPasswordModal(User user)
    {
        selectedPasswordUser = user;
        passwordInput = "";
        passwordConfirm = "";
        passwordModalError = "";
        isSavingPassword = false;
        showPasswordModal = true;
    }

    private void ClosePasswordModal()
    {
        showPasswordModal = false;
        selectedPasswordUser = null;
        passwordInput = "";
        passwordConfirm = "";
        passwordModalError = "";
        isSavingPassword = false;
    }

    private async Task SavePasswordChange()
    {
        if (selectedPasswordUser == null || isSavingPassword)
            return;

        passwordModalError = "";

        if (string.IsNullOrWhiteSpace(passwordInput) || string.IsNullOrWhiteSpace(passwordConfirm))
        {
            passwordModalError = "Please enter and confirm the new password.";
            return;
        }

        if (passwordInput.Length < 4)
        {
            passwordModalError = "Password must be at least 4 characters.";
            return;
        }

        if (passwordInput != passwordConfirm)
        {
            passwordModalError = "Passwords do not match.";
            return;
        }

        isSavingPassword = true;

        try
        {
            selectedPasswordUser.Password = passwordInput.Trim();
            selectedPasswordUser.LastPasswordChange = DateTime.Now;
            Context.Users.Update(selectedPasswordUser);
            await Context.SaveChangesAsync();
            await JSRuntime.InvokeVoidAsync("alert", "Password updated.");
            ClosePasswordModal();
        }
        catch (Exception ex)
        {
            passwordModalError = $"Error updating password: {ex.Message}";
        }
        finally
        {
            isSavingPassword = false;
            StateHasChanged();
        }
    }

    private async Task ArchiveAccount(User user)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Archive account '{user.Username}'?");
        if (!confirm)
            return;

        try
        {
            user.IsActive = false;
            user.UpdatedAt = DateTime.Now;
            Context.Users.Update(user);
            await Context.SaveChangesAsync();
            await LoadAccountData();
            await JSRuntime.InvokeVoidAsync("alert", "Account archived.");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error archiving account: {ex.Message}");
        }
    }

    private async Task RestoreAccount(User user)
    {
        try
        {
            user.IsActive = true;
            user.UpdatedAt = DateTime.Now;
            Context.Users.Update(user);
            await Context.SaveChangesAsync();
            await LoadAccountData();
            await JSRuntime.InvokeVoidAsync("alert", "Account restored.");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error restoring account: {ex.Message}");
        }
    }
