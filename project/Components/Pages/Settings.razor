@code {
    // Gym Information
    private string GymName { get; set; } = "PowerHouse Gym";
    private string Address { get; set; } = "123 Fitness Street, Quezon City, Philippines 1100";
    private string ContactNumber { get; set; } = "+63 912 345 6789";
    private string Email { get; set; } = "info@powerhousegym.com";

    // System Logs
    private List<SystemLog> SystemLogs { get; set; } = new();
    private DateTime LastLogUpdate { get; set; } = DateTime.Now;

    protected override void OnInitialized()
    {
        LoadSampleLogs();
    }

    private void LoadSampleLogs()
    {
        SystemLogs = new List<SystemLog>
        {
            new SystemLog { Timestamp = DateTime.Now.AddMinutes(-30), Action = "Member check-in: John Doe", User = "System" },
            new SystemLog { Timestamp = DateTime.Now.AddHours(-1), Action = "Payment received: ₱1,500", User = "Admin" },
            new SystemLog { Timestamp = DateTime.Now.AddHours(-2), Action = "New member registration", User = "Staff" },
            new SystemLog { Timestamp = DateTime.Now.AddHours(-4), Action = "Settings updated", User = "Admin" },
            new SystemLog { Timestamp = DateTime.Now.AddDays(-1), Action = "Monthly report generated", User = "System" },
            new SystemLog { Timestamp = DateTime.Now.AddDays(-2), Action = "Equipment maintenance logged", User = "Staff" }
        };
        LastLogUpdate = DateTime.Now;
    }

    private void SaveSettings(string section)
    {
        // Add to system logs
        SystemLogs.Insert(0, new SystemLog
        {
            Timestamp = DateTime.Now,
            Action = $"{section} updated",
            User = "Admin"
        });

        Debug.WriteLine($"{section} settings saved.");
        StateHasChanged();
    }

    private void ViewLogs()
    {
        Debug.WriteLine("Viewing all system logs...");
        // Implement full log view functionality
    }

    private void ExportLogs()
    {
        Debug.WriteLine("Exporting system logs...");
        // Implement log export functionality
    }

    private void ClearOldLogs()
    {
        SystemLogs.RemoveAll(log => log.Timestamp < DateTime.Now.AddDays(-30));
        LastLogUpdate = DateTime.Now;
        Debug.WriteLine("Old logs cleared.");
        StateHasChanged();
    }

    private class SystemLog
    {
        public DateTime Timestamp { get; set; }
        public string Action { get; set; } = string.Empty;
        public string User { get; set; } = string.Empty;
    }
}