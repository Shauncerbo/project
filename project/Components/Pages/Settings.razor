        .section-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .search-bar {
            width: 100%;
        }

        .tabs-container {
            flex-wrap: wrap;
        }
    }

    .account-management-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 25px;
        margin-bottom: 20px;
    }

    .account-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
