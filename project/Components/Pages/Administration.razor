@page "/administration"
@layout MainLayout
@using System.Linq
@using System.Collections.Generic
@using System.Threading.Tasks
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@inject project.Services.IAuthService AuthService
@inject project.Services.IToastService ToastService
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.Maui.Storage

<div class="settings-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Account Management</h1>
        <p class="page-subtitle">Create and manage staff/trainer logins.</p>
    </div>

    <!-- Account Management -->
    <div class="account-management-card">
        <div class="account-header">
            <div>
                <h2>Account Management</h2>
                <p>Create and manage staff/trainer logins.</p>
            </div>
            <button class="btn-primary" @onclick="OpenAccountModal">
                + Add Account
            </button>
        </div>

        @if (accountLoadError != null)
        {
            <div class="account-error">@accountLoadError</div>
        }
        else if (accountIsLoading)
        {
            <div class="account-loading">Loading accounts...</div>
        }
        else if (activeUsers == null || !activeUsers.Any())
        {
            <div class="empty-state small">
                <h3>No Staff/Trainer Accounts</h3>
                <p>Create the first account to allow staff or trainers to log in.</p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="archived-table">
                    <thead>
                        <tr>
                            <th>USERNAME</th>
                            <th>ROLE</th>
                            <th>STATUS</th>
                            <th>CREATED</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in activeUsers)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Role?.RoleName</td>
                                <td>
                                    <span class="status-badge @(user.IsActive == true ? "status-active" : "status-inactive")">
                                        @(user.IsActive == true ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@(user.CreatedAt.HasValue ? user.CreatedAt.Value.ToString("MMM dd, yyyy") : "-")</td>
                                <td class="account-actions">
                                    <button class="btn-secondary" @onclick="() => OpenPasswordModal(user)">Change Password</button>
                                    <button class="btn-archive" @onclick="() => ArchiveAccount(user)">
                                        Archive
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- Add Account Modal -->
    @if (showAccountModal)
    {
        <div class="modal-overlay" @onclick="CloseAccountModal">
            <div class="modal-card" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Add New Account</h2>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(accountModalError))
                    {
                        <div class="account-error">@accountModalError</div>
                    }
                    <div class="form-group">
                        <label class="required">Username</label>
                        <input type="text" class="form-control" @bind="newAccountUsername" placeholder="Enter username" />
                    </div>
                    <div class="form-group">
                        <label class="required">Password</label>
                        <input type="password" class="form-control" @bind="newAccountPassword" placeholder="Enter password" />
                    </div>
                    <div class="form-group">
                        <label class="required">Role</label>
                        <select class="form-control" @bind="selectedRoleId">
                            @foreach (var role in availableRoles)
                            {
                                <option value="@role.RoleID">@role.RoleName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" @onclick="CloseAccountModal">Cancel</button>
                    <button class="btn-primary" @onclick="SaveAccount" disabled="@isSavingAccount">
                        @(isSavingAccount ? "Saving..." : "Save")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Change Password Modal -->
    @if (showPasswordModal && selectedPasswordUser != null)
    {
        <div class="modal-overlay" @onclick="ClosePasswordModal">
            <div class="modal-card" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Change Password</h2>
                </div>
                <div class="modal-body">
                    <p>Change password for: <strong>@selectedPasswordUser.Username</strong></p>
                    @if (!string.IsNullOrEmpty(passwordModalError))
                    {
                        <div class="account-error">@passwordModalError</div>
                    }
                    <div class="form-group">
                        <label class="required">New Password</label>
                        <input type="password" class="form-control" @bind="passwordInput" placeholder="Enter new password" />
                    </div>
                    <div class="form-group">
                        <label class="required">Confirm Password</label>
                        <input type="password" class="form-control" @bind="passwordConfirm" placeholder="Confirm new password" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" @onclick="ClosePasswordModal">Cancel</button>
                    <button class="btn-primary" @onclick="SavePasswordChange" disabled="@isSavingPassword">
                        @(isSavingPassword ? "Saving..." : "Update Password")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Archive Confirmation Modal -->
    @if (showArchiveConfirmation && selectedArchiveUser != null)
    {
        <div class="modal-overlay" @onclick="CloseArchiveConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Archive Account</h2>
                    <button class="close-btn" @onclick="CloseArchiveConfirmation">Ã—</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Archive Account</h3>
                        <p>You are about to archive <strong>@selectedArchiveUser.Username</strong>.</p>
                        <p class="confirmation-warning">This will remove the account from the active list. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseArchiveConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmArchiveAccount" disabled="@isArchivingAccount">
                        @(isArchivingAccount ? "Archiving..." : "Yes, Archive Account")
                    </button>
                </div>
            </div>
        </div>
    }
</div>

