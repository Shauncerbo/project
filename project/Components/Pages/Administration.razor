@code {
    private List<User> activeUsers = new();
    private List<User> archivedUsers = new();
    private List<Role> availableRoles = new();
    private bool accountIsLoading = false;
    private bool showAccountModal = false;
    private bool isSavingAccount = false;
    private string? accountLoadError;
    private string accountModalError = "";
    private string newAccountUsername = "";
    private string newAccountPassword = "";
    private int selectedRoleId = 0;
    private bool showPasswordModal = false;
    private User? selectedPasswordUser;
    private string passwordInput = "";
    private string passwordConfirm = "";
    private string passwordModalError = "";
    private bool isSavingPassword = false;
    private bool showArchiveConfirmation = false;
    private User? selectedArchiveUser;
    private bool isArchivingAccount = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadAccountData();
    }

    private async Task LoadAccountData()
    {
        accountIsLoading = true;
        accountLoadError = null;
        StateHasChanged();

        try
        {
            availableRoles = await Context.Roles
                .Where(r => r.RoleName.ToLower() == "staff" || r.RoleName.ToLower() == "trainer")
                .OrderBy(r => r.RoleName)
                .ToListAsync();

            if (selectedRoleId == 0 && availableRoles.Any())
            {
                selectedRoleId = availableRoles.First().RoleID;
            }

            var managedRoleIds = availableRoles.Select(r => r.RoleID).ToList();

            var managedUsers = await Context.Users
                .Include(u => u.Role)
                .Where(u => managedRoleIds.Contains(u.RoleID))
                .OrderBy(u => u.Username)
                .ToListAsync();

            activeUsers = managedUsers.Where(u => u.IsActive == true).ToList();
            archivedUsers = managedUsers.Where(u => u.IsActive == false).ToList();
        }
        catch (Exception ex)
        {
            accountLoadError = $"Error loading accounts: {ex.Message}";
        }
        finally
        {
            accountIsLoading = false;
            StateHasChanged();
        }
    }

    private void OpenAccountModal()
    {
        accountModalError = "";
        newAccountUsername = "";
        newAccountPassword = "";
        if (availableRoles.Any())
        {
            selectedRoleId = availableRoles.First().RoleID;
        }
        showAccountModal = true;
    }

    private void CloseAccountModal()
    {
        showAccountModal = false;
        accountModalError = "";
        isSavingAccount = false;
    }

    private async Task SaveAccount()
    {
        if (isSavingAccount)
            return;

        accountModalError = "";

        if (string.IsNullOrWhiteSpace(newAccountUsername) || string.IsNullOrWhiteSpace(newAccountPassword))
        {
            accountModalError = "Username and password are required.";
            return;
        }

        if (!availableRoles.Any())
        {
            accountModalError = "No roles available. Please add Staff or Trainer roles first.";
            return;
        }

        isSavingAccount = true;

        try
        {
            var username = newAccountUsername.Trim();

            var exists = await Context.Users
                .AnyAsync(u => u.Username.ToLower() == username.ToLower());

            if (exists)
            {
                accountModalError = "Username already exists.";
                ToastService.ShowError("Username already exists.");
                isSavingAccount = false;
                StateHasChanged();
                return;
            }

            var user = new User
            {
                Username = username,
                Password = newAccountPassword.Trim(),
                RoleID = selectedRoleId,
                IsActive = true,
                CreatedAt = DateTime.Now
            };

            Context.Users.Add(user);
            await Context.SaveChangesAsync();

            var roleName = availableRoles.FirstOrDefault(r => r.RoleID == selectedRoleId)?.RoleName ?? "Unknown";
            await LogAuditAction("Account Created", "User", user.UserID, username, $"Created new {roleName} account: {username}");
            await LoadAccountData();
            CloseAccountModal();
            ToastService.ShowSuccess("Account created successfully.");
        }
        catch (Exception ex)
        {
            await LogAuditAction("Account Creation Failed", "User", null, newAccountUsername, $"Failed to create account: {ex.Message}", "Failed", ex.Message);
            accountModalError = $"Error creating account: {ex.Message}";
            ToastService.ShowError($"Error creating account: {ex.Message}");
        }
        finally
        {
            isSavingAccount = false;
            StateHasChanged();
        }
    }

    private void OpenPasswordModal(User user)
    {
        selectedPasswordUser = user;
        passwordInput = "";
        passwordConfirm = "";
        passwordModalError = "";
        isSavingPassword = false;
        showPasswordModal = true;
    }

    private void ClosePasswordModal()
    {
        showPasswordModal = false;
        selectedPasswordUser = null;
        passwordInput = "";
        passwordConfirm = "";
        passwordModalError = "";
        isSavingPassword = false;
    }

    private async Task SavePasswordChange()
    {
        if (selectedPasswordUser == null || isSavingPassword)
            return;

        passwordModalError = "";

        if (string.IsNullOrWhiteSpace(passwordInput) || string.IsNullOrWhiteSpace(passwordConfirm))
        {
            passwordModalError = "Please enter and confirm the new password.";
            return;
        }

        if (passwordInput.Length < 4)
        {
            passwordModalError = "Password must be at least 4 characters.";
            return;
        }

        if (passwordInput != passwordConfirm)
        {
            passwordModalError = "Passwords do not match.";
            return;
        }

        isSavingPassword = true;

        try
        {
            selectedPasswordUser.Password = passwordInput.Trim();
            selectedPasswordUser.LastPasswordChange = DateTime.Now;
            Context.Users.Update(selectedPasswordUser);
            await Context.SaveChangesAsync();
            await LogAuditAction("Password Changed", "User", selectedPasswordUser.UserID, selectedPasswordUser.Username, $"Password changed for account: {selectedPasswordUser.Username}");
            ToastService.ShowSuccess("Password updated successfully.");
            ClosePasswordModal();
        }
        catch (Exception ex)
        {
            await LogAuditAction("Password Change Failed", "User", selectedPasswordUser.UserID, selectedPasswordUser.Username, $"Failed to change password: {ex.Message}", "Failed", ex.Message);
            passwordModalError = $"Error updating password: {ex.Message}";
        }
        finally
        {
            isSavingPassword = false;
            StateHasChanged();
        }
    }

    private void ArchiveAccount(User user)
    {
        selectedArchiveUser = user;
        showArchiveConfirmation = true;
    }

    private void CloseArchiveConfirmation()
    {
        showArchiveConfirmation = false;
        selectedArchiveUser = null;
        isArchivingAccount = false;
    }

    private async Task ConfirmArchiveAccount()
    {
        if (selectedArchiveUser == null || isArchivingAccount)
            return;

        isArchivingAccount = true;
        StateHasChanged();

        try
        {
            // Store username before closing modal (which sets selectedArchiveUser to null)
            var username = selectedArchiveUser.Username;
            var userId = selectedArchiveUser.UserID;

            selectedArchiveUser.IsActive = false;
            selectedArchiveUser.UpdatedAt = DateTime.Now;
            Context.Users.Update(selectedArchiveUser);
            await Context.SaveChangesAsync();
            await LogAuditAction("Account Archived", "User", userId, username, $"Archived account: {username}");
            await LoadAccountData();
            CloseArchiveConfirmation();
            ToastService.ShowSuccess($"Account '{username}' archived successfully.");
        }
        catch (Exception ex)
        {
            // Store username before potential null reference
            var username = selectedArchiveUser?.Username ?? "Unknown";
            var userId = selectedArchiveUser?.UserID;
            await LogAuditAction("Account Archive Failed", "User", userId, username, $"Failed to archive account: {ex.Message}", "Failed", ex.Message);
            ToastService.ShowError($"Error archiving account: {ex.Message}");
        }
        finally
        {
            isArchivingAccount = false;
            StateHasChanged();
        }
    }

    private async Task LogAuditAction(string action, string entityType, int? entityID, string entityName, string description, string status = "Success", string errorMessage = "")
    {
        try
        {
            var username = await AuthService.GetCurrentUsername();
            var userIdStr = await SecureStorage.Default.GetAsync("user_id");
            int? userId = null;
            if (!string.IsNullOrEmpty(userIdStr) && int.TryParse(userIdStr, out int parsedUserId))
            {
                userId = parsedUserId;
            }

            var auditLog = new AuditLog
            {
                Action = action,
                EntityType = entityType,
                EntityID = entityID,
                EntityName = entityName,
                PerformedBy = username,
                PerformedByUserID = userId,
                Description = description,
                Timestamp = DateTime.Now,
                Status = status,
                ErrorMessage = errorMessage
            };

            Context.AuditLogs.Add(auditLog);
            await Context.SaveChangesAsync();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error logging audit action: {ex.Message}");
        }
    }
}

