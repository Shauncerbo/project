@code {
    private string searchQuery = "";
    private bool showModal = false;
    private bool isEditMode = false;
    private bool showValidationError = false;
    private string statusString = "true";
    private Member currentMember = new Member();
    private List<Member> members = new List<Member>();
    private List<Member> filteredMembers = new List<Member>();
    private List<string> validationErrors = new List<string>();

    protected override void OnInitialized()
    {
        LoadSampleData();
        filteredMembers = members;
    }

    private void LoadSampleData()
    {
        members = new List<Member>
        {
            new Member {
                MemberId = "M001",
                FirstName = "John",
                MiddleName = "",
                LastName = "Doe",
                FullName = "John Doe",
                ContactNumber = "+1234567890",
                Email = "john@example.com",
                Address = "123 Main St, City, State 12345",
                JoinDate = new DateTime(2025, 4, 30),
                IsActive = true
            },
            new Member {
                MemberId = "M002",
                FirstName = "Jane",
                MiddleName = "Marie",
                LastName = "Smith",
                FullName = "Jane Marie Smith",
                ContactNumber = "+1234567891",
                Email = "jane@example.com",
                Address = "456 Oak Ave, Another City, State 67890",
                JoinDate = new DateTime(2024, 10, 31),
                IsActive = true
            },
            new Member {
                MemberId = "M003",
                FirstName = "Mike",
                MiddleName = "Robert",
                LastName = "Johnson",
                FullName = "Mike Robert Johnson",
                ContactNumber = "+1234567892",
                Email = "mike@example.com",
                Address = "789 Pine Rd, Different City, State 11223",
                JoinDate = new DateTime(2025, 7, 31),
                IsActive = false
            }
        };
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredMembers = members;
        }
        else
        {
            filteredMembers = members.Where(m =>
                m.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                m.Email.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                m.ContactNumber.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                m.MemberId.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                m.Address.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void OpenAddMemberModal()
    {
        isEditMode = false;
        currentMember = new Member
        {
            MemberId = $"M{(members.Count + 1):D3}",
            JoinDate = DateTime.Now,
            IsActive = true
        };
        statusString = "true";
        showValidationError = false;
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void EditMember(Member member)
    {
        isEditMode = true;
        currentMember = new Member
        {
            MemberId = member.MemberId,
            FirstName = member.FirstName,
            MiddleName = member.MiddleName,
            LastName = member.LastName,
            FullName = member.FullName,
            ContactNumber = member.ContactNumber,
            Email = member.Email,
            Address = member.Address,
            JoinDate = member.JoinDate,
            IsActive = member.IsActive
        };
        statusString = member.IsActive.ToString().ToLower();
        showValidationError = false;
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void ArchiveMember(Member member)
    {
        // TODO: Add archive confirmation dialog
        members.Remove(member);
        HandleSearch();
        StateHasChanged();
    }

    private bool ValidateForm()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentMember.FirstName))
            validationErrors.Add("FirstName");

        if (string.IsNullOrWhiteSpace(currentMember.LastName))
            validationErrors.Add("LastName");

        if (string.IsNullOrWhiteSpace(currentMember.ContactNumber))
            validationErrors.Add("ContactNumber");

        if (string.IsNullOrWhiteSpace(currentMember.Email))
            validationErrors.Add("Email");

        if (string.IsNullOrWhiteSpace(currentMember.Address))
            validationErrors.Add("Address");

        if (currentMember.JoinDate == DateTime.MinValue)
            validationErrors.Add("JoinDate");

        showValidationError = validationErrors.Any();
        return !showValidationError;
    }

    private bool HasError(string fieldName)
    {
        return validationErrors.Contains(fieldName);
    }

    private void SaveMember()
    {
        if (!ValidateForm())
        {
            StateHasChanged();
            return;
        }

        // Convert string status to boolean
        currentMember.IsActive = bool.Parse(statusString);

        // Build FullName from individual name parts
        currentMember.FullName = $"{currentMember.FirstName} {currentMember.MiddleName} {currentMember.LastName}".Trim();

        if (isEditMode)
        {
            var existingMember = members.FirstOrDefault(m => m.MemberId == currentMember.MemberId);
            if (existingMember != null)
            {
                existingMember.FirstName = currentMember.FirstName;
                existingMember.MiddleName = currentMember.MiddleName;
                existingMember.LastName = currentMember.LastName;
                existingMember.FullName = currentMember.FullName;
                existingMember.ContactNumber = currentMember.ContactNumber;
                existingMember.Email = currentMember.Email;
                existingMember.Address = currentMember.Address;
                existingMember.JoinDate = currentMember.JoinDate;
                existingMember.IsActive = currentMember.IsActive;
            }
        }
        else
        {
            members.Add(currentMember);
        }

        HandleSearch();
        CloseModal();
    }

    private void CloseModal()
    {
        showModal = false;
        currentMember = new Member();
        statusString = "true";
        showValidationError = false;
        validationErrors.Clear();
        StateHasChanged();
    }

    public class Member
    {
        public string MemberId { get; set; } = "";
        public string FirstName { get; set; } = "";
        public string MiddleName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string FullName { get; set; } = "";
        public string ContactNumber { get; set; } = "";
