<div class="settings-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Archived Accounts</h1>
        <p class="page-subtitle">View and manage archived staff/trainer accounts.</p>
    </div>

    <div class="account-management-card">
        @if (accountIsLoading)
        {
            <div class="account-loading">Loading archived accounts...</div>
        }
        else if (archivedUsers == null || !archivedUsers.Any())
        {
            <div class="empty-state">
                <h3>No Archived Accounts</h3>
                <p>There are no archived accounts to display.</p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="archived-table">
                    <thead>
                        <tr>
                            <th>USERNAME</th>
                            <th>ROLE</th>
                            <th>ARCHIVED ON</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in archivedUsers)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Role?.RoleName</td>
                                <td>@(user.UpdatedAt.HasValue ? user.UpdatedAt.Value.ToString("MMM dd, yyyy") : "-")</td>
                                <td class="account-actions">
                                    <button class="btn-restore" @onclick="() => RestoreAccount(user)">Restore</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- Restore Confirmation Modal -->
    @if (showRestoreConfirmation && selectedRestoreUser != null)
    {
        <div class="modal-overlay" @onclick="CloseRestoreConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Account</h2>
                    <button class="close-btn" @onclick="CloseRestoreConfirmation">Ã—</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Account</h3>
                        <p>You are about to restore <strong>@selectedRestoreUser.Username</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the account and make it available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestoreConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmRestoreAccount" disabled="@isRestoringAccount">
                        @(isRestoringAccount ? "Restoring..." : "Yes, Restore Account")
                    </button>
                </div>
            </div>
        </div>
    }
</div>

