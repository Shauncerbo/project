@code {
    private string activeTab = "accounts";
    private bool isLoading = false;
    
    // Staff/Trainer accounts
    private List<User> archivedUsers = new();
    private int archivedUsersCount = 0;
    
    // Members
    private string memberSearchQuery = "";
    private List<Member> archivedMembers = new List<Member>();
    private List<Member> filteredArchivedMembers = new List<Member>();
    private int archivedMembersCount = 0;
    
    // Restore confirmations
    private bool showRestoreConfirmation = false;
    private User? selectedRestoreUser;
    private bool isRestoringAccount = false;
    
    private bool showRestoreMemberConfirmation = false;
    private Member? selectedRestoreMember;
    private bool isRestoringMember = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadArchivedData();
    }

    private async Task LoadArchivedData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Load archived staff/trainer accounts
            var availableRoles = await Context.Roles
                .Where(r => r.RoleName.ToLower() == "staff" || r.RoleName.ToLower() == "trainer")
                .Select(r => r.RoleID)
                .ToListAsync();

            var managedUsers = await Context.Users
                .Include(u => u.Role)
                .Where(u => availableRoles.Contains(u.RoleID))
                .OrderBy(u => u.Username)
                .ToListAsync();

            archivedUsers = managedUsers.Where(u => u.IsActive == false).ToList();
            archivedUsersCount = archivedUsers.Count;

            // Load archived members
            archivedMembers = await Context.Members
                .Where(m => m.IsArchived == true)
                .Include(m => m.MembershipType)
                .ToListAsync();
            filteredArchivedMembers = archivedMembers;
            archivedMembersCount = archivedMembers.Count;
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading archived data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SwitchTab(string tab)
    {
        activeTab = tab;
        StateHasChanged();
    }

    private void FilterArchivedMembers()
    {
        if (string.IsNullOrWhiteSpace(memberSearchQuery))
        {
            filteredArchivedMembers = archivedMembers;
        }
        else
        {
            var query = memberSearchQuery.ToLower();
            filteredArchivedMembers = archivedMembers
                .Where(m => m.FirstName.ToLower().Contains(query) ||
                           m.LastName.ToLower().Contains(query) ||
                           m.Email.ToLower().Contains(query) ||
                           m.ContactNumber.Contains(query))
                .ToList();
        }
        StateHasChanged();
    }

    private void RestoreAccount(User user)
    {
        selectedRestoreUser = user;
        showRestoreConfirmation = true;
    }

    private void CloseRestoreConfirmation()
    {
        showRestoreConfirmation = false;
        selectedRestoreUser = null;
        isRestoringAccount = false;
    }

    private async Task ConfirmRestoreAccount()
    {
        if (selectedRestoreUser == null || isRestoringAccount)
            return;

        isRestoringAccount = true;
        StateHasChanged();

        try
        {
            // Store username before closing modal
            var username = selectedRestoreUser.Username;
            var userId = selectedRestoreUser.UserID;

            selectedRestoreUser.IsActive = true;
            selectedRestoreUser.UpdatedAt = DateTime.Now;
            Context.Users.Update(selectedRestoreUser);
            await Context.SaveChangesAsync();
            await LogAuditAction("Account Restored", "User", userId, username, $"Restored account: {username}");
            await LoadArchivedData();
            CloseRestoreConfirmation();
            ToastService.ShowSuccess($"Account '{username}' restored successfully!");
        }
        catch (Exception ex)
        {
            var username = selectedRestoreUser?.Username ?? "Unknown";
            var userId = selectedRestoreUser?.UserID;
            await LogAuditAction("Account Restore Failed", "User", userId, username, $"Failed to restore account: {ex.Message}", "Failed", ex.Message);
            ToastService.ShowError($"Error restoring account: {ex.Message}");
        }
        finally
        {
            isRestoringAccount = false;
            StateHasChanged();
        }
    }

    private void RestoreMember(Member member)
    {
        selectedRestoreMember = member;
        showRestoreMemberConfirmation = true;
    }

    private void CloseRestoreMemberConfirmation()
    {
        showRestoreMemberConfirmation = false;
        selectedRestoreMember = null;
        isRestoringMember = false;
    }

    private async Task ConfirmRestoreMember()
    {
        if (selectedRestoreMember == null || isRestoringMember)
            return;

        isRestoringMember = true;
        StateHasChanged();

        try
        {
            var memberName = GetDisplayName(selectedRestoreMember.FirstName, selectedRestoreMember.MiddleInitial, selectedRestoreMember.LastName);
            var memberId = selectedRestoreMember.MemberID;

            selectedRestoreMember.IsArchived = false;
            Context.Members.Update(selectedRestoreMember);
            await Context.SaveChangesAsync();
            await LogAuditAction("Member Restored", "Member", memberId, memberName, $"Restored member {memberName} from archive");
            await LoadArchivedData();
            CloseRestoreMemberConfirmation();
            ToastService.ShowSuccess($"Member '{memberName}' restored successfully!");
        }
        catch (Exception ex)
        {
            var memberName = selectedRestoreMember != null ? GetDisplayName(selectedRestoreMember.FirstName, selectedRestoreMember.MiddleInitial, selectedRestoreMember.LastName) : "Unknown";
            var memberId = selectedRestoreMember?.MemberID;
            await LogAuditAction("Member Restore Failed", "Member", memberId, memberName, $"Failed to restore member: {ex.Message}", "Failed", ex.Message);
            ToastService.ShowError($"Error restoring member: {ex.Message}");
        }
        finally
        {
            isRestoringMember = false;
            StateHasChanged();
        }
    }

    private string GetInitials(string firstName, string lastName)
    {
        var firstInitial = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString().ToUpper() : "";
        var lastInitial = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString().ToUpper() : "";
        return $"{firstInitial}{lastInitial}";
    }

    private string GetDisplayName(string firstName, string middleInitial, string lastName)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(firstName))
            parts.Add(CapitalizeName(firstName));
        if (!string.IsNullOrWhiteSpace(middleInitial))
            parts.Add(CapitalizeName(middleInitial));
        if (!string.IsNullOrWhiteSpace(lastName))
            parts.Add(CapitalizeName(lastName));
        
        return string.Join(" ", parts);
    }

    private string CapitalizeName(string name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "";
        
        return name.Substring(0, 1).ToUpper() + name.Substring(1).ToLower();
    }

    private async Task LogAuditAction(string action, string entityType, int? entityID, string entityName, string description, string status = "Success", string errorMessage = "")
    {
        try
        {
            var username = await AuthService.GetCurrentUsername();
            var userId = await AuthService.GetCurrentUserId();

            var auditLog = new AuditLog
            {
                Action = action,
                EntityType = entityType,
                EntityID = entityID,
                EntityName = entityName,
                PerformedBy = username,
                PerformedByUserID = userId,
                Description = description,
                Timestamp = DateTime.Now,
                Status = status,
                ErrorMessage = errorMessage
            };

            Context.AuditLogs.Add(auditLog);
            await Context.SaveChangesAsync();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error logging audit action: {ex.Message}");
        }
    }
}

