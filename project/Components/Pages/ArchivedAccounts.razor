@page "/administration/archived"
@layout MainLayout
@using System.Linq
@using System.Collections.Generic
@using System.Threading.Tasks
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@inject project.Services.IAuthService AuthService
@inject project.Services.IToastService ToastService
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.Maui.Storage

<div class="settings-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Archived Users</h1>
        <p class="page-subtitle">View and manage archived staff, trainers, and members.</p>
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs-container">
        <button class="tab-btn @(activeTab == "accounts" ? "active" : "")" @onclick='() => SwitchTab("accounts")'>
            <span class="tab-icon"></span>
            Staff & Trainers
            @if (archivedUsersCount > 0)
            {
                <span class="badge">@archivedUsersCount</span>
            }
        </button>
        <button class="tab-btn @(activeTab == "members" ? "active" : "")" @onclick='() => SwitchTab("members")'>
            <span class="tab-icon"></span>
            Members
            @if (archivedMembersCount > 0)
            {
                <span class="badge">@archivedMembersCount</span>
            }
        </button>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="loading-spinner">Loading archived items...</div>
            </div>
        }
        else
        {
            <!-- Staff & Trainers Tab -->
            @if (activeTab == "accounts")
            {
                <div class="archived-section">
                    @if (archivedUsers == null || !archivedUsers.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Accounts</h3>
                            <p>There are no archived staff or trainer accounts to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>USERNAME</th>
                                        <th>ROLE</th>
                                        <th>ARCHIVED ON</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in archivedUsers)
                                    {
                                        <tr>
                                            <td>@user.Username</td>
                                            <td>@user.Role?.RoleName</td>
                                            <td>@(user.UpdatedAt.HasValue ? user.UpdatedAt.Value.ToString("MMM dd, yyyy") : "-")</td>
                                            <td class="account-actions">
                                                <button class="btn-restore" @onclick="() => RestoreAccount(user)" title="Restore">
                                                    <img src="/restore_icon.svg" alt="Restore" class="restore-icon" />
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }

            <!-- Members Tab -->
            @if (activeTab == "members")
            {
                <div class="archived-section">
                    <div class="section-header">
                        <h2>Archived Members</h2>
                        <input type="text"
                               class="search-bar"
                               placeholder="Search archived members..."
                               @bind="memberSearchQuery"
                               @bind:event="oninput"
                               @onkeyup="FilterArchivedMembers" />
                    </div>

                    @if (filteredArchivedMembers == null || !filteredArchivedMembers.Any())
                    {
                        <div class="empty-state">
                            <h3>No Archived Members</h3>
                            <p>There are no archived members to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="archived-table">
                                <thead>
                                    <tr>
                                        <th>NAME</th>
                                        <th>CONTACT</th>
                                        <th>EMAIL</th>
                                        <th>MEMBERSHIP TYPE</th>
                                        <th>ARCHIVED DATE</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in filteredArchivedMembers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="member-info">
                                                    <div class="member-avatar">@GetInitials(member.FirstName, member.LastName)</div>
                                                    <span>@GetDisplayName(member.FirstName, member.MiddleInitial, member.LastName)</span>
                                                </div>
                                            </td>
                                            <td>@member.ContactNumber</td>
                                            <td>@member.Email</td>
                                            <td>@(member.MembershipType?.TypeName ?? "N/A")</td>
                                            <td>-</td>
                                            <td class="account-actions">
                                                <button class="btn-restore" @onclick="() => RestoreMember(member)" title="Restore">
                                                    <img src="/restore_icon.svg" alt="Restore" class="restore-icon" />
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <!-- Restore Account Confirmation Modal -->
    @if (showRestoreConfirmation && selectedRestoreUser != null)
    {
        <div class="modal-overlay" @onclick="CloseRestoreConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Account</h2>
                    <button class="close-btn" @onclick="CloseRestoreConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Account</h3>
                        <p>You are about to restore <strong>@selectedRestoreUser.Username</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the account and make it available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestoreConfirmation">Cancel</button>
                    <button class="btn btn-primary" @onclick="ConfirmRestoreAccount" disabled="@isRestoringAccount">
                        @(isRestoringAccount ? "Restoring..." : "Yes, Restore Account")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Restore Member Confirmation Modal -->
    @if (showRestoreMemberConfirmation && selectedRestoreMember != null)
    {
        <div class="modal-overlay" @onclick="CloseRestoreMemberConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Restore Member</h2>
                    <button class="close-btn" @onclick="CloseRestoreMemberConfirmation">×</button>
                </div>
                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Restore Member</h3>
                        <p>You are about to restore <strong>@GetDisplayName(selectedRestoreMember.FirstName, selectedRestoreMember.MiddleInitial, selectedRestoreMember.LastName)</strong>.</p>
                        <p class="confirmation-warning">This will reactivate the member and make them available again. Continue?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseRestoreMemberConfirmation">Cancel</button>
                    <button class="btn btn-primary" @onclick="ConfirmRestoreMember" disabled="@isRestoringMember">
                        @(isRestoringMember ? "Restoring..." : "Yes, Restore Member")
                    </button>
                </div>
            </div>
        </div>
    }
</div>

