@code {
    private List<User> archivedUsers = new();
    private bool accountIsLoading = false;
    private bool showRestoreConfirmation = false;
    private User? selectedRestoreUser;
    private bool isRestoringAccount = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedAccounts();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadArchivedAccounts();
    }

    private async Task LoadArchivedAccounts()
    {
        accountIsLoading = true;
        StateHasChanged();

        try
        {
            var availableRoles = await Context.Roles
                .Where(r => r.RoleName.ToLower() == "staff" || r.RoleName.ToLower() == "trainer")
                .Select(r => r.RoleID)
                .ToListAsync();

            var managedUsers = await Context.Users
                .Include(u => u.Role)
                .Where(u => availableRoles.Contains(u.RoleID))
                .OrderBy(u => u.Username)
                .ToListAsync();

            // Filter for archived users (IsActive == false, null means active for backward compatibility)
            archivedUsers = managedUsers.Where(u => u.IsActive == false).ToList();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading archived accounts: {ex.Message}");
        }
        finally
        {
            accountIsLoading = false;
            StateHasChanged();
        }
    }

    private void RestoreAccount(User user)
    {
        selectedRestoreUser = user;
        showRestoreConfirmation = true;
    }

    private void CloseRestoreConfirmation()
    {
        showRestoreConfirmation = false;
        selectedRestoreUser = null;
        isRestoringAccount = false;
    }

    private async Task ConfirmRestoreAccount()
    {
        if (selectedRestoreUser == null || isRestoringAccount)
            return;

        isRestoringAccount = true;
        StateHasChanged();

        try
        {
            // Store username before closing modal
            var username = selectedRestoreUser.Username;
            var userId = selectedRestoreUser.UserID;

            selectedRestoreUser.IsActive = true;
            selectedRestoreUser.UpdatedAt = DateTime.Now;
            Context.Users.Update(selectedRestoreUser);
            await Context.SaveChangesAsync();
            await LogAuditAction("Account Restored", "User", userId, username, $"Restored account: {username}");
            await LoadArchivedAccounts();
            CloseRestoreConfirmation();
            ToastService.ShowSuccess($"Account '{username}' restored successfully!");
        }
        catch (Exception ex)
        {
            var username = selectedRestoreUser?.Username ?? "Unknown";
            var userId = selectedRestoreUser?.UserID;
            await LogAuditAction("Account Restore Failed", "User", userId, username, $"Failed to restore account: {ex.Message}", "Failed", ex.Message);
            ToastService.ShowError($"Error restoring account: {ex.Message}");
        }
        finally
        {
            isRestoringAccount = false;
            StateHasChanged();
        }
    }

    private async Task LogAuditAction(string action, string entityType, int? entityID, string entityName, string description, string status = "Success", string errorMessage = "")
    {
        try
        {
            var username = await AuthService.GetCurrentUsername();
            var userIdStr = await SecureStorage.Default.GetAsync("user_id");
            int? userId = null;
            if (!string.IsNullOrEmpty(userIdStr) && int.TryParse(userIdStr, out int parsedUserId))
            {
                userId = parsedUserId;
            }

            var auditLog = new AuditLog
            {
                Action = action,
                EntityType = entityType,
                EntityID = entityID,
                EntityName = entityName,
                PerformedBy = username,
                PerformedByUserID = userId,
                Description = description,
                Timestamp = DateTime.Now,
                Status = status,
                ErrorMessage = errorMessage
            };

            Context.AuditLogs.Add(auditLog);
            await Context.SaveChangesAsync();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error logging audit action: {ex.Message}");
        }
    }
}

