@page "/audit-logs"
@layout MainLayout
@using System.Diagnostics
@using System.Linq
@using System.Collections.Generic
@using System.Threading.Tasks
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@using project.Data
@using project.Models
@using Microsoft.EntityFrameworkCore

<div class="audit-logs-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Audit Logs</h1>
        <p class="page-subtitle">View system activity and changes</p>
    </div>

    <!-- Filters Section -->
    <div class="filters-card">
        <div class="section-header">
            <h2>Filters</h2>
        </div>
        <div class="audit-filters">
            <select @bind="auditLogFilter" @bind:after="OnAuditFilterChanged" class="filter-select">
                <option value="all">All Actions</option>
                <option value="User">Account Actions</option>
                <option value="Member">Member Actions</option>
                <option value="Promotion">Promotion Actions</option>
                <option value="MembershipType">Membership Type Actions</option>
            </select>
            <input type="date" @bind="auditLogStartDate" class="date-filter-input" />
            <span>to</span>
            <input type="date" @bind="auditLogEndDate" class="date-filter-input" />
            <button class="btn-filter-set" @onclick="ApplyDateFilter">Set</button>
            <button class="btn-filter-clear" @onclick="ClearDateFilter">Clear</button>
        </div>
    </div>

    <!-- Audit Logs Table -->
    <div class="table-card">
        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="loading-spinner">Loading audit logs...</div>
            </div>
        }
        else if (auditLogs == null || !auditLogs.Any())
        {
            <div class="empty-state">
                <div class="empty-icon"></div>
                <h3>No Audit Logs</h3>
                <p>There are no audit logs to display.</p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="audit-table">
                    <thead>
                        <tr>
                            <th>TIMESTAMP</th>
                            <th>ACTION</th>
                            <th>ENTITY NAME</th>
                            <th>PERFORMED BY</th>
                            <th>DESCRIPTION</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in auditLogs)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("MM/dd/yyyy HH:mm:ss")</td>
                                <td>@log.Action</td>
                                <td class="entity-name-cell">@(string.IsNullOrEmpty(log.EntityName) ? "-" : log.EntityName)</td>
                                <td>@log.PerformedBy</td>
                                <td class="description-cell">@(string.IsNullOrEmpty(log.Description) ? "-" : log.Description)</td>
                                <td>
                                    <span class="status-badge @(log.Status == "Success" ? "status-success" : "status-error")">
                                        @log.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

