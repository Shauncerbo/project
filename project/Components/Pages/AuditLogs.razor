@code {
    private bool isLoading = false;
    private List<AuditLog> auditLogs = new List<AuditLog>();
    private string auditLogFilter = "all";
    private DateTime? auditLogStartDate = DateTime.Today.AddDays(-30);
    private DateTime? auditLogEndDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await LoadAuditLogs();
    }

    private async Task OnAuditFilterChanged()
    {
        await LoadAuditLogs();
        StateHasChanged();
    }

    private async Task ApplyDateFilter()
    {
        await LoadAuditLogs();
        StateHasChanged();
    }

    private async Task ClearDateFilter()
    {
        auditLogStartDate = DateTime.Today.AddDays(-30);
        auditLogEndDate = DateTime.Today;
        await LoadAuditLogs();
        StateHasChanged();
    }

    private async Task LoadAuditLogs()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var query = Context.AuditLogs.AsQueryable();

            // Filter by entity type
            if (auditLogFilter != "all")
            {
                query = query.Where(log => log.EntityType == auditLogFilter);
            }

            // Filter by date range
            if (auditLogStartDate.HasValue)
            {
                var startDate = auditLogStartDate.Value.Date; // Start of the selected day
                query = query.Where(log => log.Timestamp >= startDate);
            }

            if (auditLogEndDate.HasValue)
            {
                var endDate = auditLogEndDate.Value.Date.AddDays(1); // Start of the next day (to include entire end date)
                query = query.Where(log => log.Timestamp < endDate);
            }

            auditLogs = await query
                .OrderByDescending(log => log.Timestamp)
                .Take(500) // Limit to last 500 logs for performance
                .ToListAsync();
        }
        catch (Exception ex)
        {
            // If AuditLogs table doesn't exist yet, just set empty list
            auditLogs = new List<AuditLog>();
            System.Diagnostics.Debug.WriteLine($"Error loading audit logs: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}


