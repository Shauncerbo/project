@page "/trainers"
@layout MainLayout
@using System.Diagnostics
@using System.Linq
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@inject project.Services.IUserService UserService
@inject project.Services.IToastService ToastService
@using project.Models
@using project.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.EntityFrameworkCore

<div class="members-container">
    <!-- Loading Indicator -->
    @if (isLoading)
    {
        <div class="loading-overlay">
            <div class="loading-spinner">Loading trainers...</div>
        </div>
    }

    <!-- Page Header - keep only the title (no search/add here) -->
    <div class="page-header">
        <h1 class="page-title">Trainer Management</h1>
    </div>

    <!-- Trainers Data Table -->
    <div class="table-container">
        <div class="table-toolbar">
            <span class="table-title">Trainers</span>
            <input type="text"
                   class="search-bar"
                   placeholder="Search Trainer..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddTrainerModal">+ Add Trainer</button>
        </div>
        <table class="members-table">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>SPECIALTY</th>
                    <th>CONTACT NUMBER</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredTrainers == null || !filteredTrainers.Any())
                {
                    <tr>
                        <td colspan="4" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">🏋️</span>
                                <p>No trainers found</p>
                                <p class="no-data-sub">Add your first trainer to get started</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var trainer in filteredTrainers)
                    {
                        <tr>
                            <td>
                                <div class="member-info">
                                    @{
                                        var displayName = GetDisplayName(trainer.FirstName, trainer.MiddleName, trainer.LastName);
                                        var initial = !string.IsNullOrEmpty(displayName) ? displayName.Substring(0, 1).ToUpper() : "?";
                                    }
                                    <div class="member-avatar">@initial</div>
                                    <span>@displayName</span>
                                </div>
                            </td>
                            <td>
                                <span>@trainer.Specialty</span>
                            </td>
                            <td>@trainer.ContactNumber</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn schedule-btn" @onclick="() => OpenScheduleModal(trainer)" title="Manage Schedules">
                                        <img src="/calendar_icon.svg" class="action-icon" alt="Schedule" />
                                    </button>
                                    <button class="action-btn edit-btn" @onclick="() => EditTrainer(trainer)" title="Edit">
                                        <img src="/Newedit_icon.svg" class="action-icon" alt="Edit" />
                                    </button>
                                    <button class="action-btn archive-btn" @onclick="() => ShowArchiveConfirmation(trainer)" title="Archive">
                                        <img src="/archived_icon.svg" class="action-icon" alt="Archive" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Trainer Modal -->
    @if (showModal)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Trainer" : "Add New Trainer")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">
                    <!-- Name Fields -->
                    <div class="form-row">
                        <div class="form-group">
                            <label class="required">First Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("FirstName") ? "error" : "")"
                                   @bind="currentTrainer.FirstName"
                                   placeholder="Enter first name" />
                            @if (validationErrors.ContainsKey("FirstName"))
                            {
                                <div class="error-message">@validationErrors["FirstName"]</div>
                            }
                        </div>
                        <div class="form-group">
                            <label>Middle Name</label>
                            <input type="text"
                                   class="form-control"
                                   @bind="currentTrainer.MiddleName"
                                   placeholder="Enter middle name (optional)" />
                        </div>
                        <div class="form-group">
                            <label class="required">Last Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("LastName") ? "error" : "")"
                                   @bind="currentTrainer.LastName"
                                   placeholder="Enter last name" />
                            @if (validationErrors.ContainsKey("LastName"))
                            {
                                <div class="error-message">@validationErrors["LastName"]</div>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="required">Contact Number</label>
                        <input type="text"
                               class="form-control @(validationErrors.ContainsKey("ContactNumber") ? "error" : "")"
                               @bind-value="TrainerContactNumberInput"
                               @bind-value:event="oninput"
                               inputmode="numeric"
                               pattern="[0-9]*"
                               maxlength="11"
                               placeholder="09XXXXXXXXX" />
                        @if (validationErrors.ContainsKey("ContactNumber"))
                        {
                            <div class="error-message">@validationErrors["ContactNumber"]</div>
                        }
                    </div>

                    <div class="form-group">
                        <label class="required">Specialty</label>
                        <div class="select-wrapper">
                            <select class="form-control select-dropdown @(validationErrors.ContainsKey("Specialty") ? "error" : "")"
                                    @bind="currentTrainer.Specialty">
                                <option value="">Select specialty</option>
                                <option value="Strength Training">Strength Training</option>
                                <option value="Cardio">Cardio</option>
                                <option value="Yoga">Yoga</option>
                                <option value="Pilates">Pilates</option>
                                <option value="CrossFit">CrossFit</option>
                                <option value="Personal Training">Personal Training</option>
                            </select>
                            <span class="dropdown-arrow">▼</span>
                        </div>
                        @if (validationErrors.ContainsKey("Specialty"))
                        {
                            <div class="error-message">@validationErrors["Specialty"]</div>
                        }
                    </div>

                    <!-- General error message -->
                    @if (validationErrors.ContainsKey("General"))
                    {
                        <div class="general-error-message">
                            @validationErrors["General"]
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="SaveTrainer">
                        @(isEditMode ? "Update" : "Add") Trainer
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Archive Confirmation Modal -->
    @if (showArchiveConfirmation)
    {
        <div class="modal-overlay" @onclick="CloseArchiveConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Archive Trainer</h2>
                    <button class="close-btn" @onclick="CloseArchiveConfirmation">×</button>
                </div>

                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Archive Trainer</h3>
                        <p>You are about to archive <strong>@(selectedTrainer != null ? GetDisplayName(selectedTrainer.FirstName, selectedTrainer.MiddleName, selectedTrainer.LastName) : "")</strong>.</p>
                        <p class="confirmation-warning">This will remove the trainer from the active list. Continue?</p>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseArchiveConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmArchive">Yes, Archive Trainer</button>
                </div>
            </div>
        </div>
    }

    <!-- Schedule Management Modal -->
    @if (showScheduleModal)
    {
        <div class="modal-overlay" @onclick="CloseScheduleModal">
            <div class="modal-content schedule-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Manage Schedules - @(selectedTrainerForSchedule != null ? GetDisplayName(selectedTrainerForSchedule.FirstName, selectedTrainerForSchedule.MiddleName, selectedTrainerForSchedule.LastName) : "")</h2>
                    <button class="close-btn" @onclick="CloseScheduleModal">×</button>
                </div>

                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(scheduleError))
                    {
                        <div class="general-error-message">@scheduleError</div>
                    }

                    <!-- Add New Schedule Form -->
                    <div class="schedule-form-section">
                        <h3>Add New Schedule</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="required">Day of Week</label>
                                <div class="select-wrapper">
                                    <select class="form-control select-dropdown" @bind="newSchedule.DayOfWeek">
                                        <option value="0">Sunday</option>
                                        <option value="1">Monday</option>
                                        <option value="2">Tuesday</option>
                                        <option value="3">Wednesday</option>
                                        <option value="4">Thursday</option>
                                        <option value="5">Friday</option>
                                        <option value="6">Saturday</option>
                                    </select>
                                    <span class="dropdown-arrow">▼</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="required">Start Time</label>
                                <input type="time" class="form-control" value="@StartTimeString" @onchange="OnStartTimeChanged" />
                            </div>
                            <div class="form-group">
                                <label class="required">End Time</label>
                                <input type="time" class="form-control" value="@EndTimeString" @onchange="OnEndTimeChanged" />
                            </div>
                            <div class="form-group">
                                <label>Available</label>
                                <div class="checkbox-wrapper">
                                    <input type="checkbox" @bind="newSchedule.IsAvailable" />
                                    <span>Schedule is active</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button class="btn btn-primary" @onclick="AddSchedule">Add Schedule</button>
                        </div>
                    </div>

                    <div class="divider"></div>

                    <!-- Existing Schedules List -->
                    <div class="schedules-list-section">
                        <h3>Existing Schedules</h3>
                        @if (trainerSchedules == null || !trainerSchedules.Any())
                        {
                            <div class="empty-schedules">
                                <p>No schedules configured yet. Add a schedule above.</p>
                            </div>
                        }
                        else
                        {
                            <div class="schedules-table">
                                <table class="schedule-list-table">
                                    <thead>
                                        <tr>
                                            <th>Day</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var schedule in trainerSchedules.OrderBy(s => s.DayOfWeek).ThenBy(s => s.StartTime))
                                        {
                                            <tr>
                                                <td>@GetDayName(schedule.DayOfWeek)</td>
                                                <td>@FormatTimeWithAmPm(schedule.StartTime)</td>
                                                <td>@FormatTimeWithAmPm(schedule.EndTime)</td>
                                                <td>
                                                    <span class="status-badge @(schedule.IsAvailable ? "status-available" : "status-unavailable")">
                                                        @(schedule.IsAvailable ? "Available" : "Unavailable")
                                                    </span>
                                                </td>
                                                <td>
                                                    <button class="btn-small btn-danger" @onclick="() => DeleteSchedule(schedule)">Archive</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseScheduleModal">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string searchQuery = "";
    private bool showModal = false;
    private bool isEditMode = false;
    private Trainer currentTrainer = new Trainer();
    private List<Trainer> trainers = new List<Trainer>();
    private List<Trainer> filteredTrainers = new List<Trainer>();
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();
    private string TrainerContactNumberInput
    {
        get => currentTrainer.ContactNumber;
        set
        {
            var digits = new string((value ?? string.Empty).Where(char.IsDigit).Take(11).ToArray());
            currentTrainer.ContactNumber = digits;
        }
    }

    private bool showArchiveConfirmation = false;
    private Trainer? selectedTrainer;
    private bool isLoading = false;

    // Schedule Management
    private bool showScheduleModal = false;
    private Trainer? selectedTrainerForSchedule;
    private List<TrainerSchedule> trainerSchedules = new List<TrainerSchedule>();
    private TrainerSchedule newSchedule = new TrainerSchedule();
    private string scheduleError = "";

    // Helper properties for time input display formatting
    private string StartTimeString
    {
        get
        {
            var hours = newSchedule.StartTime.Hours.ToString("00");
            var minutes = newSchedule.StartTime.Minutes.ToString("00");
            return $"{hours}:{minutes}";
        }
    }
    
    private string EndTimeString
    {
        get
        {
            var hours = newSchedule.EndTime.Hours.ToString("00");
            var minutes = newSchedule.EndTime.Minutes.ToString("00");
            return $"{hours}:{minutes}";
        }
    }

    private void OnStartTimeChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        Console.WriteLine($"[DEBUG] OnStartTimeChanged called with value: {value}");
        if (!string.IsNullOrWhiteSpace(value) && TimeSpan.TryParse(value, out var parsedTime))
        {
            newSchedule.StartTime = parsedTime;
            Console.WriteLine($"[DEBUG] StartTime updated to: {newSchedule.StartTime} ({newSchedule.StartTime.TotalMinutes} minutes)");
            StateHasChanged();
        }
        else
        {
            Console.WriteLine($"[DEBUG] OnStartTimeChanged unable to parse '{value}'");
        }
    }

    private void OnEndTimeChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        Console.WriteLine($"[DEBUG] OnEndTimeChanged called with value: {value}");
        if (!string.IsNullOrWhiteSpace(value) && TimeSpan.TryParse(value, out var parsedTime))
        {
            newSchedule.EndTime = parsedTime;
            Console.WriteLine($"[DEBUG] EndTime updated to: {newSchedule.EndTime} ({newSchedule.EndTime.TotalMinutes} minutes)");
            StateHasChanged();
        }
        else
        {
            Console.WriteLine($"[DEBUG] OnEndTimeChanged unable to parse '{value}'");
        }
    }


    protected override async Task OnInitializedAsync()
    {
        await LoadTrainersFromDatabase();
    }

    private async Task LoadTrainersFromDatabase()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // FIXED: Use injected Context instead of creating new AppDbContext
            trainers = await Context.Trainers.ToListAsync();
            filteredTrainers = trainers;

            await JSRuntime.InvokeVoidAsync("console.log", $"Loaded {trainers.Count} trainers from database");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading trainers: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("console.error", $"Database error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredTrainers = trainers;
        }
        else
        {
            filteredTrainers = trainers.Where(t =>
                t.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                t.Specialty.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                t.ContactNumber.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void OpenAddTrainerModal()
    {
        isEditMode = false;
        currentTrainer = new Trainer();
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void EditTrainer(Trainer trainer)
    {
        isEditMode = true;
        currentTrainer = new Trainer
        {
            TrainerID = trainer.TrainerID,
            FirstName = trainer.FirstName,
            MiddleName = trainer.MiddleName,
            LastName = trainer.LastName,
            ContactNumber = trainer.ContactNumber,
            Specialty = trainer.Specialty
        };
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void ShowArchiveConfirmation(Trainer trainer)
    {
        selectedTrainer = trainer;
        showArchiveConfirmation = true;
        StateHasChanged();
    }

    private void CloseArchiveConfirmation()
    {
        showArchiveConfirmation = false;
        selectedTrainer = null;
        StateHasChanged();
    }

    private async Task ConfirmArchive()
    {
        if (selectedTrainer != null)
        {
            try
            {
                // FIXED: Use injected Context instead of creating new AppDbContext
                var trainer = await Context.Trainers.FindAsync(selectedTrainer.TrainerID);
                if (trainer != null)
                {
                    var trainerId = trainer.TrainerID;

                    // 1) Detach trainer from members (do NOT delete members)
                    var members = await Context.Members
                        .Where(m => m.TrainerID == trainerId)
                        .ToListAsync();
                    foreach (var member in members)
                    {
                        member.TrainerID = null;
                        member.TrainerScheduleID = null;
                    }

                    // 2) Detach trainer from walk-ins (do NOT delete walk-ins)
                    var walkins = await Context.WalkIns
                        .Where(w => w.TrainerID == trainerId)
                        .ToListAsync();
                    foreach (var walkin in walkins)
                    {
                        walkin.TrainerID = null;
                        walkin.TrainerScheduleID = null;
                    }

                    // 3) Remove any MemberTrainer join records for this trainer
                    var memberTrainers = await Context.MemberTrainers
                        .Where(mt => mt.TrainerID == trainerId)
                        .ToListAsync();
                    if (memberTrainers.Any())
                    {
                        Context.MemberTrainers.RemoveRange(memberTrainers);
                    }

                    // 4) Remove any trainer schedules
                    var schedules = await Context.TrainerSchedules
                        .Where(ts => ts.TrainerID == trainerId)
                        .ToListAsync();
                    if (schedules.Any())
                    {
                        Context.TrainerSchedules.RemoveRange(schedules);
                    }

                    // 5) Remove any linked user accounts that reference this trainer
                    var linkedUsers = await Context.Users
                        .Where(u => u.TrainerID == trainerId)
                        .ToListAsync();
                    if (linkedUsers.Any())
                    {
                        Context.Users.RemoveRange(linkedUsers);
                    }

                    // Save these dependency removals first so FK constraints are satisfied
                    await Context.SaveChangesAsync();

                    // 6) Finally remove the trainer record itself
                    Context.Trainers.Remove(trainer);

                    await Context.SaveChangesAsync();
                    await LoadTrainersFromDatabase();
                    CloseArchiveConfirmation();
                    // Use warning type for destructive-but-successful actions (red background with check)
                    ToastService.ShowWarning("Archived successfully");
                }
            }
            catch (Exception ex)
            {
                var inner = ex.InnerException?.Message ?? "No inner exception";
                var fullMessage = inner == "No inner exception"
                    ? ex.Message
                    : $"{ex.Message} | Inner: {inner}";
                ToastService.ShowError($"Error archiving trainer: {fullMessage}");
            }
        }
    }

    private void ValidateForm()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentTrainer.FirstName))
        {
            validationErrors["FirstName"] = "First name is required";
        }

        if (string.IsNullOrWhiteSpace(currentTrainer.LastName))
        {
            validationErrors["LastName"] = "Last name is required";
        }

        if (string.IsNullOrWhiteSpace(currentTrainer.ContactNumber))
        {
            validationErrors["ContactNumber"] = "Contact number is required";
        }
        else
        {
            var digitsOnly = new string(currentTrainer.ContactNumber.Where(char.IsDigit).ToArray());
            if (digitsOnly.Length != 11)
            {
                validationErrors["ContactNumber"] = "Contact number must be 11 digits";
            }
            else
            {
                currentTrainer.ContactNumber = digitsOnly;
            }
        }

        if (string.IsNullOrWhiteSpace(currentTrainer.Specialty))
        {
            validationErrors["Specialty"] = "Specialty is required";
        }

        if (validationErrors.Count > 0)
        {
            validationErrors["General"] = "Please fill in all required fields";
        }
    }

    // Helper method to capitalize first letter of each name
    private string CapitalizeName(string name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return name;
        
        name = name.Trim();
        if (name.Length == 0)
            return name;
        
        // Capitalize first letter, lowercase the rest
        return char.ToUpper(name[0]) + (name.Length > 1 ? name.Substring(1).ToLower() : "");
    }

    // Helper method to format trainer name for display with proper capitalization
    private string GetDisplayName(string firstName, string middleName, string lastName)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(firstName))
            parts.Add(CapitalizeName(firstName));
        if (!string.IsNullOrWhiteSpace(middleName))
            parts.Add(CapitalizeName(middleName));
        if (!string.IsNullOrWhiteSpace(lastName))
            parts.Add(CapitalizeName(lastName));
        
        return string.Join(" ", parts);
    }

    private async Task SaveTrainer()
    {
        ValidateForm();

        if (validationErrors.Count > 0)
        {
            StateHasChanged();
            return;
        }

        // Capitalize names before saving
        currentTrainer.FirstName = CapitalizeName(currentTrainer.FirstName);
        if (!string.IsNullOrWhiteSpace(currentTrainer.MiddleName))
        {
            currentTrainer.MiddleName = CapitalizeName(currentTrainer.MiddleName);
        }
        currentTrainer.LastName = CapitalizeName(currentTrainer.LastName);

        try
        {
            // FIXED: Use injected Context instead of creating new AppDbContext
            if (isEditMode)
            {
                var trainer = await Context.Trainers
                    .FirstOrDefaultAsync(t => t.TrainerID == currentTrainer.TrainerID);

                if (trainer == null)
                {
                    validationErrors["General"] = "Trainer not found. Please refresh the page.";
                    StateHasChanged();
                    return;
                }

                trainer.FirstName = currentTrainer.FirstName;
                trainer.MiddleName = currentTrainer.MiddleName;
                trainer.LastName = currentTrainer.LastName;
                trainer.ContactNumber = currentTrainer.ContactNumber;
                trainer.Specialty = currentTrainer.Specialty;

                await Context.SaveChangesAsync();
                ToastService.ShowSuccess("Updated successfully");
            }
            else
            {
                // Create new trainer
                Context.Trainers.Add(currentTrainer);
                await Context.SaveChangesAsync();

                // Automatically create linked user account for this trainer
                await CreateTrainerUserAccountAsync(currentTrainer);

                ToastService.ShowSuccess("Added successfully");
            }

            await LoadTrainersFromDatabase();
            CloseModal();
        }
        catch (Exception ex)
        {
            validationErrors["General"] = $"Error saving trainer: {ex.Message}";
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        currentTrainer = new Trainer();
        validationErrors.Clear();
        StateHasChanged();
    }

    private string GetSpecialtyClass(string specialty)
    {
        return $"specialty-{specialty.ToLower().Replace(" ", "-")}";
    }

    /// <summary>
    /// Automatically creates a User record for a new trainer so that
    /// the admin can manage the account (set password, etc.) in Settings.
    /// </summary>
    private async Task CreateTrainerUserAccountAsync(Trainer trainer)
    {
        try
        {
            // Avoid duplicate accounts for the same trainer
            var existingUser = await Context.Users.FirstOrDefaultAsync(u => u.TrainerID == trainer.TrainerID);
            if (existingUser != null)
            {
                return;
            }

            // Get Trainer role (fall back to RoleID = 0 if not found)
            var trainerRole = await Context.Roles.FirstOrDefaultAsync(r => r.RoleName == "Trainer");
            var roleId = trainerRole?.RoleID ?? 0;

            // Generate a simple username based on trainer name (admin can change later)
            var baseUsername = $"{trainer.FirstName}.{trainer.LastName}".Replace(" ", "").ToLower();
            var username = baseUsername;
            int counter = 1;
            while (await Context.Users.AnyAsync(u => u.Username == username))
            {
                username = $"{baseUsername}{counter++}";
            }

            var user = new User
            {
                Username = username,
                Password = "changeme", // Admin should reset in Account Management
                FirstName = trainer.FirstName,
                LastName = trainer.LastName,
                Email = string.Empty,
                RoleID = roleId,
                IsActive = true,
                TrainerID = trainer.TrainerID
            };

            // createdByUserId is not tracked currently; pass 0
            await UserService.CreateUserAsync(user, 0);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error creating trainer user account: {ex.Message}");
        }
    }

    // Schedule Management Methods
    private async Task OpenScheduleModal(Trainer trainer)
    {
        selectedTrainerForSchedule = trainer;
        newSchedule = new TrainerSchedule
        {
            TrainerID = trainer.TrainerID,
            DayOfWeek = 1, // Default to Monday
            StartTime = new TimeSpan(9, 0, 0), // 9:00 AM
            EndTime = new TimeSpan(11, 0, 0), // 11:00 AM
            IsAvailable = true
        };
        scheduleError = "";
        await LoadTrainerSchedules(trainer.TrainerID);
        showScheduleModal = true;
        StateHasChanged();
    }

    private void CloseScheduleModal()
    {
        showScheduleModal = false;
        selectedTrainerForSchedule = null;
