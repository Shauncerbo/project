    private async Task AddSchedule()
    {
        scheduleError = "";

        // Debug: Log the current newSchedule values
        Console.WriteLine($"[DEBUG] AddSchedule called - New Schedule: Day={newSchedule.DayOfWeek}, Start={newSchedule.StartTime} ({FormatTimeWithAmPm(newSchedule.StartTime)}), End={newSchedule.EndTime} ({FormatTimeWithAmPm(newSchedule.EndTime)})");

        // Validation
        if (selectedTrainerForSchedule == null)
        {
            scheduleError = "No trainer selected.";
            StateHasChanged();
            return;
        }

        // Validate that end time is after start time
        if (newSchedule.EndTime <= newSchedule.StartTime)
        {
            scheduleError = $"End time ({FormatTimeWithAmPm(newSchedule.EndTime)}) must be after start time ({FormatTimeWithAmPm(newSchedule.StartTime)}). Please check your time entries. Note: If you meant PM, make sure the time picker shows PM, not AM.";
            StateHasChanged();
            return;
        }

        // Check for overlapping schedules - only flag if times actually overlap on the same day
        // A trainer can have multiple schedules on the same day as long as times don't overlap
        // Two time ranges overlap if they share any common time period
        var sameDaySchedules = trainerSchedules
            .Where(s => s.DayOfWeek == newSchedule.DayOfWeek && s.IsAvailable)
            .ToList();
        
        Console.WriteLine($"[DEBUG] Found {sameDaySchedules.Count} existing schedules on {GetDayName(newSchedule.DayOfWeek)}");
        Console.WriteLine($"[DEBUG] New schedule: {GetDayName(newSchedule.DayOfWeek)} {FormatTimeWithAmPm(newSchedule.StartTime)} - {FormatTimeWithAmPm(newSchedule.EndTime)} ({newSchedule.StartTime.TotalMinutes} - {newSchedule.EndTime.TotalMinutes} minutes)");

        // Check for overlapping schedules - only flag if times actually overlap on the same day
        // A trainer can have multiple schedules on the same day as long as times don't overlap
        var hasOverlap = false;
        TrainerSchedule? conflictingSchedule = null;

        foreach (var existingSchedule in sameDaySchedules)
        {
            // Skip invalid existing schedules
            if (existingSchedule.EndTime <= existingSchedule.StartTime)
            {
                Console.WriteLine($"[DEBUG] Skipping invalid schedule: {FormatTimeWithAmPm(existingSchedule.StartTime)} - {FormatTimeWithAmPm(existingSchedule.EndTime)}");
                continue;
            }
            
            var newStartMinutes = newSchedule.StartTime.TotalMinutes;
            var newEndMinutes = newSchedule.EndTime.TotalMinutes;
            var existingStartMinutes = existingSchedule.StartTime.TotalMinutes;
            var existingEndMinutes = existingSchedule.EndTime.TotalMinutes;
            
            // Two time ranges overlap if they share any common time period
            // Overlap formula: newStart < existingEnd AND newEnd > existingStart
            // This means:
            // - New schedule starts before existing schedule ends, AND
            // - New schedule ends after existing schedule starts
            // Examples:
            // - 9am-11am (540-660) and 10am-12pm (600-720): overlap (600-660 is common) ✓
            // - 9am-11am (540-660) and 12pm-1pm (720-780): NO overlap (720 is NOT < 660) ✓
            // - 9am-11am (540-660) and 8am-10am (480-600): overlap (540-600 is common) ✓
            
            // Check for overlap: ranges overlap if newStart < existingEnd AND newEnd > existingStart
            bool overlaps = (newStartMinutes < existingEndMinutes) && (newEndMinutes > existingStartMinutes);
            
            Console.WriteLine($"[DEBUG] Comparing: New ({FormatTimeWithAmPm(newSchedule.StartTime)} - {FormatTimeWithAmPm(newSchedule.EndTime)}, {newStartMinutes}-{newEndMinutes} min)");
            Console.WriteLine($"[DEBUG]          vs Existing ({FormatTimeWithAmPm(existingSchedule.StartTime)} - {FormatTimeWithAmPm(existingSchedule.EndTime)}, {existingStartMinutes}-{existingEndMinutes} min)");
            Console.WriteLine($"[DEBUG]   Condition 1: {newStartMinutes} < {existingEndMinutes} = {newStartMinutes < existingEndMinutes}");
            Console.WriteLine($"[DEBUG]   Condition 2: {newEndMinutes} > {existingStartMinutes} = {newEndMinutes > existingStartMinutes}");
            Console.WriteLine($"[DEBUG]   RESULT: overlaps = {overlaps}");
            
            if (overlaps)
            {
                hasOverlap = true;
                conflictingSchedule = existingSchedule;
                Console.WriteLine($"[DEBUG] *** OVERLAP DETECTED! Breaking loop. ***");
                break;
            }
            else
            {
                Console.WriteLine($"[DEBUG] No overlap - schedules can coexist on same day.");
            }
        }

        if (hasOverlap && conflictingSchedule != null)
        {
            scheduleError = $"This schedule ({FormatTimeWithAmPm(newSchedule.StartTime)} - {FormatTimeWithAmPm(newSchedule.EndTime)}) overlaps with an existing schedule ({GetDayName(conflictingSchedule.DayOfWeek)} {FormatTimeWithAmPm(conflictingSchedule.StartTime)} - {FormatTimeWithAmPm(conflictingSchedule.EndTime)}). Please choose a different time.";
            StateHasChanged();
            return;
        }

        try
        {
            newSchedule.TrainerID = selectedTrainerForSchedule.TrainerID;
            Context.TrainerSchedules.Add(newSchedule);
            await Context.SaveChangesAsync();

            // Reset form
            newSchedule = new TrainerSchedule
            {
                TrainerID = selectedTrainerForSchedule.TrainerID,
                DayOfWeek = 1,
                StartTime = new TimeSpan(9, 0, 0),
                EndTime = new TimeSpan(11, 0, 0),
                IsAvailable = true
            };

            await LoadTrainerSchedules(selectedTrainerForSchedule.TrainerID);
            ToastService.ShowSuccess("Added successfully");
        }
        catch (Exception ex)
        {
            scheduleError = $"Error adding schedule: {ex.Message}";
            ToastService.ShowError($"Error adding schedule: {ex.Message}");
        }

        StateHasChanged();
    }

    private async Task DeleteSchedule(TrainerSchedule schedule)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Delete schedule: {GetDayName(schedule.DayOfWeek)} {FormatTimeWithAmPm(schedule.StartTime)} - {FormatTimeWithAmPm(schedule.EndTime)}?");

        if (!confirm)
            return;

        try
        {
            var scheduleToDelete = await Context.TrainerSchedules.FindAsync(schedule.TrainerScheduleID);
            if (scheduleToDelete != null)
            {
                Context.TrainerSchedules.Remove(scheduleToDelete);
                await Context.SaveChangesAsync();
                await LoadTrainerSchedules(selectedTrainerForSchedule!.TrainerID);
                ToastService.ShowSuccess("Archived successfully");
            }
        }
        catch (Exception ex)
        {
            scheduleError = $"Error deleting schedule: {ex.Message}";
            ToastService.ShowError($"Error deleting schedule: {ex.Message}");
            StateHasChanged();
        }
    }

    private string GetDayName(byte dayOfWeek)
    {
        return dayOfWeek switch
        {
            0 => "Sunday",
            1 => "Monday",
            2 => "Tuesday",
            3 => "Wednesday",
            4 => "Thursday",
            5 => "Friday",
            6 => "Saturday",
            _ => "Unknown"
        };
    }

    private string FormatTimeWithAmPm(TimeSpan time)
    {
        var hours = time.Hours;
        var minutes = time.Minutes;
        var period = hours >= 12 ? "PM" : "AM";
        var displayHours = hours % 12;
        if (displayHours == 0) displayHours = 12; // 12:00 should show as 12, not 0
        return $"{displayHours:00}:{minutes:00} {period}";
    }
