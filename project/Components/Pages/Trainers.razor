@page "/trainers"
@layout MainLayout
@using System.Diagnostics
@inject IJSRuntime JSRuntime
@inject AppDbContext Context
@using project.Models
@using project.Data
@using Microsoft.EntityFrameworkCore

<div class="members-container">
    <!-- Loading Indicator -->
    @if (isLoading)
    {
        <div class="loading-overlay">
            <div class="loading-spinner">Loading trainers...</div>
        </div>
    }

    <!-- Page Header - No gaps with sidebar and top -->
    <div class="page-header">
        <h1 class="page-title">Trainer Management</h1>
        <div class="header-actions">
            <input type="text"
                   class="search-bar"
                   placeholder="Search Trainer..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearch" />
            <button class="add-member-btn" @onclick="OpenAddTrainerModal">+ Add Trainer</button>
        </div>
    </div>

    <!-- Trainers Data Table -->
    <div class="table-container">
        <table class="members-table">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>SPECIALTY</th>
                    <th>CONTACT NUMBER</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredTrainers == null || !filteredTrainers.Any())
                {
                    <tr>
                        <td colspan="4" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">🏋️</span>
                                <p>No trainers found</p>
                                <p class="no-data-sub">Add your first trainer to get started</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var trainer in filteredTrainers)
                    {
                        <tr>
                            <td>
                                <div class="member-info">
                                    <div class="member-avatar">@trainer.FullName.Substring(0, 1).ToUpper()</div>
                                    <span>@trainer.FullName</span>
                                </div>
                            </td>
                            <td>
                                <span class="membership-badge @GetSpecialtyClass(trainer.Specialty)">
                                    @trainer.Specialty
                                </span>
                            </td>
                            <td>@trainer.ContactNumber</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" @onclick="() => EditTrainer(trainer)" title="Edit">
                                        <img src="/edit_icon.svg" class="action-icon" alt="Edit" />
                                    </button>
                                    <button class="action-btn archive-btn" @onclick="() => ShowArchiveConfirmation(trainer)" title="Archive">
                                        <img src="/archived_icon.svg" class="action-icon" alt="Archive" />
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Add/Edit Trainer Modal -->
    @if (showModal)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Trainer" : "Add New Trainer")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">
                    <!-- Name Fields -->
                    <div class="form-row">
                        <div class="form-group">
                            <label class="required">First Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("FirstName") ? "error" : "")"
                                   @bind="currentTrainer.FirstName"
                                   placeholder="Enter first name" />
                            @if (validationErrors.ContainsKey("FirstName"))
                            {
                                <div class="error-message">@validationErrors["FirstName"]</div>
                            }
                        </div>
                        <div class="form-group">
                            <label>Middle Name</label>
                            <input type="text"
                                   class="form-control"
                                   @bind="currentTrainer.MiddleName"
                                   placeholder="Enter middle name (optional)" />
                        </div>
                        <div class="form-group">
                            <label class="required">Last Name</label>
                            <input type="text"
                                   class="form-control @(validationErrors.ContainsKey("LastName") ? "error" : "")"
                                   @bind="currentTrainer.LastName"
                                   placeholder="Enter last name" />
                            @if (validationErrors.ContainsKey("LastName"))
                            {
                                <div class="error-message">@validationErrors["LastName"]</div>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="required">Contact Number</label>
                        <input type="tel"
                               class="form-control @(validationErrors.ContainsKey("ContactNumber") ? "error" : "")"
                               @bind="currentTrainer.ContactNumber"
                               placeholder="Enter contact number" />
                        @if (validationErrors.ContainsKey("ContactNumber"))
                        {
                            <div class="error-message">@validationErrors["ContactNumber"]</div>
                        }
                    </div>

                    <div class="form-group">
                        <label class="required">Specialty</label>
                        <div class="select-wrapper">
                            <select class="form-control select-dropdown @(validationErrors.ContainsKey("Specialty") ? "error" : "")"
                                    @bind="currentTrainer.Specialty">
                                <option value="">Select specialty</option>
                                <option value="Strength Training">Strength Training</option>
                                <option value="Cardio">Cardio</option>
                                <option value="Yoga">Yoga</option>
                                <option value="Pilates">Pilates</option>
                                <option value="CrossFit">CrossFit</option>
                                <option value="Personal Training">Personal Training</option>
                            </select>
                            <span class="dropdown-arrow">▼</span>
                        </div>
                        @if (validationErrors.ContainsKey("Specialty"))
                        {
                            <div class="error-message">@validationErrors["Specialty"]</div>
                        }
                    </div>

                    <!-- General error message -->
                    @if (validationErrors.ContainsKey("General"))
                    {
                        <div class="general-error-message">
                            @validationErrors["General"]
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="SaveTrainer">
                        @(isEditMode ? "Update" : "Add") Trainer
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Archive Confirmation Modal -->
    @if (showArchiveConfirmation)
    {
        <div class="modal-overlay" @onclick="CloseArchiveConfirmation">
            <div class="modal-content confirmation-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>Archive Trainer</h2>
                    <button class="close-btn" @onclick="CloseArchiveConfirmation">×</button>
                </div>

                <div class="modal-body">
                    <div class="confirmation-content text-only">
                        <h3>Archive Trainer</h3>
                        <p>You are about to archive <strong>@selectedTrainer?.FullName</strong>.</p>
                        <p class="confirmation-warning">This will remove the trainer from the active list. Continue?</p>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseArchiveConfirmation">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmArchive">Yes, Archive Trainer</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string searchQuery = "";
    private bool showModal = false;
    private bool isEditMode = false;
    private Trainer currentTrainer = new Trainer();
    private List<Trainer> trainers = new List<Trainer>();
    private List<Trainer> filteredTrainers = new List<Trainer>();
    private Dictionary<string, string> validationErrors = new Dictionary<string, string>();
    private bool showArchiveConfirmation = false;
    private Trainer? selectedTrainer;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTrainersFromDatabase();
    }

    private async Task LoadTrainersFromDatabase()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // FIXED: Use injected Context instead of creating new AppDbContext
            trainers = await Context.Trainers.ToListAsync();
            filteredTrainers = trainers;

            await JSRuntime.InvokeVoidAsync("console.log", $"Loaded {trainers.Count} trainers from database");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading trainers: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("console.error", $"Database error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredTrainers = trainers;
        }
        else
        {
            filteredTrainers = trainers.Where(t =>
                t.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                t.Specialty.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                t.ContactNumber.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void OpenAddTrainerModal()
    {
        isEditMode = false;
        currentTrainer = new Trainer();
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void EditTrainer(Trainer trainer)
    {
        isEditMode = true;
        currentTrainer = new Trainer
        {
            TrainerID = trainer.TrainerID,
            FirstName = trainer.FirstName,
            MiddleName = trainer.MiddleName,
            LastName = trainer.LastName,
            ContactNumber = trainer.ContactNumber,
            Specialty = trainer.Specialty
        };
        validationErrors.Clear();
        showModal = true;
        StateHasChanged();
    }

    private void ShowArchiveConfirmation(Trainer trainer)
    {
        selectedTrainer = trainer;
        showArchiveConfirmation = true;
        StateHasChanged();
    }

    private void CloseArchiveConfirmation()
    {
        showArchiveConfirmation = false;
        selectedTrainer = null;
        StateHasChanged();
    }

    private async Task ConfirmArchive()
    {
        if (selectedTrainer != null)
        {
            try
            {
                // FIXED: Use injected Context instead of creating new AppDbContext
                var trainer = await Context.Trainers.FindAsync(selectedTrainer.TrainerID);
                if (trainer != null)
                {
                    Context.Trainers.Remove(trainer);
                    await Context.SaveChangesAsync();
                    await LoadTrainersFromDatabase();
                    CloseArchiveConfirmation();
                    await JSRuntime.InvokeVoidAsync("alert", "Trainer archived successfully!");
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error archiving trainer: {ex.Message}");
            }
        }
    }

    private void ValidateForm()
    {
        validationErrors.Clear();

        if (string.IsNullOrWhiteSpace(currentTrainer.FirstName))
        {
            validationErrors["FirstName"] = "First name is required";
        }

        if (string.IsNullOrWhiteSpace(currentTrainer.LastName))
        {
            validationErrors["LastName"] = "Last name is required";
        }

        if (string.IsNullOrWhiteSpace(currentTrainer.ContactNumber))
        {
            validationErrors["ContactNumber"] = "Contact number is required";
        }

        if (string.IsNullOrWhiteSpace(currentTrainer.Specialty))
        {
            validationErrors["Specialty"] = "Specialty is required";
        }

        if (validationErrors.Count > 0)
        {
            validationErrors["General"] = "Please fill in all required fields";
        }
    }

    private async Task SaveTrainer()
    {
        ValidateForm();

        if (validationErrors.Count > 0)
        {
            StateHasChanged();
            return;
        }

        try
        {
            // FIXED: Use injected Context instead of creating new AppDbContext
            if (isEditMode)
            {
                Context.Trainers.Update(currentTrainer);
                await Context.SaveChangesAsync();
                await JSRuntime.InvokeVoidAsync("alert", "Trainer updated successfully!");
            }
            else
            {
                Context.Trainers.Add(currentTrainer);
                await Context.SaveChangesAsync();
                await JSRuntime.InvokeVoidAsync("alert", "Trainer added successfully!");
            }

            await LoadTrainersFromDatabase();
            CloseModal();
        }
        catch (Exception ex)
        {
            validationErrors["General"] = $"Error saving trainer: {ex.Message}";
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        currentTrainer = new Trainer();
        validationErrors.Clear();
        StateHasChanged();
    }

    private string GetSpecialtyClass(string specialty)
    {
        return $"specialty-{specialty.ToLower().Replace(" ", "-")}";
    }
}

