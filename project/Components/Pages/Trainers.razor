@code {
    private string searchQuery = "";
    private bool showModal = false;
    private bool isEditMode = false;
    private Trainer currentTrainer = new Trainer();
    private List<Trainer> trainers = new List<Trainer>();
    private List<Trainer> filteredTrainers = new List<Trainer>();

    protected override void OnInitialized()
    {
        LoadSampleData();
        filteredTrainers = trainers;
    }

    private void LoadSampleData()
    {
        trainers = new List<Trainer>
        {
            new Trainer {
                TrainerId = "TR001",
                FirstName = "John",
                MiddleName = "Michael",
                LastName = "Doe",
                FullName = "John Michael Doe",
                ContactNumber = "09123456789",
                Specialty = "Strength Training"
            },
            new Trainer {
                TrainerId = "TR002",
                FirstName = "Jane",
                MiddleName = "Elizabeth",
                LastName = "Smith",
                FullName = "Jane Elizabeth Smith",
                ContactNumber = "09123456790",
                Specialty = "Yoga"
            },
            new Trainer {
                TrainerId = "TR003",
                FirstName = "Mike",
                MiddleName = "Robert",
                LastName = "Johnson",
                FullName = "Mike Robert Johnson",
                ContactNumber = "09123456791",
                Specialty = "Cardio"
            }
        };
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredTrainers = trainers;
        }
        else
        {
            filteredTrainers = trainers.Where(t =>
                t.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                t.TrainerId.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                t.Specialty.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }

    private void OpenAddTrainerModal()
    {
        isEditMode = false;
        currentTrainer = new Trainer
        {
            TrainerId = $"TR{(trainers.Count + 1):D3}"
        };
        showModal = true;
        StateHasChanged();
    }

    private void EditTrainer(Trainer trainer)
    {
        isEditMode = true;
        currentTrainer = new Trainer
        {
            TrainerId = trainer.TrainerId,
            FirstName = trainer.FirstName,
            MiddleName = trainer.MiddleName,
            LastName = trainer.LastName,
            ContactNumber = trainer.ContactNumber,
            Specialty = trainer.Specialty
        };
        showModal = true;
        StateHasChanged();
    }

    private void DeleteTrainer(Trainer trainer)
    {
        trainers.Remove(trainer);
        HandleSearch();
        StateHasChanged();
    }

    private void SaveTrainer()
    {
        // Validation for required fields
        if (string.IsNullOrWhiteSpace(currentTrainer.FirstName) ||
            string.IsNullOrWhiteSpace(currentTrainer.LastName) ||
            string.IsNullOrWhiteSpace(currentTrainer.ContactNumber) ||
            string.IsNullOrWhiteSpace(currentTrainer.Specialty))
        {
            // Show error message or validation feedback
            return;
        }

        if (isEditMode)
        {
            var existingTrainer = trainers.FirstOrDefault(t => t.TrainerId == currentTrainer.TrainerId);
            if (existingTrainer != null)
            {
                existingTrainer.FirstName = currentTrainer.FirstName;
                existingTrainer.MiddleName = currentTrainer.MiddleName;
                existingTrainer.LastName = currentTrainer.LastName;
                existingTrainer.ContactNumber = currentTrainer.ContactNumber;
                existingTrainer.Specialty = currentTrainer.Specialty;
                // Update FullName for display
                existingTrainer.FullName = $"{currentTrainer.FirstName} {currentTrainer.MiddleName} {currentTrainer.LastName}".Trim();
            }
        }
        else
        {
            // Set FullName for display
            currentTrainer.FullName = $"{currentTrainer.FirstName} {currentTrainer.MiddleName} {currentTrainer.LastName}".Trim();
            trainers.Add(currentTrainer);
        }

        HandleSearch();
        CloseModal();
    }

    private void CloseModal()
    {
        showModal = false;
        currentTrainer = new Trainer();
        StateHasChanged();
    }

    private string GetSpecialtyClass(string specialty)
    {
        return $"specialty-{specialty.ToLower().Replace(" ", "-")}";
    }

    public class Trainer
    {
        public string TrainerId { get; set; } = "";
        public string FirstName { get; set; } = "";
        public string MiddleName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string FullName { get; set; } = "";
        public string ContactNumber { get; set; } = "";
        public string Specialty { get; set; } = "";
    }
}